;PTメンバーに指定IDキャラが居るかどうかを確認する
;ARG:0	確認したいID
@CHECK_MEMBER_FROM_ID(ARG:0)
#FUNCTION
SIF ARG:0 == 0
	RETURNF 0
	
FOR LOCAL:0, 0, 3
	IF GET_MEMBER(LOCAL:0) == ARG:0
		RETURNF LOCAL:0 + 1
	ENDIF
NEXT

RETURNF 0


