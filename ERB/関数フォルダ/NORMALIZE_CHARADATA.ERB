
; キャラクタ全体のデータを正規化
; あり得ない値等を補正します
@NORMALIZE_CHARADATA
#DIM LCOUNT
	FOR LCOUNT, 1, CHARANUM
		CALL NORMALIZE_CHARADATA_SINGLE(LCOUNT)
	NEXT
RETURN

