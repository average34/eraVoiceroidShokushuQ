@ADD_BP(キャラID,追加量)
#DIM キャラID
#DIM 追加量
	IF FLAG:528 == 0
		CFLAG:(キャラID):49 = 0
		RETURN -1
	ENDIF
	CFLAG:(キャラID):49 += 追加量
	IF CFLAG:(キャラID):49 >= 5
		CFLAG:(キャラID):49 = 5
	ENDIF
	
@UPDATE_BP(キャラID)
#DIM キャラID
	IF FLAG:528 == 0
		CFLAG:(キャラID):49 = 0
		RETURN
	ENDIF
	IF CFLAG:(キャラID):49 > 0
		CFLAG:(キャラID):49 += 1
	ENDIF
	IF CFLAG:(キャラID):49 >= 5
		CFLAG:(キャラID):49 = 5
	ENDIF

RETURN
