@DOUKA_MODE_ON()
#FUNCTION

IF FLAG:540 == 0
	RETURNF 0
ELSE
	RETURNF 1
ENDIF
;=================================================
;同化率効果＿妊娠率補正（AFTER_BATTLE時）
;ARG:0	キャラID
;ARG:1	現状妊娠確率(25～95)
;RESULT:1	加算妊娠確率
;=================================================
@DOUKA_EFFECT_1(ARG, ARG:1)
;パッチ動作
SIF DOUKA_MODE_ON() == 0
	RETURN -1
;エラー予防
SIF ARG:0 <= 0 || ARG:0 >= CHARANUM
	RETURN -1

LOCAL = 0

SELECTCASE CFLAG:ARG:触手同化率
CASE IS >= 900
	LOCAL = 15
	
CASE IS >= 500
	LOCAL = 10
	
CASE IS >= 300
	LOCAL = 5
	
ENDSELECT

RETURN 1, LOCAL
