;スライム服
@SYSTEM_MESSAGE_443(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	;スライムイベントによる発生
	IF ARG:1 == 0
		PRINTFORML スライムが%ARGS:0%の身体にまとわりついた…
IF FLAG:AUTOMODE
    PRINTFORML 
    TWAIT FLAG:AUTOMODE * 400, 0
ELSE
    PRINTFORMW  
ENDIF

	;スライム系を倒した場合
	ELSEIF ARG:1 == 1
		PRINTFORML %ARGS:0%の身体にスライムの破片がまとわりついた……
IF FLAG:AUTOMODE
    PRINTFORML 
    TWAIT FLAG:AUTOMODE * 400, 0
ELSE
    PRINTFORMW  
ENDIF

	ENDIF


