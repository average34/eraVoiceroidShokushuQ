;捕食開始時の描写
@SYSTEM_MESSAGE_150(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

SELECTCASE ARG:1
	CASE 0
IF FLAG:AUTOMODE
    PRINTFORML (SYSTEM_MESSAGE_150)敵のIDが不正です ({ARG:1}, %ARGS:0%, %ARGS:1%, {ARG:2}, {ARG:3}, {ARG:4}, {ARG:5}, {ARG:6})
    TWAIT FLAG:AUTOMODE * 400, 0
ELSE
    PRINTFORMW  (SYSTEM_MESSAGE_150)敵のIDが不正です ({ARG:1}, %ARGS:0%, %ARGS:1%, {ARG:2}, {ARG:3}, {ARG:4}, {ARG:5}, {ARG:6})
ENDIF

	CASEELSE
IF FLAG:AUTOMODE
    PRINTFORML 打ち捨てられていた%ARGS:0%は、新しく現れた%ARGS:1%に何の抵抗もできないまま捕まってしまった…
    TWAIT FLAG:AUTOMODE * 400, 0
ELSE
    PRINTFORMW  打ち捨てられていた%ARGS:0%は、新しく現れた%ARGS:1%に何の抵抗もできないまま捕まってしまった…
ENDIF

ENDSELECT

