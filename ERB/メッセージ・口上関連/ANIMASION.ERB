;各フェイズのメイン処理
@ANIMATION
#DIM LCOUNT,3	;ループ用
#DIM Y_POS
#DIM CHARA_ID
#DIM LOOP_TIME

IF FLAG:AUTOMODE
	TWAIT FLAG:AUTOMODE * 400, 0
ELSE
	FORCEWAIT
ENDIF

IF FLAG:597 <= 0
	LOOP_TIME = 80
ELSE
	LOOP_TIME = FLAG:597
ENDIF

FOR LCOUNT, 0, 23
	PRINTL
NEXT
FOR LCOUNT:1, 0, LOOP_TIME
	FOR LCOUNT, 0, 90
		IF LCOUNT >= 10
			STR:3 = {LCOUNT}
		ELSE
			STR:3 = 0{LCOUNT}
		ENDIF
		Y_POS = -2300
		SPRITECREATED @"ANIME%STR:3%_%STR:0%_%STR:1%_%STR:2%"
		IF RESULT
			HTML_PRINT @"<img src='%"ANIME"+STR:3+"_"+STR:0+"_"+STR:1+"_"+STR:2%' height='2500' ypos = '{Y_POS}'>"
			TWAIT 10, 0
			CLEARLINE 1
		ELSE
			SPRITECREATED @"ANIME%STR:3%_%STR:0%_%STR:1%"
			IF RESULT
				HTML_PRINT @"<img src='%"ANIME"+STR:3+"_"+STR:0+"_"+STR:1%' height='2500' ypos = '{Y_POS}'>"
				TWAIT 10, 0
				CLEARLINE 1
			ELSE
				CONTINUE
			ENDIF
		ENDIF
	NEXT
NEXT

