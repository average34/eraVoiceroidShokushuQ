;現在の刻印を表示

@SHOW_MARK_LIST(ARG:0)
;ARG:0	対象キャラID

PRINTFORML 入手済み屈服刻印
FOR LOCAL:0, 0, 22
	IF MARK:(ARG:0):(LOCAL:0)
		IF LOCAL:0 != 20
			PRINTFORM %MARKNAME:(LOCAL:0),16,LEFT%
		;ペットに完全敗北した時の刻印なのでペット名を表示する
		ELSEIF LOCAL:0 == 20
			PRINTFORM %PETNAME,16,LEFT%
		ENDIF
		IF CFLAG:(ARG:0):(210 + LOCAL:0)
			PRINTFORM {CFLAG:(ARG:0):(210 + LOCAL:0)}日目に
		ENDIF
		IF CFLAG:(ARG:0):(211 + LOCAL:0)
			PRINTFORM %ENEMY_NAME(CFLAG:(ARG:0):(211 + LOCAL:0))%により
		ENDIF
		PRINTFORML 心に刻まれた
	ELSE
		SETCOLOR 0x333333
		PRINTFORML ---
		RESETCOLOR
	ENDIF
NEXT
PRINTL
