PET:99 = 1
CALL PRINT_MESSAGE(-1, 400)

VARSET LOCAL
SIF !CFLAG:1:29
	LOCAL = RAND:100
SIF FLAG:10 && !CFLAG:(FLAG:10):29
	LOCAL:1 = RAND:100
