@FIX_PET_ACTION_214
;威力
PET:90 = 60
;命中率
PET:91 = 45
;種別 0攻撃　1回復HP 2回復MP　3回復TP
PET:92 = 0
;対象全体フラグ
PET:93 = 0
;行動の回数　0なら1
PET:94 = 1
