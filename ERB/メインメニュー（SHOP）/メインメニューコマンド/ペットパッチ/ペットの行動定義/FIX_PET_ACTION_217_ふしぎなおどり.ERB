;ふしぎなおどり
@FIX_PET_ACTION_217
#DIM LCOUNT
;メイン処理回避フラグ　これ立てる場合は全部関数内で処理つくること。
PET:99 = 1
CALL PRINT_MESSAGE(-1, 400)

FOR LCOUNT, 1, TFLAG:15 + 1
	;死体殴り防止
	SIF DA:(TFLAG:LCOUNT):1 <= 0
		CONTINUE
	IF DA:(TFLAG:LCOUNT):5 >= 50
		PRINTFORML %SAVESTR:(TFLAG:LCOUNT)%の戦闘素質を引き下げた！
		DA:(TFLAG:LCOUNT):5 -= RAND:5 + 1
	ELSE
		PRINTFORML %SAVESTR:(TFLAG:LCOUNT)%の戦闘素質はこれ以上下がらない！
	ENDIF
NEXT

PRINTFORML %CALLNAME:1%のテンションが下がった！
BASE:1:4 = MAX(BASE:1:4 - 35, 0)
IF FLAG:10
	PRINTFORML %CALLNAME:(FLAG:10)%のテンションが下がった！
	BASE:(FLAG:10):4 = MAX(BASE:(FLAG:10):4 - 35, 0)
ENDIF
IF FLAG:11
	PRINTFORML %CALLNAME:(FLAG:11)%のテンションが下がった！
	BASE:(FLAG:11):4 = MAX(BASE:(FLAG:11):4 - 35, 0)
ENDIF