;恐怖の叫び
@FIX_PET_ACTION_208
#DIM LCOUNT
;威力
PET:90 = 60
;命中率
PET:91 = 45
;種別 0攻撃　1回復HP 2回復MP　3回復TP
PET:92 = 0
;対象全体フラグ
PET:93 = 0
;行動の回数　0なら1
PET:94 = 1
;特殊フラグ　コレに応じたEXTRA_PET_ACTIONが呼ばれるます
PET:98 = 0
;メイン処理回避フラグ　これ立てる場合は全部関数内で処理つくること。
PET:99 = 1
CALL PRINT_MESSAGE(-1, 400)

FOR LCOUNT, 1, TFLAG:15 + 1
	;死体殴り防止
	SIF DA:(TFLAG:LCOUNT):1 <= 0
		CONTINUE
	IF RAND:100 >= (30 + DA:(TFLAG:LCOUNT):14)
		CONTINUE
	ENDIF
	PRINTFORML %SAVESTR:(TFLAG:LCOUNT)%をひるませた！
	DA:(TFLAG:LCOUNT):24 = 1
	DA:(TFLAG:LCOUNT):50 = 45
NEXT

;味方は50%
IF RAND:100 >= 50
	PRINTFORML %CALLNAME:1%はひるんだ！
	CFLAG:1:24 = 1
	CFLAG:1:50 = 45
ENDIF
IF RAND:100 >= 50 && FLAG:10
	PRINTFORML %CALLNAME:(FLAG:10)%はひるんだ！
	CFLAG:(FLAG:10):24 = 1
	CFLAG:(FLAG:10):50 = 45
ENDIF
IF RAND:100 >= 50 && FLAG:11
	PRINTFORML %CALLNAME:(FLAG:11)%はひるんだ！
	CFLAG:(FLAG:11):24 = 1
	CFLAG:(FLAG:11):50 = 45
ENDIF