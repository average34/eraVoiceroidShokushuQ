;-------------
@SHOW_PET_STATUS
PRINTFORML %"【"+PETNAME+"】"% 種族:%ENEMY_NAME(PET:0)%  腹:%PET_STARVE_STR()%
PRINTFORML (ランク{PET:1, 2}/レベル{PET:2, 4}/戦闘{PET:10, 4}/速度{PET:11, 4}/やる気{PET:12, 4}/カッコよさ{PET:13, 4}/栄養:{PET:21,4})


;-------------
;PTメンの合計屈服度を計算する式中関数
;GET_MEMBER_SUMなどと併用するとよい
;-------------
@PET_SUBMISSION_PT
#FUNCTION
VARSET LOCAL
LOCAL += CFLAG:1:400
IF FLAG:10
	LOCAL += CFLAG:(FLAG:10):400
ENDIF
IF FLAG:11
	LOCAL += CFLAG:(FLAG:11):400
ENDIF
RETURNF LOCAL

;-------------
;屈服度を表す式中関数
;-------------
@PET_SUBMISSION_STR(ARG:0)
#FUNCTIONS
IF TALENT:(ARG:0):ペット == 1
	RETURNF "雌犬"
ELSEIF TALENT:(ARG:0):ペット == 2
	RETURNF "花嫁"
ELSEIF TALENT:(ARG:0):ペット == 3
	RETURNF "しもべ"
ENDIF
SELECTCASE CFLAG:(ARG:0):400
	CASE IS >= 90
		RETURNF UNICODE(0x2661)
	CASE IS >= 70
		RETURNF "堕ちかけ"
	CASE IS >= 50
		RETURNF "中毒気味"
	CASE IS >= 30
		RETURNF "ハマった"
	CASE IS >= 0
		RETURNF "清純"
ENDSELECT

;-------------
;屈服度を減らす処理
;-------------
@PET_DECREASE_SUBMISSION
#DIM LCOUNT
VARSET LOCAL
FOR LCOUNT, 0, CHARANUM
	IF TALENT:LCOUNT:ペット
		CFLAG:LCOUNT:400 -= MAX(RAND:4, 1)
	ELSE
		CFLAG:LCOUNT:400 -= MAX(RAND:5 + 1, 3)
	ENDIF
NEXT
CALL LIMIT_PET_STATUS

;-------------
;ペットのハラヘリ具合を確認する式中関数
;返り値3,2,1,0でそれぞれ満腹、腹八分、普通、ハラヘリ
;-------------
@PET_STARVE
#FUNCTION
IF PET:20 >= 85
	RETURNF 3
ELSEIF PET:20 >= 70
	RETURNF 2
ELSEIF PET:20 >= 30
	RETURNF 1
ELSE
	RETURNF 0
ENDIF


;-------------
;ペットのハラヘリ具合を確認する式中関数
;満腹度はマスクデータにしたいので、ステータス表示などで利用する際はこちらをどうぞ
;-------------
@PET_STARVE_STR
#FUNCTIONS
SELECTCASE PET:20
	CASE IS >= 85
		RETURNF "おなかいっぱい！"
	CASE IS >= 70
		RETURNF "そこそこいっぱい"
	CASE IS >= 30
		RETURNF "ふつう"
	CASEELSE
		RETURNF "おなかすいたー"
ENDSELECT

;-------------
;ペットが空腹になっていく処理
;-------------
@PET_DECREASE_SATIETY
VARSET LOCAL
SELECTCASE PET:1
	CASE 1, 2, 3
		LOCAL = 5
	CASE 4, 5
		LOCAL = 5
	CASE 6, 7
		LOCAL = 10
ENDSELECT

SELECTCASE PET_STARVE()
	CASE 3
		LOCAL += RAND:4 + 4
	CASE 2
		LOCAL += RAND:3 + 3
	CASE 1
		LOCAL += RAND:2 + 2
	CASE 0
		LOCAL += 0
ENDSELECT

PET:20 -= LOCAL
CALL LIMIT_PET_STATUS

