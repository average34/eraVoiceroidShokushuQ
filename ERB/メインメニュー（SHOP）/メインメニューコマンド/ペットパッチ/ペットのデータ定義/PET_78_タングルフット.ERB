;行動ルーチン
@SELECT_PET_ACTION_78
SELECTCASE PET:1
	CASE 1, 2, 3
		SELECTCASE RAND:100 + 1
			CASE 1 TO 80
				PET:50 = 100
			CASEELSE
				PET:50 = 109
		ENDSELECT
	CASE 4, 5
		SELECTCASE RAND:100 + 1
			CASE 1 TO 70
				PET:50 = 120
			CASE 71 TO 90
				PET:50 = 129
			CASEELSE
				PET:50 = 201
		ENDSELECT
	CASE 6, 7
		SELECTCASE RAND:100 + 1
			CASE 1 TO 60
				PET:50 = 140
			CASE 61 TO 80
				PET:50 = 129
			CASEELSE
				PET:50 = 201
		ENDSELECT
ENDSELECT


