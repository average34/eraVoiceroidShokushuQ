;行動ルーチン
@SELECT_PET_ACTION_94
SELECTCASE PET:1
	CASE 1, 2, 3
		SELECTCASE RAND:100 + 1
			CASE 1 TO 80
				PET:50 = 102
			CASE 81 TO 100
				PET:50 = 107
				SIF PET:1 == 3 
					PET:50 = 201
		ENDSELECT
	CASE 4, 5
		SELECTCASE RAND:100 + 1
			CASE 1 TO 70
				PET:50 = 122
			CASE 71 TO 85
				PET:50 = 127
			CASEELSE
				PET:50 = 201
		ENDSELECT
	CASE 6, 7
		SELECTCASE RAND:100 + 1
			CASE 1 TO 60
				PET:50 = 142
			CASE 61 TO 80
				PET:50 = 147
			CASEELSE
				PET:50 = 201
		ENDSELECT
ENDSELECT
			

