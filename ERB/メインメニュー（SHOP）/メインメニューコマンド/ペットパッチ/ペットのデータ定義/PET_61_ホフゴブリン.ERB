;ホフゴブリン
@SET_PET_DATA_61
PET:30 = 1
PET:31 = 50
PET:32 = 90
PET:33 = 6

;行動ルーチン
@SELECT_PET_ACTION_61
SELECTCASE PET:1
	CASE 1, 2, 3
		SELECTCASE RAND:100 + 1
			CASE 1 TO 60
				PET:50 = 100
			CASE 61 TO 80
				PET:50 = 101
			CASEELSE
				PET:50 = 109
		ENDSELECT
	CASE 4, 5
		SELECTCASE RAND:100 + 1
			CASE 1 TO 30
				PET:50 = 140
			CASE 31 TO 66
				PET:50 = 141
			CASE 66 TO 80
				PET:50 = 149
			CASEELSE
				PET:50 = 223
		ENDSELECT
	CASE 6, 7
		SELECTCASE RAND:100 + 1
			CASE 1 TO 20
				PET:50 = 140
			CASE 21 TO 30
				PET:50 = 141
			CASE 31 TO 50
				PET:50 = 149
			CASEELSE
				PET:50 = 223
		ENDSELECT
ENDSELECT
			

