;行動対象の決定　
;弱ってる奴
@PET_TARGET_RATE_61
#DIM LCOUNT
VARSET LOCAL
FOR LCOUNT, 1, TFLAG:15 + 1
	;死体殴り防止
	IF DA:(TFLAG:LCOUNT):1 <= 0
		LOCAL:LCOUNT = 9999999
	ENDIF
	LOCAL:LCOUNT = DA:(TFLAG:LCOUNT):1
NEXT
FOR LCOUNT, TFLAG:15 + 1, 11
	LOCAL:LCOUNT = 9999999
NEXT
MIN LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10
FOR LCOUNT, 1, TFLAG:15 + 1
	SIF LOCAL:LCOUNT == RESULT
		PET:51 = TFLAG:LCOUNT
NEXT


;レイプ対象の決定
;孕んでないやつがいたらそいつ
@PET_RAPE_TARGET_RATE_61
VARSET LOCAL
LOCAL:0 = RAND:100
SIF !CFLAG:1:22 && !CFLAG:1:36
	LOCAL:0 += 100
IF FLAG:10
	LOCAL:1 = RAND:100
	SIF !CFLAG:(FLAG:10):22 && !CFLAG:(FLAG:10):36
		LOCAL:1 += 100
ENDIF
IF FLAG:11
	LOCAL:2 = RAND:100
	SIF !CFLAG:(FLAG:11):22 && !CFLAG:(FLAG:11):36
		LOCAL:2 += 100
ENDIF
MAX LOCAL:0, LOCAL:1, LOCAL:2
IF RESULT == LOCAL:0
	PET:51 = 1
ELSEIF RESULT == LOCAL:1
	PET:51 = FLAG:10
ELSEIF RESULT == LOCAL:2
	PET:51 = FLAG:11
ENDIF
