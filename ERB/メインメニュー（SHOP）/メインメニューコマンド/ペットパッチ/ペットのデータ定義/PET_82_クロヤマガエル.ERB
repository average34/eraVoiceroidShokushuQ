;クロヤマガエル	(ヴォジャノーイから拝借)
@SET_PET_DATA_82
PET:30 = 1
PET:31 = 70
PET:32 = 50
PET:33 = 7

;行動ルーチン
@SELECT_PET_ACTION_82
SELECTCASE PET:1
	CASE 1, 2, 3
		SELECTCASE RAND:100 + 1
			CASE 1 TO 70
				PET:50 = 109
			CASE 71 TO 85
				PET:50 = 202
			CASEELSE
				PET:50 = 212
		ENDSELECT
	CASE 4, 5
		SELECTCASE RAND:100 + 1
			CASE 1 TO 70
				PET:50 = 129
			CASE 71 TO 85
				PET:50 = 202
			CASEELSE
				PET:50 = 212
		ENDSELECT
	CASE 6, 7
		SELECTCASE RAND:100 + 1
			CASE 1 TO 70
				PET:50 = 149
			CASE 71 TO 85
				PET:50 = 202
			CASEELSE
				PET:50 = 212
		ENDSELECT
ENDSELECT

;レイプ行動の決定
@SELECT_PET_RAPE_ACTION_82
SELECTCASE RAND:100 + 1
	CASE 1 TO 25
		PET:50 = 690
	CASE 26 TO 40
		PET:50 = 691
	CASE 41 TO 55
		PET:50 = 692
	CASE 56 TO 90
		PET:50 = 1000
	CASEELSE
		PET:50 = 953
ENDSELECT

;行動対象の決定　
;弱いやつ
@PET_TARGET_RATE_82
#DIM LCOUNT
VARSET LOCAL
FOR LCOUNT, 1, TFLAG:15 + 1
	;死体殴り防止
	IF DA:(TFLAG:LCOUNT):1 <= 0
		LOCAL:LCOUNT = 99999999
		CONTINUE
	ENDIF
	LOCAL:LCOUNT = DA:(TFLAG:LCOUNT):5
NEXT
FOR LCOUNT, TFLAG:15 + 1, 11
	LOCAL:LCOUNT = 99999999
NEXT
MIN LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10
FOR LCOUNT, 1, TFLAG:15 + 1
	SIF LOCAL:LCOUNT == RESULT
		PET:51 = TFLAG:LCOUNT
NEXT

;レイプ対象の決定
;完全ランダム
@PET_RAPE_TARGET_RATE_82
VARSET LOCAL
LOCAL:0 = RAND:100
SIF FLAG:10
	LOCAL:1 = RAND:100
SIF FLAG:11
	LOCAL:2 = RAND:100
MAX LOCAL:0, LOCAL:1, LOCAL:2
IF RESULT == LOCAL:0
	PET:51 = 1
ELSEIF RESULT == LOCAL:1
	PET:51 = FLAG:10
ELSEIF RESULT == LOCAL:2
	PET:51 = FLAG:11
ENDIF