;ショゴスセル
@SET_PET_DATA_35
PET:30 = 1
PET:31 = 50
PET:32 = 60
PET:33 = 6

;行動ルーチン
@SELECT_PET_ACTION_35
SELECTCASE PET:1
	CASE 1, 2, 3
		SELECTCASE RAND:100 + 1
			CASE 1 TO 60
				PET:50 = 100
			CASE 60 TO 85
				PET:50 = 101
			CASEELSE
				PET:50 = 102
		ENDSELECT
	CASE 4, 5
		SELECTCASE RAND:100 + 1
			CASE 1 TO 50
				PET:50 = 120
			CASE 51 TO 75
				PET:50 = 121
			CASE 75 TO 85
				PET:50 = 122
			CASEELSE
				PET:50 = 203
		ENDSELECT
	CASE 6, 7
		SELECTCASE RAND:100 + 1
			CASE 1 TO 40
				PET:50 = 140
			CASE 41 TO 65
				PET:50 = 141
			CASE 66 TO 80
				PET:50 = 129
			CASEELSE
				PET:50 = 203
		ENDSELECT
ENDSELECT
			

