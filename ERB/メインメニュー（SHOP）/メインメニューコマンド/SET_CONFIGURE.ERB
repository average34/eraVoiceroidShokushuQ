#DIM LCOUNT
#DIM SUPPORT_DATA

	VARSET SUPPORT_DATA
	
	;---項目の表示---
	IF ARG == 0
		RESULTS:0 = 敵の外見の設定
		IF FLAG:513 == 1
			RESULTS:1 = 表示しない
		ELSE
