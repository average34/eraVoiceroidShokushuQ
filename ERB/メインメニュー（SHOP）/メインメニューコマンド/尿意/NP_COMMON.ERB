;=================================================
@ADD_BASE_NP(ARG:0,ARG:1)
;ARG:0	キャラID
;ARG:1	NP追加量

	IF FLAG:522 == 2
		BASE:(ARG:0):NP = 0
		RETURN -1
	ENDIF

	BASE:(ARG:0):NP += ARG:1 + 2
	IF TALENT:(ARG:0):57
		BASE:(ARG:0):NP += LIMIT(ARG:1/3,1,ARG:1)
	ENDIF
	IF TALENT:(ARG:0):100
		BASE:(ARG:0):NP += LIMIT(ARG:1/3,1,ARG:1)
	ENDIF

	IF BASE:(ARG:0):NP > 100
		BASE:(ARG:0):NP = 100
	ENDIF
	SIF BASE:1:NP >= 50
		CALL SHOW_TUTORIAL(16)
RETURN 1,BASE:(ARG:0):NP


