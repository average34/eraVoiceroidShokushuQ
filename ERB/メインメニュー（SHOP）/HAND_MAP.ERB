			CALL CHECK_PRINT_ROOMWALL(ROOMNO:(LCOUNT))
			IF RESULT >= 0
				ROOMTYPE:(LCOUNT) = RESULT
			ELSE
				RETURN -1
			ENDIF
		NEXT
	ENDIF


	;左部余白
	PRINT 　
	;部屋上部
	IF ARG % 4 == 0
		;横方向
		FOR LCOUNT, 0, 5
			;---部屋---
