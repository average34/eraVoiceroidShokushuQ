				PRINT 　
			ENDIF
		NEXT
	;部屋の下
	ELSE
		;横方向
		FOR LCOUNT, 0, 5
			;---部屋---
			PRINT 　
			CALL CHECK_ROUTE_NO(ROOMNO:(LCOUNT), 3)
			IF RESULT >= 0
				CALL PRINT_ROUTE(RESULT)
			ENDIF
			PRINT 　
			;---部屋の間---
