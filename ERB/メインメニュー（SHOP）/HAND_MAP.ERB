@PRINT_MAP_INFO_SUB_HAND(INFO,MOZIMAX)
#LOCALSSIZE 300

#DIMS INFO
#DIM MOZIMAX
	
	
	RESULTS = %""%
	RESETCOLOR
		
	;---文字列情報使用---
	STRLENS INFO
	
	;上限文字数を超えるなら
	IF RESULT > MOZIMAX
		;表示できる分は表示
		SUBSTRING INFO, 0, MOZIMAX
		PRINTFORM %RESULTS%
		
		;できない分は保管
		SUBSTRING INFO, MOZIMAX, -1
		RETURN 1
	ELSE
		;表示しきれるなら普通に表示
		PRINTFORM %INFO%
		RETURN 0
	ENDIF
	
	
