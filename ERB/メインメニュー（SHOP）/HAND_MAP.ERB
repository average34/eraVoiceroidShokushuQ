#DIMS SAVERDATA
#DIMS NOWRDATA
;0:残データ
;1:１データ

VARSET RDATA:0:0
CALL ROOMREPORT_LOADDATA(SAVERDATA)

FOR LCOUNT, 0, 100
	;残データ無しなら終了
	SIF SAVERDATA == ""
		BREAK

	;E～E(の手前)までを１データとして抜き取る
	STRFINDU SAVERDATA, "E/", 1
	LOCAL = RESULT
	IF LOCAL < 0
		NOWRDATA = %SAVERDATA%
		SAVERDATA = %""%
	ELSE
		SUBSTRING SAVERDATA, 0, LOCAL
		NOWRDATA = %RESULTS%
		SUBSTRING SAVERDATA, LOCAL, -1
		SAVERDATA = %RESULTS%
	ENDIF

	;１データを分解
	VARSET LOCALS
	SPLIT NOWRDATA, "/", LOCALS
	;LOCALS　偶数：処理記号　奇数：値
	
	FOR LCOUNT:1, 0, 10, 2
		SIF LOCALS:(LCOUNT:1) == ""
			BREAK
		
		;---処理記号ごとに分岐---
		LOCAL = TOINT(LOCALS:(LCOUNT:1 + 1))
		SELECTCASE LOCALS:(LCOUNT:1)
			CASE "E"
				RDATA:(LCOUNT):0 = LOCAL
			
			CASE "R"
				RDATA:(LCOUNT):1 = LOCAL
			
			CASE "A"
				RDATA:(LCOUNT):2 = LOCAL
			
			CASE "F"
				RDATA:(LCOUNT):3 = LOCAL
				
		ENDSELECT
	NEXT
NEXT
