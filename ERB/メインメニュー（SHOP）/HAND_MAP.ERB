			CALL PRINT_ROOMWALL_HAND(ROOMTYPE:(LCOUNT),0)
			CALL PRINT_ROOMWALL_HAND(ROOMTYPE:(LCOUNT),1)
			CALL PRINT_ROOMWALL_HAND(ROOMTYPE:(LCOUNT),2)
			RESETCOLOR
			;---部屋の間---
