		;横方向
		FOR LCOUNT, 0, 5
			;---部屋---
			CALL CHANGE_ROOM_COLOR(ROOMNO:(LCOUNT))
			CALL PRINT_ROOMWALL_HAND(ROOMTYPE:(LCOUNT),5)
			CALL PRINT_ROOMWALL_HAND(ROOMTYPE:(LCOUNT),6)
