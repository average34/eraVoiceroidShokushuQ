		CALL ADD_RAND_MESSAGE, @"「簡単に逃げられると思ったのに……」"
		CALL ADD_RAND_MESSAGE, @"（今のでダメなの……？）"
		
		; 性格別 追加口上
		SELECTCASE CFLAG:100
		CASE 性格_おてんば
			CALL ADD_RAND_MESSAGE, @"「へ～結構やるじゃん！」"
		CASE 性格_きれもの
