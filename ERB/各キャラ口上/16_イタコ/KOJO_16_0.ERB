; □ 初期化
@KOJO_16_0_INIT(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
#DIM LCOUNT
	
	; メッセージ表示関連変数初期化
	CALL KOJO_16_0_CLEAR_MESSAGE
	
	; 地の文スキップフラグ初期化
	CALL KOJO_16_0_SET_TEXT_SKIP(0)
	
	; システムメッセージ表示済フラグを初期化
	CALL KOJO_16_0_SET_PRINTED_SYSYTEM_MESSAGE(0)
	
	; 各キャラの呼び名を初期化
	CALL KOJO_16_0_INIT_CALLNAME()
	
	; KOJO_16_0_TURN_FINALIZE発生中かどうか確認する
	SIF !KOJO_16_0_TURN_FINALIZE
		KOJO_16_0_TURN_FINALIZE = KOJO_16_0_IS_TURN_FINALIZE(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 寸止めインクリメント
	; 前ターン自慰をしたのに絶頂を阻まれた
	; 絶頂に失敗するとEP1になる、自慰で偶然EP1になる事は殆どないので処理を簡略化
	; 二連続自慰メッセージの呼び出しは、母乳飲みなので除外する
	IF KOJO_16_0_GET_PREV_PURE_ARG(0) == 118 && BASE:EP == 1 && ARG:0 != 118
		CFLAG:820++
	; 前ターンに絶頂の瞬間が呼び出されているのに、このターン絶頂出来なかった
	ELSEIF KOJO_16_0_GET_PREV_PURE_ARG(0) == 34 && ARG:0 != 120
		CFLAG:820++
	; 前ターンに自慰、2ターン前に強制自慰が発生した上で、このターン絶頂出来なかった
	ELSEIF KOJO_16_0_GET_PREV_PURE_ARG(0) == 118 && (KOJO_16_0_GET_PREV_PURE_ARG(0, 2) == 1 && KOJO_16_0_GET_PREV_PURE_ARG(1, 2) == 46) && ARG:0 != 120
		CFLAG:820++
	ENDIF
		
	; 戦闘中 ターンの切り替わりを確認
	IF KOJO_16_0_KEEP_TURN != TFLAG:11
	
		; KOJO_16_0_TURN_FINALIZE発生中フラグをOFF
		VARSET KOJO_16_0_TURN_FINALIZE
		
		; ペットによるレイプが発生していた場合のフラグOFF
		KOJO_16_0_TEMP_FLAG:1 = 0
		
		; 保持ターン数更新
		KOJO_16_0_KEEP_TURN = TFLAG:11
	ENDIF
	
	; 日常パート(捕食中含む)で戦闘中利用の各種カウンタリセット
	; 非PT時は口上の最終呼び出し日時と現在の日時を比較(保持してる値と違う日になっているならリセット)
	; 出産イベント直前にも一応リセット
	IF ARG:0 == 151 || ARG:0 == 160  || (!(CHECK_MEMBER_FROM_ID(TARGET)) && !(CFLAG:830 == DAY && CFLAG:831 == TIME:0)) || ((ARG:0 == 127 || ARG:0 == 129) && ARG:1 == 0)

		; PT外状態で各種カウンタをリセット
		IF (!(CHECK_MEMBER_FROM_ID(TARGET)) && !(CFLAG:830 == DAY && CFLAG:831 == TIME:0))
			; PT外状態リセット時に無意味なARG情報を追記しておく
			; 遥か過去のARG情報を参照して口上が狂わないようにする為
			CALL KOJO_16_0_SAVE_ARG(0, 0, "", "", 0, 0, 0, 0, 0)
			
			; 一応確認の為に
			[IF_DEBUG]
				SETCOLOR 0x444444
				PRINTFORML PT外状態で各種カウンタをリセットしました
				RESETCOLOR
			[ENDIF]
		ENDIF
		
		; 膣内射精カウンタ・戦闘中絶頂カウンタ・戦闘中受性攻撃カウンタ・一時利用変数群
		VARSET KOJO_16_0_CREAMPIE_COUNT
		VARSET KOJO_16_0_ORGASM_COUNT
		VARSET KOJO_16_0_SEXUAL_ASSAULT_COUNT
		VARSET KOJO_16_0_TEMP_FLAG
		
		; 被レイプチェック用の一時保持変数群
		FOR LCOUNT, 0, 49
			CFLAG:(951 + LCOUNT) = 0
		NEXT
		
		; 暗示フラグOFF
		CLEARBIT CFLAG:900, 0
		
		; 戦闘中チェック用一時フラグOFF
		VARSET KOJO_16_0_TURN_FINALIZE
		
		; 仲間Noをクリア
		VARSET KOJO_16_0_PARTY_NO
	ENDIF
	
	; 理性度の増減メッセージ表示
	CALL KOJO_16_0_MIND_SHIFT_MESSAGE(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 理性度の増減を実際に行う(RESULTに増減値)
	CALL KOJO_16_0_MIND_MAPPING(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	CFLAG:800 += RESULT
	
	; 理性度確定後に口上モード初期化
	KOJO_16_0_KOJO_MODE = %KOJO_16_0_MIND_SET(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)%
	
	; このループ中の情報を保存する
	; PT外状態でのエラー対策後に現情報を保存しないと動作が狂う為、初期化の最後で情報保存
	CALL KOJO_16_0_SAVE_ARG(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
RETURN 1

; □ 理性度の初期化
@KOJO_16_0_MIND_INIT()
	CFLAG:805 = 0						; 淫乱堕ちのスイッチ(0で標準 1で淫乱堕ち)
	CFLAG:800 = KOJO_16_0_MIND_DEFAULT	; 理性度
RETURN 1

; □ 理性度の増減
@KOJO_16_0_MIND_MAPPING(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
#DIM CONST RAISE = 100000 ; 小数点計算用の底上げ値
#DIM VALUE

	; 初期化
	VARSET VALUE
	
	; 復活フラグが立っている間は理性度の増減を行ってはならない
	SIF CFLAG:800 == __INT_MAX__
		RETURN 0
		
	SELECTCASE ARG:0
	
	; 初期値であれば何もしないで戻る
	CASE 0
		RETURN 0
	
	; 味方行動
	CASE 1
		SELECTCASE ARG:1
		; おねだり
		CASE 54 TO 58
			VALUE -= 3
			
		; 拘束からの離脱
		CASE 42
			SELECTCASE ARG:3
			CASE 1
				; 絶頂で脱力
				VALUE -= 2
			CASE 2
				; 離脱成功
				VALUE += 2
			CASE 3
				; 少しだけ離脱
				VALUE += 1
			CASE 4
				; 離脱失敗
				VALUE -= 2
			ENDSELECT
			
		; 諦める(全滅まで放置)
		CASE 44
			; 諦めた瞬間にのみ数値反映
			SIF TFLAG:16 != 2
				VALUE -= 5
			
		; 強制自慰(下にある各種自慰と数値をあわせる)
		CASE 46
			VALUE -= 1
		ENDSELECT
		
	; 味方の攻撃(カウンター待ちも)
	CASE 11, 50
		VALUE += 2
	
	; 敵の通常攻撃, 衣服攻撃, 拘束攻撃(命中)
	CASE 12, 13, 15
		VALUE -= 1
		
	; 敵の性攻撃(命中) - 感度ボーナスあり
	CASE 14
		VALUE -= 1
		
		; 淫乱持ちなら
		IF TALENT:74
			VALUE -= 3
		ENDIF
		
		; 部位ごとに感度ボーナス
		IF TALENT:(101 + ARG:2) <= -1
			; 鈍感
			VALUE -= 0
		ELSEIF TALENT:(101 + ARG:2) == 1
			; 敏感
			VALUE -= 1
		ELSEIF TALENT:(101 + ARG:2) == 2
			; 過敏
			VALUE -= 2
		ELSEIF TALENT:(101 + ARG:2) >= 3
			; 異常過敏
			VALUE -= 3
		ENDIF
		
		; 淫～系素質ボーナス
		IF TALENT:(75 + ARG:2)
			VALUE -= 1
		ENDIF
	
	; 敵の寄生攻撃(命中)
	CASE 16
		VALUE -= 2
	
	; 味方の攻撃(回避)
	CASE 16
		VALUE -= 1
		
	;敵の攻撃を回避
	CASE 22 TO 27
		VALUE += 1
		
	; 敵を撃破
	CASE 31
		VALUE += 4
		
	; HPが0になった, MPが0になった
	CASE 32, 33
		VALUE -= 2
		
	; 寄生された
	CASE 40
		VALUE -= 3
		
	; 裸で時間経過
	CASE 46
		SELECTCASE ARG:1
		CASE 0
			; 恥薄いので何も
		CASE 1
			VALUE -= 1
		CASE 2
			VALUE -= 2
		ENDSELECT
		
	; 重度汚染部屋で時間経過
	CASE 47
		VALUE -= 1
		
	; カウンター発動
	CASE 51
		VALUE += 2
		
	; 戦闘から逃げた
;	CASE 55
;		VALUE ++

	; 戦闘で敗北
	CASE 56
		VALUE -= 3
		
	; 戦闘に勝利
	CASE 57
		VALUE += 6
		
	; 先制攻撃・不意打ち発生
	CASE 60
		; 先制攻撃
		IF ARG:2 == 1
			VALUE += 2
		; 不意打ち
		ELSEIF ARG:2 == 2
			;VALUE -= 1
		ENDIF
		
	; 仲間を見捨てて逃げた
	CASE 62
		;VALUE -= 2
		
	; 仲間に見捨てられた
	CASE 63
		VALUE -= 3
		
	; 遭遇時会話 雑談・情報交換・アイテム強請り成功・勧誘成功 PT加入
	CASE 103, 104, 105, 107, 109
		VALUE += 2
	
	; 遭遇時逆襲
	CASE 111, 112
		VALUE -= 2
			
	; 探索でアイテムを見つけた
	CASE 113
		VALUE += 2
		
	; 睡眠開始
	CASE 114
		VALUE += 2
		
	; 重度汚染部屋で睡眠開始
	CASE 115
		VALUE -= 1
		
	; 自慰
	CASE 118
		VALUE -= 1
		
	; EPが0になった 各種絶頂 - 感度ボーナスあり(強制自慰で絶頂すると34が呼び出されないので120)
	CASE 120
		VALUE -= 3
	
		; 淫乱持ちなら
		IF TALENT:74
			VALUE -= 3
		ENDIF
		
		; 部位ごとに感度ボーナス
		IF TALENT:(101 + ARG:1) <= -1
			; 鈍感
			VALUE -= 1
		ELSEIF TALENT:(101 + ARG:1) == 1
			; 敏感
			VALUE -= 2
		ELSEIF TALENT:(101 + ARG:1) == 2
			; 過敏
			VALUE -= 3
		ELSEIF TALENT:(101 + ARG:1) >= 3
			; 異常過敏
			VALUE -= 4
		ENDIF
		
		; 淫～系素質ボーナス
		IF TALENT:(75 + ARG:1)
			VALUE -= 1
		ENDIF
	
	; 妊娠が進行
	CASE 126
		; VALUE -= 2
			
	; 寄生出産・妊娠出産
	CASE 127, 129
		VALUE -= 3
		
	; 部屋の浄化
	CASE 130
		VALUE += 3
		
	; 処女喪失(大マイナス)
	CASE 136
		; 真の処女
		IF TALENT:0 == 1
			; 通常の触手宮
			IF ARG:3 == 0 && !KOJO_16_0_IS_REVERSE()
				VALUE -= 50
			; りばーす触手宮(りばーすは復活時の理性度リセットなしにしてるので 大マイナスを低めに)
			ELSEIF ARG:3 == 0
				VALUE -= 15
			ENDIF
			
		; 再生処女
		ELSEIF TALENT:0 == 2
			; 通常の触手宮
			IF ARG:3 == 0 && !KOJO_16_0_IS_REVERSE()
				VALUE -= 25
			; りばーす触手宮(りばーすは復活時の理性度リセットなしにしてるので 大マイナスを低めに)
			ELSEIF ARG:3 == 0
				VALUE -= 10
			ENDIF
		ENDIF
		
	; 喪失キャラに気付け薬を使った
	CASE 143
		VALUE += 3
	
	; 喪失キャラに気付け薬を使われた
	CASE 144
		VALUE += 3
				
	; 部屋に結界を張った+入浴(中回復)
	CASE 149
		VALUE += 30
		
	; 捕食されている
	CASE 151
		VALUE -= 2
			
	; 好感度低下によるPT離脱
	CASE 161
		VALUE -= 3
		
	; 寄生された(固定イベント)
	CASE 200
		SIF ARG:1 ==138 || ARG:1 == 149
			VALUE -= 3
		
	; 射精した(絶頂とは別にカウント, ふたなり分のペナルティということで)
	CASE 451
		VALUE -= 3
		
	; 触手包帯による時間経過ダメージ
	CASE 508
		SIF ARG:1 == 1
			VALUE -= 1
	ENDSELECT
	
	; 各種補正倍率計算
	; 小数計算用に桁を大きめに
	VALUE = VALUE * RAISE
	
	; 基本的に倍率変動はマイナス時のみ
	IF VALUE < 0
		; 倍率変動(異常状態)
		; 発情時 or 喪失時は2倍
		IF CFLAG:28 || CFLAG:29
			TIMES VALUE, 2.0
		; 媚薬2個装備時は3倍
		ELSEIF CFLAG:7 == 39 && CFLAG:8 == 39
			TIMES VALUE, 3.0
		; 通常時は1倍
		ELSE
			TIMES VALUE, 1.0
		ENDIF

		; 倍率変動(ゲーム難易度)
		; 難度が低いと平然と【強気】を維持する為 難度が低いほど変動値大きめ
		SELECTCASE FLAG:4
		; Easy(2.5倍)
		CASE 0
			TIMES VALUE, 2.5
		; Normal, Extra(2.0倍)
		CASE 1
			TIMES VALUE, 2.0
		; Hard(1.5倍)
		CASE 2
			TIMES VALUE, 1.5
		; Lunatic, Phantasm(1.0倍)
		CASE 3
			TIMES VALUE, 1.0
		ENDSELECT
	
		; 睡眠・喪失・諦め時は倍率をちょっと高めに
		SIF CFLAG:25 || CFLAG:29 || TFLAG:16 == 2
			TIMES VALUE, 1.5
	ENDIF
	
	; りばーす触手宮の場合、さらに倍率変動
	; こちらはプラスマイナス両方変動させる
	IF KOJO_16_0_IS_REVERSE()
		IF VALUE < 0
			TIMES VALUE, 1.5
		ELSE
			TIMES VALUE, 1.4
		ENDIF
	ENDIF

	; 小数計算終了、桁を戻す
	VALUE = VALUE / RAISE
	
;	[IF_DEBUG]
;		SETCOLOR 0x444444
;		PRINTFORML 理性度増減値：{VALUE}
;		SETCOLOR CFLAG:700
;	[ENDIF]
	
RETURN VALUE


; □ 理性度の増減メッセージ表示
; あくまでメッセージの表示を行うだけで理性度の増減は終了処理で行う
@KOJO_16_0_MIND_SHIFT_MESSAGE(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
#DIM MIND_VARY

	; システムメッセージ処理前に、口上の特殊呼び出しをするのでスキップフラグをONにしておく
	CALL KOJO_16_0_SET_TEXT_SKIP(1)
	
	; 何かしらの理由で復活 正常な理性を手に入れる(りばーす触手宮ではリセットなし)
	IF ARG:0 == 160 && CFLAG:800 == __INT_MAX__ && !KOJO_16_0_IS_REVERSE()
		
		; 理性度初期化
		CALL KOJO_16_0_MIND_INIT()
		
		CALL KOJO_16_0_ADD_MESSAGE, @"\g%CALLNAME:TARGET%は霞がかった思考が晴れ渡るのを感じた！\g\n「あら？　生きてますわ？」\n"

		RESETCOLOR
		RETURN 1
	ENDIF
	
	; 理性度の増減値を確認
	CALL KOJO_16_0_MIND_MAPPING(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	MIND_VARY = RESULT
	
	; 理性度増減メッセージ(淫乱堕ちしているか, 死亡しているか, ゲーム開始時 1つでも該当するならスキップ)
	IF !CFLAG:805 && CFLAG:800 != __INT_MAX__ && !(DAY:0 == 1 && TIME:0 == 0)
		; プラス(催眠中はプラス表現があっても表示しない)
		IF MIND_VARY > 0 && !KOJO_16_0_IS_HYPNO()
