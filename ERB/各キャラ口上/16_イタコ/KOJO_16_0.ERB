; □ 表示処理
@KOJO_16_0_PRINT_MESSAGE(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
#DIM  LCOUNT, 2                                                  ; ループ用
#DIM  FIND_ARRAY_COUNT, VARSIZE("KOJO_16_0_STOCK_MESSAGE_ARRAY") ; ストック別適合数
#DIM  FIND_ARRAY_COUNT_MIN
#DIMS RESOLUTION_TEXT                                            ; 確定した口上
#DIM  KOJO_RAND_NUM
#DIM  KOJO_PROBABILITY
#DIM  TEMP_REDRAW
#DIMS DEBUG_TEXT


	; 初期化
	VARSET FIND_ARRAY_COUNT
		
	; 一時口上ストック確認
	; 何かしらの文字列が入っていれば口上に追加しておく
	CALL KOJO_16_0_FIX_MESSAGE
	
	; デバッグモード専用 登録口上一覧確認
	[IF_DEBUG]
		IF KOJO_16_0_SHOW_REGIST_MESSAGE()
			CURRENTREDRAW
			TEMP_REDRAW = RESULT
			REDRAW 0
			FOR LCOUNT:0, 0, KOJO_16_0_STOCK_MESSAGE_COUNT
				DEBUG_TEXT = %KOJO_16_0_STOCK_MESSAGE_ARRAY:(LCOUNT:0)%
				SETCOLOR 0x333355
				REPLACE DEBUG_TEXT, "\n", "n"
				PRINTFORML 口上登録：%RESULTS%
				RESETCOLOR
			NEXT
			REDRAW TEMP_REDRAW
		ENDIF
	[ENDIF]
	
	; 口上非表示処理 地の文だけ表示してストックを空にして帰る
	; 口上表示率確認 一定数以下、口上ストックが空
	IF !(RAND:100 <= KOJO_16_0_TALK_PERCENT(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)) || KOJO_16_0_STOCK_MESSAGE_COUNT == 0
		CALL KOJO_16_0_PRINT_SYSTEM_MESSAGE()
		CALL KOJO_16_0_CLEAR_MESSAGE
		RETURN 0
	ENDIF
	
	; 過去ログとストック口上を比較、過去に表示された口上の数をカウント
	; ただし、登録口上が多い場合(大抵はランダム文節結合での肥大化)はカウントしない
	; 似たような口上なので、読む方が気にしないだろうと言う事と処理高速化の為
	IF KOJO_16_0_STOCK_MESSAGE_COUNT <= 80
		FOR LCOUNT:0, 0, VARSIZE("KOJO_16_0_MESSAGE_LOG")
			FOR LCOUNT:1, 0, KOJO_16_0_STOCK_MESSAGE_COUNT
				SIF KOJO_16_0_STOCK_MESSAGE_ARRAY:(LCOUNT:1) == KOJO_16_0_MESSAGE_LOG:(LCOUNT:0)
					FIND_ARRAY_COUNT:(LCOUNT:1)++
			NEXT
		NEXT
		
		; 過去ログ表示回数の最小値を算出
		; 後続のランダム選出で処理を軽減するため、登録口上から最小値分を引いておく
		; (※全ての口上が2回表示されているなら、4回表示の口上は2回、2回表示の口上は0回の扱いとする)
		FIND_ARRAY_COUNT_MIN = __INT_MAX__
		FOR LCOUNT:0, 0, KOJO_16_0_STOCK_MESSAGE_COUNT
			SIF FIND_ARRAY_COUNT_MIN > FIND_ARRAY_COUNT:(LCOUNT:0)
				FIND_ARRAY_COUNT_MIN = FIND_ARRAY_COUNT:(LCOUNT:0)
			SIF FIND_ARRAY_COUNT_MIN == 0
				BREAK
		NEXT
		IF FIND_ARRAY_COUNT_MIN != 0
			FOR LCOUNT:0, 0, KOJO_16_0_STOCK_MESSAGE_COUNT
				FIND_ARRAY_COUNT:(LCOUNT:0) -= FIND_ARRAY_COUNT_MIN
			NEXT
		ENDIF
	ENDIF

	; 口上ランダム選出
	WHILE 1
		KOJO_RAND_NUM = RAND:KOJO_16_0_STOCK_MESSAGE_COUNT
		; 一度も表示されていない口上、もしくは登録口上が1種類しかないので確定
		IF FIND_ARRAY_COUNT:KOJO_RAND_NUM == 0 || KOJO_16_0_STOCK_MESSAGE_COUNT == 1
			RESOLUTION_TEXT = %KOJO_16_0_STOCK_MESSAGE_ARRAY:(KOJO_RAND_NUM)%
			BREAK
			
		; ログに残っている物と同一の口上は発生確率を下げる
		ELSE
			VARSET KOJO_PROBABILITY
			FOR LCOUNT:0, 0, (FIND_ARRAY_COUNT:KOJO_RAND_NUM + 1)
				KOJO_PROBABILITY += RAND:(FIND_ARRAY_COUNT:KOJO_RAND_NUM + 2)
			NEXT
			IF RAND:(KOJO_PROBABILITY + 1) == 0
				RESOLUTION_TEXT = %KOJO_16_0_STOCK_MESSAGE_ARRAY:(KOJO_RAND_NUM)%
				BREAK
			ENDIF
		ENDIF
	WEND
	
	ARRAYSHIFT KOJO_16_0_MESSAGE_LOG, 1, ""
	KOJO_16_0_MESSAGE_LOG:0 = %RESOLUTION_TEXT%

	; メッセージ表示処理
	CURRENTREDRAW
	TEMP_REDRAW = RESULT
	REDRAW 0
	CALL KOJO_16_0_PRINT_ESCAPE(RESOLUTION_TEXT)
	REDRAW TEMP_REDRAW
	
	RESETCOLOR

	; メッセージ表示関連変数初期化
	; KOJO_16_0_PRINT_MESSAGEが複数回呼び出された場合、同じメッセージを二重表示してしまうので
	; それを避ける為、表示済のメッセージは消去する
	CALL KOJO_16_0_CLEAR_MESSAGE
RETURN 1

