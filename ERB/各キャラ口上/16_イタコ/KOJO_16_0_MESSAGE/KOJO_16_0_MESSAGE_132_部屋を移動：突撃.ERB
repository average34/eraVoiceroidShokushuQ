
; ------------------------------------------------------------------------------
; ■ 132 部屋を移動：突撃
; ------------------------------------------------------------------------------

@KOJO_16_0_SYSTEM_MESSAGE_132(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	SELECTCASE KOJO_16_0_KOJO_MODE
	CASE "発情"
		CALL KOJO_16_0_ADD_MESSAGE, @"（今は、目の前のことに集中いたしますわ……！）\n"
	CASEELSE
		CALL KOJO_16_0_ADD_MESSAGE, @"「東北イタコ！出撃ですわ！」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「ここは勢いに任せますわ！」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「ちょああああ！！」\n"
	ENDSELECT
	
	; 移動前部屋の汚染度で追加口上
	; 清浄
	IF FLAG:(50 + FLAG:5) < 10
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「次の部屋は綺麗だといいですわ…？」\n"
		ENDSELECT
		
	; 通常
	ELSEIF FLAG:(50 + FLAG:5) < 40
		
	; 軽度汚染
	ELSEIF FLAG:(50 + FLAG:5) < 70
		
	; 中度汚染
	ELSEIF FLAG:(50 + FLAG:5) < 100
		
	; 重度汚染
	ELSE
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「早く、もっときれいな場所に…！」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「次の部屋は綺麗だといいですわね」\n"
		ENDSELECT
	ENDIF
RETURN 1
