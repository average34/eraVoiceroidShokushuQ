
; ------------------------------------------------------------------------------
; ■ 501 陥没乳首勃起
; ------------------------------------------------------------------------------

; □ 汎用口上
@KOJO_16_0_SYSTEM_MESSAGE_501(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 喪失中
	IF CFLAG:29
		CALL KOJO_16_0_ADD_MESSAGE, @"「あ……　ちくび……でちゃってますわ……」\n"
		
		; 戦闘中なら追加口上
		IF TFLAG:13
			CALL KOJO_16_0_ADD_MESSAGE, @"「だめ……　そこ、よわいんですの……」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「今勃ったら……　いじめ……られちゃいますわ……」\n"
		ENDIF
		RETURN 1
	ENDIF
	
	; 催眠中
	IF KOJO_16_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			; 戦闘中なら追加口上
			IF TFLAG:13
					SELECTCASE KOJO_16_0_KOJO_MODE
					CASE "淫乱"
						CALL KOJO_16_0_ADD_MESSAGE, @"「催眠術って結構万能なんですのね♥　強制的に勃起させるとか、良い趣味してますわ♥♥」\n"
						CALL KOJO_16_0_ADD_MESSAGE, @"「おっぱいの先っぽを無理矢理勃起させられましたわっ！？♥　あっ、これっ♥　絶対気持ちよくされちゃいますのっ♥♥」\n"
						CALL KOJO_16_0_ADD_MESSAGE, @"「陥没おっぱい、操られて飛び出しましたわッ♥　熱いッ♥♥　敏感乳首あつくなってますの……っッッ♥♥」\n"
					CASEELSE
						CALL KOJO_16_0_ADD_MESSAGE, @"「うそ……ですわよねっ……！？　身体が……勝手にっ……！？　だ、ダメっ！！　勃っちゃだめえぇぇっ！！」\n"
						CALL KOJO_16_0_ADD_MESSAGE, @"「ううぅ……っ……　催眠のせいで……ぇっ！！　あたしの身体が勝手にっ！！　ひぐっ！　先っぽ出ちゃうぅ……っ！！」\n"
						CALL KOJO_16_0_ADD_MESSAGE, @"「うあぁぁぁっ！！　熱い……っ！！　おっぱいの先っぽ、操られて勝手に勃っちゃいますわぁ……っっ！！」\n"
					ENDSELECT
			ENDIF
		; 発情・感情操作系
		CASE 1
			; 戦闘中なら追加口上、催眠深度依存
			IF TFLAG:13
				SELECTCASE CFLAG:43

				; 催眠強度1
				CASE 1
					CALL KOJO_16_0_ADD_MESSAGE, @"「頭の中トロトロにされて……ぇ……♥　乳首まで勃起させられて……♥♥　あたし、おかしく……♥♥」\n"
					

				; 催眠強度2以上
				CASEELSE
					CALL KOJO_16_0_ADD_MESSAGE, @"「あっ♥　あっ♥　あっ♥　勃起乳首、イキたいっ♥♥　敏感乳首ッ、コリコリされてイき狂いたいですわ……っッ♥♥」\n"
					CALL KOJO_16_0_PARAGRAPH_MESSAGE
					
					CALL KOJO_16_0_ADD_MESSAGE, @"\d催眠で脳のトロけた%CALLNAME:TARGET%は、乳首で絶頂する事しか考えられなくなっている……\d\n"
				ENDSELECT
			ENDIF
			
		; 無意識・認識操作系
		CASE 2
			CALL KOJO_16_0_ADD_MESSAGE, @"「あ……　おっぱい……　勃起、してますわ……」\n"
			
			; 戦闘中なら追加口上、催眠深度依存
			IF TFLAG:13
				SELECTCASE CFLAG:43

				; 催眠強度1
				CASE 1
					CALL KOJO_16_0_ADD_MESSAGE, @"「陥没乳首、勃起しましたわ……　あたしの胸……　気持ちよくされて興奮してますの……」\n"
					CALL KOJO_16_0_ADD_MESSAGE, @"「陥没乳首、勃起しましたわ……　敏感な部分なので、念入りに刺激してくださいまし……」\n"

				; 催眠強度2
				CASE 2
					CALL KOJO_16_0_ADD_MESSAGE, @"「ドすけべ陥没乳首、お勃起しましたわ……　イカせやすいボーナスタイム、存分にお楽しみくださいまし……」\n"
				; 催眠強度最大
				CASEELSE
					CALL KOJO_16_0_ADD_MESSAGE, @"「ちっ……くび……っ♥　勃起して……っ、先っぽ……いじりやすく……♥　なりましたわ……ぁ……♥♥\n　ここからは……ぁ……ぁっ、敏感乳首イキ♥顔も……っ、お楽しみください…まひ…ぃ♥♥」\n"
				ENDSELECT
			ENDIF
			RETURN 1
		ENDSELECT
	ENDIF
	CALL KOJO_16_0_FIX_MESSAGE
	
	; 通常時
	SELECTCASE KOJO_16_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_16_0_ADD_MESSAGE, @"「あは……ぁ♥　勃起ちくび……ぃ、出てきちゃっいましたわ……♥♥」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「んあぁ……っ♥　おっぱい……感じてますわぁ……♥」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「あひぁ……ぁっ♥　ちくび……勃ってしまいましたの…♥」\n"
	CASE "発情"
		CALL KOJO_16_0_ADD_MESSAGE, @"「ひっ……♥　ああぁ……っ♥　ちくび……が……あっ……♥」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「ひっ……♥　ひぃィっ……♥　おっぱい……っ、おかしくなっちゃうぅ♥」\n"
	CASEELSE
		CALL KOJO_16_0_ADD_MESSAGE, @"（だっ、だめですっ！　あたしっ、乳首弱いんですのぉ……っ！）\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「ああぁ……ぁっ！？　だめぇっ！？　今はだめですのっ！！\n　狙われちゃうから、勃っちゃだめですのにっ！！」\n"
	ENDSELECT
	
	; 戦闘中なら追加口上
	IF TFLAG:13
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_16_0_ADD_MESSAGE, @"「あははっ♥　あたしの乳首、虐めて欲しいみたいですわっ♥♥」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「あたしの陥没ちくび、見つかってしまいましたわ♥」\n"
		CASE "発情"
			CALL KOJO_16_0_ADD_MESSAGE, @"「だめ……ですわっ♥　勃起、したら……っ♥」\n"
		ENDSELECT
	ENDIF
	
	; [淫乳]所持 または りばーす東方触手宮でB感覚LV3以上
	IF TALENT:76 || (KOJO_16_0_IS_REVERSE() && ABL:7 >= 3)
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_16_0_ADD_MESSAGE, @"「んいぃ……っ♥　クリトリスより敏感な、改造ちくび……が…♥　勃起させられてしまいました…♥♥」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「あ…は……ぁ♥　アクメスイッチに改造された勃起ちくび……ぃ、押されちゃいますわ……♥♥」\n"
		CASE "発情"
			CALL KOJO_16_0_ADD_MESSAGE, @"「はにゃぁああ……あぁっ♥　改造……淫乱乳首……っ♥　空気に触れただけで……感じてますの……っ♥♥」\n"
		ENDSELECT
	ENDIF
RETURN 1


