			SELECTCASE KOJO_16_0_KOJO_MODE
			CASEELSE
				CALL KOJO_16_0_ADD_MESSAGE, @"「共倒れになるかもしれませんけれど……」\n\d%CALLNAME:TARGET%は行動不能に陥った%CALLNAME:(FLAG:10)%に続き、力尽きた%ARGS:1%の手を握った\d\n"
			ENDSELECT
			
		ENDIF
	ENDIF
	
