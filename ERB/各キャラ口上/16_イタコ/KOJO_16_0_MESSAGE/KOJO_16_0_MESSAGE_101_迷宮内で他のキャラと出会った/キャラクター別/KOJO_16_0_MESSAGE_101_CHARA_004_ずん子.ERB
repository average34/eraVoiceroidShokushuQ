	ELSEIF ARG:1 == KOJO_16_0_PARTY_NO:1 || ARG:1 == KOJO_16_0_PARTY_NO:2
		CALL KOJO_16_0_ADD_MESSAGE, @"「%KOJO_16_0_CALLNAME_FROM_ID(ARG:1)%……っ　あたしがよわいばっかりに」\n"
	; 通常行動中
	ELSE
		CALL KOJO_16_0_ADD_MESSAGE, @"「ず、%KOJO_16_0_CALLNAME_FROM_ID(ARG:1)%！？　%KOJO_16_0_CALLNAME_FROM_ID(ARG:1)%！？」\n"
	ENDIF
