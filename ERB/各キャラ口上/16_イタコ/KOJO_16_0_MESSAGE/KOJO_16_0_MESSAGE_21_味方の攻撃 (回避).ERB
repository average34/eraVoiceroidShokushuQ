; □ 汎用口上
@KOJO_16_0_SYSTEM_MESSAGE_21(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 二段攻撃も外す
	IF KOJO_16_0_GET_PREV_ARG(0) == 21
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「お祈りが、足りなかったみたいですわ……」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「二発とも外しれましたわっ！？」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「まさか、あたしをおちょくっていますの？…」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「もう！動かないで下さいまし！！」\n"
		ENDSELECT
		
	; 通常攻撃を外す
	ELSE
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_16_0_ADD_MESSAGE, @"「ちゅぅ…落ち着かないとですわ……」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「はぁ♥　あの立派なモノが、欲しくて……　集中できませんにゃあ……♥」\n"
		CASE "発情"
			CALL KOJO_16_0_ADD_MESSAGE, @"「はぁ……　はぁ……　あたって！……ないですわね……」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「うぁ……っ！？　身体が、疼いて……っ！？」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「むぅ……　やっぱり、当たらないですわね…」\n"
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「どうして当たりませんの…！？」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「い、今のは練習ですわ　本番は当てますから」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「あら！？　外した…っ！？」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「むむむ、意外とすばやいですわね……」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「くっ、集中しませんと…！」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「ちゅわ！？……当たったと思いましたのに！」\n"
		ENDSELECT
	ENDIF
RETURN 1


