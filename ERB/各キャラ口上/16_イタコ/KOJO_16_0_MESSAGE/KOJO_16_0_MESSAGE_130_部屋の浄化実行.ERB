
; ------------------------------------------------------------------------------
; ■ 130 部屋の浄化実行
; ------------------------------------------------------------------------------

@KOJO_16_0_SYSTEM_MESSAGE_130(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 部屋の状態:清浄～通常
	IF FLAG:(50 + FLAG:5) < 40
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「手遅れになる前にきれいにしませんとね」\n"
			CALL KOJO_16_0_PARAGRAPH_MESSAGE
			CALL KOJO_16_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は浄化された部屋を満足気に眺めている…\d\n"
		ENDSELECT
		
	; 部屋の状態:軽度汚染～重度汚染
	ELSE
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_16_0_ADD_MESSAGE, @"「浄化せずに置いておけば、そのうち面白そうな事が起きそうでしたわね」\n"
			CALL KOJO_16_0_PARAGRAPH_MESSAGE
			CALL KOJO_16_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は浄化される部屋を物欲しげに眺めている…\d\n"
		CASE "強気"
			CALL KOJO_16_0_ADD_MESSAGE, @"「ヘンなのが出てくる前に対処しませんと！」\n"
			CALL KOJO_16_0_PARAGRAPH_MESSAGE
			CALL KOJO_16_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は浄化された部屋を満足気に眺めている…\d\n"
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「部屋がきれいになると気分もすっきりしますわ」\n"
			CALL KOJO_16_0_PARAGRAPH_MESSAGE
			CALL KOJO_16_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は浄化された部屋を満足気に眺めている…\d\n"
		ENDSELECT
	ENDIF
RETURN 1
