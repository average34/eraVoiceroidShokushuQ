
; ------------------------------------------------------------------------------
; ■ 46 裸で時間経過
; ------------------------------------------------------------------------------

@KOJO_16_0_SYSTEM_MESSAGE_46(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 喪失中
	IF CFLAG:29
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は力の入らない腕で、なんとか身体を隠そうとしている…\d\n"
		ENDSELECT
		RETURN 1
	ENDIF
	
	; 諦め済み
	IF TFLAG:16 == 2
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASE "淫乱"
			; [濡透]
			IF BASE:3 > 0
				CALL KOJO_16_0_ADD_MESSAGE, @"（ぐちゃぐちゃに濡れて肌に張り付いてる服とか…　かなり…えっち、ですわね…）\n"
			; [大破]
			ELSE
				CALL KOJO_16_0_ADD_MESSAGE, @"（どうせ犯されるでしょうし…　問題ないですわ…♥）\n"
			ENDIF
		CASE "発情"
			CALL KOJO_16_0_ADD_MESSAGE, @"（あたし……どうして…　こんな状態でドキドキしていますの……）\n"
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「恥ずかしがったて、無駄ですわね……」\n"
		ENDSELECT
		RETURN 0
	ENDIF
	
	; 催眠中
	IF KOJO_16_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			CALL KOJO_16_0_ADD_MESSAGE, @"\d催眠にかかった%CALLNAME:TARGET%は、じんわりと汗ばんだ身体を隠そうともしない\d\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"（わたし…今、お嫁に行けないようなコトしている…気がしますわ…）\n"
			RETURN 1
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_16_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_16_0_ADD_MESSAGE, @"（恥ずかしい…けど…っ　見られてるだけで…カラダが…あつく…っ♥）\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"（見られる…のっ、凄く…気持ちいいですわ…っ♥）\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"\d見られる事で興奮するのか、%CALLNAME:TARGET%身体はじんわりと汗ばんでいる\d\n"
	CASE "発情"
		CALL KOJO_16_0_ADD_MESSAGE, @"（じろじろ見られてる…　気がしますわ…）\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"（カラダのラインが…出てしまっていますわ…）\n"
	CASEELSE
		CALL KOJO_16_0_ADD_MESSAGE, @"「こ、こちらを見ないでくださいまし！！」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は腕で胸と秘部を隠しながら、恥ずかしさに耐えている\d\n"
		
		; 服の状態によって追加口上
		; [濡透]
		IF BASE:3 > 0
			CALL KOJO_16_0_ADD_MESSAGE, @"（服が濡れて……丸見えですわ…）\n"
		; [大破]
		ELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「せめて何か、隠せるものがほしいですわ…」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「何か着るものを用意しないとですわ…」\n"
		ENDIF
	ENDSELECT
RETURN 1
