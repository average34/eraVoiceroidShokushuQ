			SELECTCASE CFLAG:43
			CASE 1
				CALL KOJO_16_0_ADD_MESSAGE, @"「……　あたしは……魔物様に負けた……あわれな……雌狐…\n　これからは、みなさまの繁殖用孕み袋……ですわ……」\n"
				CALL KOJO_16_0_PARAGRAPH_MESSAGE
				CALL KOJO_16_0_ADD_MESSAGE, @"\d力尽きた%CALLNAME:TARGET%は操られるままに、望まぬ誓いを口にした…\d\n"
			CASE 2
				CALL KOJO_16_0_ADD_MESSAGE, @"（これは負けではありませんわ。魔物様に身体を使ってもらう事はあたしの夢だったんですわ…♥）\n"
				CALL KOJO_16_0_PARAGRAPH_MESSAGE
				CALL KOJO_16_0_ADD_MESSAGE, @"\d催眠術で思考を歪められた%CALLNAME:TARGET%は、敗北しながらも奇妙な幸福感に満たされた…\d\n"
			CASEELSE
				CALL KOJO_16_0_ADD_MESSAGE, @"「生意気な%CALLNAME:TARGET%に苗床洗脳を施していただき、ありがとうございますわ…　\n　苗床%CALLNAME:TARGET%は触手様の繁殖用孕み袋を使って頂くのがこの上ない幸せですの…」\n"
