
; ------------------------------------------------------------------------------
; ■ 510 バストサイズ変化
; ------------------------------------------------------------------------------

@KOJO_16_0_SYSTEM_MESSAGE_510(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 媚薬爆弾
	IF KOJO_16_0_GET_PREV_ARG(0, 2) == 517 && KOJO_16_0_GET_PREV_ARG(1, 2) == 1
		; 媚薬爆弾後は強制発情中なので発情以上のみの記述でOK
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_16_0_ADD_MESSAGE, @"「おっぱい、おっきくなってますの…♥♥　ジンジンして…苦しい…っ♥♥」\n"
		CASE "発情"
			CALL KOJO_16_0_ADD_MESSAGE, @"「あ…いﾞっ♥　ぐぅぅ…っっ♥♥　おっぱい…がぁ♥♥　あつ…くてっっ♥♥」\n"
		ENDSELECT
		
	; 通常処理
	ELSE
		; 巨乳化
		IF ARG:2 < ARG:3
			SELECTCASE ARG:3
			; 巨乳
			CASE 1
				CALL KOJO_16_0_ADD_MESSAGE, @"「…なんとか元の大きさに戻りましたわ…」\n"
			; 爆乳
			CASE 2
				CALL KOJO_16_0_ADD_MESSAGE, @"「お…重い…ですわ　こんなに大きい胸、どうやって服の中に納めればいいんですの…？」\n"
			ENDSELECT
			
		; 貧乳化
		ELSE
			SELECTCASE ARG:3
			; 貧乳
			CASE -1
				CALL KOJO_16_0_ADD_MESSAGE, @"「…これだときりちゃんといい勝負ですわね」\n"
			ENDSELECT
		ENDIF
	ENDIF
RETURN 1
