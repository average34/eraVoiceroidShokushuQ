		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「少しでも削っておきませんと…っ！」\n"
		ENDSELECT
		
	; 残りMP 0%以上
	ELSEIF BASE:1 >= (MAXBASE:1 / 100 * 0)
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"（これくらいなら……今のあたしでも！）\n"
		ENDSELECT
	ENDIF
	
RETURN 1


