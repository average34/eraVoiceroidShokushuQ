; □ 54 着替えセット
@KOJO_16_0_SYSTEM_MESSAGE_1_2_54(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	; 自分が着替える
	IF ARG:3 == TARGET
	
	; 他キャラに着替えセットを使う
	ELSE
		; 服状態による口上分岐
		; 裸だった
		IF BASE:(ARG:3):3 == 0
			SELECTCASE KOJO_16_0_KOJO_MODE
			CASEELSE
				CALL KOJO_16_0_ADD_MESSAGE, @"「%KOJO_16_0_CALLNAME_FROM_ID(ARG:3)%！　早くこの服を着てくださいまし！」\n"
				CALL KOJO_16_0_ADD_MESSAGE, @"「予備ならありますから、気にしないで着てくださいまし」\n"
			ENDSELECT
			
		; 新品だった
		ELSEIF BASE:(ARG:3):3 == MAXBASE:(ARG:3):3
			SELECTCASE KOJO_16_0_KOJO_MODE
			CASEELSE
				CALL KOJO_16_0_ADD_MESSAGE, @"「%KOJO_16_0_CALLNAME_FROM_ID(ARG:3)%には、こちらの服の方がお似合いですわ♪」\n"
			ENDSELECT
		
		; 破れていた
		ELSE
			SELECTCASE KOJO_16_0_KOJO_MODE
			CASEELSE
				CALL KOJO_16_0_ADD_MESSAGE, @"「そんなぼろぼろの服より、新しい服をあげますわ」\n"
			ENDSELECT
		ENDIF
	ENDIF
RETURN 1
