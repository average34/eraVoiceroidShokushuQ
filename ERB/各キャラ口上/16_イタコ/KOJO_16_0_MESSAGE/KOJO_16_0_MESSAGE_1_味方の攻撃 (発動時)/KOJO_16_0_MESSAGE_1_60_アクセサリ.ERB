; □ 1 使用
@KOJO_16_0_SYSTEM_MESSAGE_1_60_X_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE ARG:2
		; 小さなお守り, メリケンサック, 使い魔, 力持ちの腕輪
		CASE 20 TO 23
			CALL KOJO_16_0_ADD_MESSAGE, @"「道具は使わないと意味がありませんわっ！」\n"
		; 猫耳
		CASE 27
			CALL KOJO_16_0_ADD_MESSAGE, @"（…これもきっと何かの役に立つはずですわ）\n"
		; 幸運のお守り
		CASE 36
			CALL KOJO_16_0_ADD_MESSAGE, @"「運にすべてを任せますわぁ！」\n"
	ENDSELECT
RETURN 1


