@KOJO_16_0_SYSTEM_MESSAGE_443_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_16_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_16_0_ADD_MESSAGE, @"「んぁ……っ♥　ヌルヌルが身体を包んで……♥♥」\n"
	CASE "発情"
		CALL KOJO_16_0_ADD_MESSAGE, @"「くっ……　ぐにゅぐにゅしてて、ちゃんと引き剥がせませんわっ……」\n"
	CASEELSE
		CALL KOJO_16_0_ADD_MESSAGE, @"「こ……のっ……！　離れて……っ！」\n"
