@KOJO_16_0_SYSTEM_MESSAGE_23(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 催眠中
	IF KOJO_16_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	; 服:大破
	IF BASE:CP <= 0
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「もう裸ですのよ！何がしたいんですの？」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「もう脱がせるものなんて何もありませんわ！」\n"
		ENDSELECT
		
	; 服:新品
	ELSEIF (BASE:CP * 100 / MAXBASE:CP) >= 100
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「ちゅわ！\n　……今、あたしの服を狙いましたの…？」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「服を狙うなんて、えっちな方ですわね…！」\n"
		ENDSELECT
		
	; 服:通常
	ELSEIF (BASE:CP * 100 / MAXBASE:CP) > 66
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「危ないっ！　服ばっかり狙わないでくださいまし！」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「どうして服ばかり狙うんですの…」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「そんな攻撃では、あたしは倒せませんわよ？」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「ちゃんと狙わないと当たりませんわよ？」\n"
		ENDSELECT
		
	; 服:損傷
	ELSEIF (BASE:CP * 100 / MAXBASE:CP) > 33
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「ちゅっ！こ、これ以上破られたら大事なところが…」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「もう！貴方にあげる服の余裕はありませんわ！」\n"
		ENDSELECT
		
	; 服:中破
	ELSE
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「本気であたしを裸にする気ですわ！」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「やめてくださいまし！　ここじゃまともな服は貴重品ですのよ！」\n"
		ENDSELECT
	ENDIF
RETURN 1


