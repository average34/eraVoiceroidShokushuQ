	CASEELSE
		CALL KOJO_16_0_ADD_MESSAGE, @"「くっ……　睡眠……ガス……！？」\n"
	ENDSELECT
	
	; 眠気によって分岐
	IF FLAG:7 <= 3
		SELECTCASE KOJO_16_0_KOJO_MODE
