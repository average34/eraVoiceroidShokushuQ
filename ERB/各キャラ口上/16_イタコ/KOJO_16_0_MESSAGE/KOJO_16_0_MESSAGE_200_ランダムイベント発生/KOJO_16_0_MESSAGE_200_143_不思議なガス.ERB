		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「これぐらいの眠気……　まだ大丈夫ですわ……」\n"
		ENDSELECT
		
	ELSEIF FLAG:7 <= 11
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「ん……　眠気でふらふらしますわ……」\n"
		ENDSELECT
		
	ELSE
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「まず…いですわ…　意識……が……」\n"
		ENDSELECT
	ENDIF
RETURN 1


