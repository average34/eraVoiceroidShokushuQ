@KOJO_16_0_SYSTEM_MESSAGE_51(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_16_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_16_0_ADD_MESSAGE, @"「そんな程度じゃ、あたしとは遊べませんわ♪」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「もっと強い殿方があたしの好みですわ♪」\n"
	CASE "弱気"
		CALL KOJO_16_0_ADD_MESSAGE, @"（あたしの力でも、こうすれば……！）\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「ここですわ……ここで思いっきり！」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"（隙が見えましたわ……）\n"
	CASE "強気"
		CALL KOJO_16_0_ADD_MESSAGE, @"「その動き、隙だらけですわ！」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「狐に化かされまして？　隙だらけですわ！」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「それを待っていましたわ！」\n"
	CASEELSE
		CALL KOJO_16_0_ADD_MESSAGE, @"「恐山で鍛えたイタコの力、思い知りなさい！」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「そこですわっ！」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「見えましたわ！そこっ！」\n"
	ENDSELECT
RETURN 1
