				SELECTCASE KOJO_16_0_KOJO_MODE
				CASE "淫乱"
					CALL KOJO_16_0_ADD_MESSAGE, @"「おっぱい飲みたいなら、もっと吸い付かないとダメですわ♥」\n"
				CASEELSE
					CALL KOJO_16_0_ADD_MESSAGE, @"「うっ……　えっちな舐め方のせいで、おっぱい張ってきましたわ……」\n"
				ENDSELECT
			ENDIF
		
		; ペット系素質所持
		ELSEIF TALENT:140
