@KOJO_16_0_SYSTEM_MESSAGE_14_985(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 追加地の文関数(前)を登録
	CALL KOJO_16_0_REGIST_DESCRIPTION_BEFORE("KOJO_16_0_SYSTEM_MESSAGE_14_DESCRIPTION_BEFORE")
	
	; 追加地の文関数(後)を登録
	CALL KOJO_16_0_REGIST_DESCRIPTION_AFTER("KOJO_16_0_SYSTEM_MESSAGE_14_DESCRIPTION_AFTER")
	
	; 睡眠・喪失・諦め
	SIF CFLAG:25 || CFLAG:29 || TFLAG:16 == 2
		RETURN 0

	; 催眠中
	IF KOJO_16_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_16_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_16_0_ADD_MESSAGE, @"「んあ…っ♥　うっ…あ…っ♥　じゅるるるっっ♥　はう…んっ♥♥」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"（お口の中虐められるの…　気持ちいいですわ…♥）\n"
	CASE "発情"
		CALL KOJO_16_0_ADD_MESSAGE, @"「やめへ…ぇっ…　ほふひ…っ…　いひめらいれぇ…っ……」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"（口の中かきまわされてしまうと、頭が……っ）\n"
	CASEELSE
		CALL KOJO_16_0_ADD_MESSAGE, @"（どうして手を突っ込んでますの！？　早く離れて！）\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「んんっ…！　ぐっ…！　んむううぅぅっ！！」\n"
	ENDSELECT
	CALL KOJO_16_0_PARAGRAPH_MESSAGE
	
	; 地の文側で\nするので口上側は\nで終わること
RETURN 1
