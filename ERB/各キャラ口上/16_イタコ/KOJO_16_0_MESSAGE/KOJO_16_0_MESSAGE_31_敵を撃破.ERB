; □ 汎用口上
@KOJO_16_0_SYSTEM_MESSAGE_31(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 敵別専用口上があるならそれを呼び出す
	CALL KOJO_16_0_DEPLOY_MESSAGE_SINGLE(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6, @"KOJO_16_0_SYSTEM_MESSAGE_31_ENEMY_{DA:(ARG:1):0}")
	SIF KOJO_16_0_GET_IMPORTANT_FLAG()
		RETURN 1
		
	; 催眠中
	IF KOJO_16_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			CALL KOJO_16_0_ADD_MESSAGE, @"（ほとんど動けなくても勝てることもありますのね）\n"
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			CALL KOJO_16_0_ADD_MESSAGE, @"「…………　あたしの身体…動かなく…　なりましたわ…」\n"
			RETURN 1
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_16_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_16_0_ADD_MESSAGE, @"「まだまだですわね♪」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「そんなんじゃあたしはあげられませんわ♪」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「もっと楽しませてほしかったですわ…」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「あら、もうおしまいなんですの？」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「その程度じゃ満足できませんわ？」\n"
	CASE "発情"
		CALL KOJO_16_0_ADD_MESSAGE, @"「な、なんとかなるものですのね……」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「た、たおせましたの…？」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「な、なんとか倒せましたわ……」\n"
	CASE "強気"
		CALL KOJO_16_0_ADD_MESSAGE, @"「ふぅ……　あたしもまだまだイケますわね！」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「さぁ、次のお相手はどちらですの？」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「伊達にイタコを名乗っているわけじゃありませんのよ！」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「ふふっ、楽勝でしたわ！」\n"
	CASEELSE
		CALL KOJO_16_0_ADD_MESSAGE, @"「イタコの力、思い知りまして！？」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「よし！　倒せましたわ！」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「なんのこれしき！　ですわ！」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「ふぅ……　なんとか一匹倒せましたわ……」\n"
	ENDSELECT
RETURN 1


