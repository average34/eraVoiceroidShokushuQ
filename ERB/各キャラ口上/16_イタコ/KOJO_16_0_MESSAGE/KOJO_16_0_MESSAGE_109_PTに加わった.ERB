; PT外だと理性度の変動はほぼ起こらないので、基本的に汎用口上が呼び出される
; 汎用以外の口上モードが呼び出されるのは再加入の場合がほとんど
@KOJO_16_0_SYSTEM_MESSAGE_109(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_16_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_16_0_ADD_MESSAGE, @"「えっちなお相手ならお任せくださいまし♥」\n"
	CASE "発情"
		CALL KOJO_16_0_ADD_MESSAGE, @"「つらいですが、自分の身は守ってみますわ」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「いえ♥　ちょっと熱があるだけ、大丈夫ですわ」\n"
	CASEELSE
		CALL KOJO_16_0_ADD_MESSAGE, @"「あたしに頼ってもいいんですわよ！」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「頑張って脱出すわ。絶対に」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「助かりましたわ。ひとりでは限界がありますもの……」\n"
	ENDSELECT
RETURN 1
