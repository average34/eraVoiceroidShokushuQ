
; ------------------------------------------------------------------------------
; ■ 133 部屋を移動：慎重
; ------------------------------------------------------------------------------

@KOJO_16_0_SYSTEM_MESSAGE_133(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	SELECTCASE KOJO_16_0_KOJO_MODE
	CASE "発情"
		CALL KOJO_16_0_ADD_MESSAGE, @"（カラダはヘンですの……ここは慎重にいきますわ……）\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"（魔物が居ませんように…）\n"
	CASEELSE
		CALL KOJO_16_0_ADD_MESSAGE, @"「次の部屋には何かあるといいですわね」\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"（物音を立てないよう、慎重に……）\n"
		CALL KOJO_16_0_ADD_MESSAGE, @"「なんだかあちらこちらから嫌な音が聞こえますわ……」\n"
	ENDSELECT
	
	; 移動前部屋の汚染度で追加口上
	; 清浄
	IF FLAG:(50 + FLAG:5) < 10
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「これだけ綺麗なら次のお部屋も綺麗に違いありませんわ」\n"
		ENDSELECT
		
	; 通常
	ELSEIF FLAG:(50 + FLAG:5) < 40
		
	; 軽度汚染
	ELSEIF FLAG:(50 + FLAG:5) < 70
		
	; 中度汚染
	ELSEIF FLAG:(50 + FLAG:5) < 100
		
	; 重度汚染
	ELSE
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASE "発情"
			CALL KOJO_16_0_ADD_MESSAGE, @"「ちゅあ……ヘンな気分になりますわ……」\n"
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「ぐちゃぐちゃで気持ち悪い部屋ですわね……」\n"
		ENDSELECT
	ENDIF
	
	; 眠気による追加口上
	IF FLAG:7 <= 3
		
	ELSEIF FLAG:7 <= 7
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「少し眠いですけれど、これぐらいでしたら…」\n"
		ENDSELECT
		
	ELSEIF FLAG:7 <= 11
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"（このままでは不味いですわ……あたまがぼーっと……）\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"（この眠気では集中力がもちませんわ……）\n"
		ENDSELECT
		
	ELSE
		SELECTCASE KOJO_16_0_KOJO_MODE
		CASEELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「ふわぁ……　えっと……　慎重に……進みませんと…………むにゃ…」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「す……すぴーっ……はっ」\n"
		ENDSELECT
	ENDIF
RETURN 1
