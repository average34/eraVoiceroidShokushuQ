
; ------------------------------------------------------------------------------
; ■ 52 拘束レベルアップ
;
;   拘束レベルは1～5まで
;   レベル5で一度だけ拘束MAXメッセージを表示
;   それ以降は 53 拘束レベルMAX継続が呼び出される
; ------------------------------------------------------------------------------

; □ 汎用口上
@KOJO_16_0_SYSTEM_MESSAGE_52(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 睡眠か喪失なら何もしないで戻る
	SIF CFLAG:25 || CFLAG:29
		RETURN 0
		
	; 催眠中
	IF KOJO_16_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_16_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_16_0_ADD_MESSAGE, @"「これじゃあ……　にげられませんわ……♥」\n"	
		CALL KOJO_16_0_ADD_MESSAGE, @"「もうちょっと、やさしくしてくださいまし……♥」\n"
	CASE "発情"
		CALL KOJO_16_0_ADD_MESSAGE, @"（骨がきしんで……カラダがバラバラになりそうですのに……変な感じがしますわ…っ！？）"
		CALL KOJO_16_0_PARAGRAPH_MESSAGE
		
		; 発情状態なら地の文追加
		IF CFLAG:28
			CALL KOJO_16_0_ADD_MESSAGE, @"\n\d強制的に発情させられた%CALLNAME:TARGET%は、痛み以外の奇妙な感覚に戸惑っている\d"
			CALL KOJO_16_0_PARAGRAPH_MESSAGE
		ENDIF
		CALL KOJO_16_0_ADD_MESSAGE, @"\n"
	CASEELSE
		IF BASE:MP >= (MAXBASE:MP / 100 * 66)
			CALL KOJO_16_0_ADD_MESSAGE, @"「ダメですわ！　それ以上ひっぱったら…！」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「ちゅわ……　締め付けが……っ」\n"
		ELSEIF BASE:MP >= (MAXBASE:MP / 100 * 33)
			CALL KOJO_16_0_ADD_MESSAGE, @"「くうっ……！　はな…して…ぇ！」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「はなして！　おねがいですわっ…！」\n"
		ELSE
			CALL KOJO_16_0_ADD_MESSAGE, @"「どうかゆるしてくださいまし……　おねがい、あたし、もう……もう……」\n"
			CALL KOJO_16_0_ADD_MESSAGE, @"「おねがいします……　はなして……　ください……」\n"
		ENDIF
	ENDSELECT
RETURN 1


