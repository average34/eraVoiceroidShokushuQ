
; ------------------------------------------------------------------------------
; ■ 132 部屋を移動：突撃
; ------------------------------------------------------------------------------

@KOJO_8_0_SYSTEM_MESSAGE_132(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	SELECTCASE KOJO_MODE
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"（目をつぶって走り抜ける……！）\n"
	CASE "強気"
		CALL KOJO_8_0_ADD_MESSAGE, @"「それいけー！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「次の部屋まで走れー！」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「こういうのはむしろ堂々と行ったほうがいいんです！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ゆっくり動いて変な仕掛けに引っかかっても嫌ですしね！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「もっと勢いよくいかないと！」\n"
	ENDSELECT
	
	; 移動前部屋の汚染度で追加口上
	; 清浄
	IF FLAG:(50 + FLAG:5) < 10
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「次の部屋もちゃんと掃除してあるかなー？」\n"
		ENDSELECT
		
	; 通常
	ELSEIF FLAG:(50 + FLAG:5) < 40
		
	; 軽度汚染
	ELSEIF FLAG:(50 + FLAG:5) < 70
		
	; 中度汚染
	ELSEIF FLAG:(50 + FLAG:5) < 100
		
	; 重度汚染
	ELSE
		SELECTCASE KOJO_MODE
		CASE "強気"
			CALL KOJO_8_0_ADD_MESSAGE, @"「こんな汚い場所になんて居られないです！」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「まったく、汚い部屋でした……！」\n"
		ENDSELECT
	ENDIF
RETURN 1
