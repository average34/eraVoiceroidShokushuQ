
; ------------------------------------------------------------------------------
; ■ 452 ふたなり：萎び落ちた
; ------------------------------------------------------------------------------

@KOJO_8_0_SYSTEM_MESSAGE_452(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 催眠中
	IF KOJO_8_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	; 射精中毒 Lv0
	IF ABL:12 == 0
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「ちょっとの間だったけど、スゴイ貴重な体験でしたね♥」\n"
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"（と、とれて良かった…　ずっと付いてたら…　あの感覚、忘れられなくなっちゃう……）\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「よかった…ぁ…　ちゃんと、とれるんだぁ…」\n"
		ENDSELECT
		
	; 射精中毒 Lv1
	ELSEIF ABL:12 == 1
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「気持ちいいのはいいけど、あんまり長持ちしないですねえ」\n"
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"（や、やだっ…　わたし、残念だと思ってるっ！？）\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「やっと…とれ…たぁっ……」\n"
		ENDSELECT
			
	; 射精中毒 Lv2(Lv3以上はとれないのでここまで)
	ELSEIF ABL:12 == 2
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「ま、またぁ…　どっかでおちんぽ様付けてもらわないとぉ♥」\n"
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"（またっ…とれちゃったぁ…っ…！？\n　これじゃわたし、射精できなくなっちゃう…っ…）\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"（おちんちんっ…　次のおちんちん、探さないとぉ…っ…\n　射精できないとおかしくなっちゃいそうだよぉ…っ…）\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"（あーあ…おちんちんとれちゃった）\n"
		ENDSELECT
	ENDIF
RETURN 1
