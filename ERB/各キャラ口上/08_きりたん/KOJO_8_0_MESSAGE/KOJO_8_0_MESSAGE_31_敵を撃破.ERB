; □ 汎用口上
@KOJO_8_0_SYSTEM_MESSAGE_31(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 敵別専用口上があるならそれを呼び出す
	CALL KOJO_8_0_DEPLOY_MESSAGE_SINGLE(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6, @"KOJO_8_0_SYSTEM_MESSAGE_31_ENEMY_{DA:(ARG:1):0}")
	SIF KOJO_8_0_GET_IMPORTANT_FLAG()
		RETURN 1
		
	; 催眠中
	IF KOJO_8_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			CALL KOJO_8_0_ADD_MESSAGE, @"（ろくに動けなくても何とかなるものですね）\n"
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			CALL KOJO_8_0_ADD_MESSAGE, @"「…………　動かなく…　なっちゃい…　ました……」\n"
			RETURN 1
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「こんな小学生に負けちゃうなんて情けな～い」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「もっとわたしを楽しませてよ～」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「もっと楽しめると思ったのに」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「あらら、もうおしまいなのぉ？」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「そんなんじゃ満足できないですよぉ？」\n"
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"「や、やれば出来るものですね……」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「も、もう動かないですよね？」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「な、なんとか倒せた……」\n"
	CASE "強気"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ふぅ……　わたしはまだまだイケますよ！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「さ～て、次はどいつです？」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「この%CALLNAME:TARGET%様に逆らうなんて百万年早いです！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ふん、楽勝！」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「%CALLNAME:TARGET%様の力、思い知ったか」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「よっし！　倒した！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「一丁上がり！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ふぅ……　なんとか一匹……」\n"
	ENDSELECT
RETURN 1


