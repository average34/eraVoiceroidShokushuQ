		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			SELECTCASE KOJO_MODE
			CASE "淫乱"
				CALL KOJO_8_0_ADD_MESSAGE, @"「%KOJO_8_0_CALLNAME_FROM_ID(ARG:3)%は今からおまんこオナニーをするんです♥　使っていいのはわたし%TACHI()%のおちんぽだけ♥ はいスタート♥♥」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「おちんぽ勃起止まらないな～♥　どっかに全自動オナホとかないかな～♥」\n"
			CASEELSE
				CALL KOJO_8_0_ADD_MESSAGE, @"「%KOJO_8_0_CALLNAME_FROM_ID(ARG:3)%はおまんこで、わたし%TACHI()%のおちんちんを食べて……　自分から腰をふって……」\n"
			ENDSELECT
			
		; 発情・感情操作系
		CASE 1
			SELECTCASE KOJO_MODE
			CASE "淫乱"
				CALL KOJO_8_0_ADD_MESSAGE, @"「ほらほら、%KOJO_8_0_CALLNAME_FROM_ID(ARG:3)%の大好きなおちんちんですよぉ♥　犯したいでしょう♥♥」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「『私はセックスのことばかり考える変態で淫乱なおまんこ奴隷です』\n　って言えたら%KOJO_8_0_CALLNAME_FROM_ID(ARG:3)%の大好きなおちんちん、食べてもいいよぉ♥♥」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「今の%KOJO_8_0_CALLNAME_FROM_ID(ARG:3)%は淫らなおまんこ奴隷♥　セックスする事しか考えられないんですもんね、かわいそ～♥♥」\n"
			CASEELSE
				CALL KOJO_8_0_ADD_MESSAGE, @"「ほ、ほらっ…　%KOJO_8_0_CALLNAME_FROM_ID(ARG:3)%の大好きなセックスの時間ですよ…　特別にわたし%TACHI()%のおちんちん使わせてあげる…」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「今から%KOJO_8_0_CALLNAME_FROM_ID(ARG:3)%は、わたし%TACHI()%のおちんちんを犯すの　ほらほら、おまんこが疼いてきたんですよね？」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「そんな目でおちんちん見られたら興奮しちゃいますよぉ\n　ほら、好きに食べて良いですよ」\n"
			ENDSELECT
			
		; 無意識・認識操作系
		CASE 2
			SELECTCASE KOJO_MODE
			CASE "淫乱"
				CALL KOJO_8_0_ADD_MESSAGE, @"「%KOJO_8_0_CALLNAME_FROM_ID(ARG:3)%のおまんこは今精液便所になってるの\n　精液便所の前におちんぽがあるんだもの、やることは判るでしょう♥」\n"
			CASEELSE
				CALL KOJO_8_0_ADD_MESSAGE, @"「%KOJO_8_0_CALLNAME_FROM_ID(ARG:3)%はおまんこを使って、わたし%TACHI()%のおちんちんを気持ちよくしたい…　そうですよね？」\n"
			ENDSELECT
		ENDSELECT
		
	; きりたんはパーティーメンバー
	ELSE
		SELECTCASE KOJO_MODE
		CASE "淫乱" 
			CALL KOJO_8_0_ADD_MESSAGE, @"「わたしも%KOJO_8_0_CALLNAME_FROM_ID(ARG:3)%のおまんこかき混ぜてぇ、気持ちよく射精したいなー♥」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「あ、わたしのおちんちんも気持ちよくしてください…　%KOJO_8_0_CALLNAME_FROM_ID(ARG:3)%達見てたら、ガマンできなくなっちゃいました…」\n"
		ENDSELECT
	ENDIF
	CALL KOJO_8_0_PARAGRAPH_MESSAGE
	
	; 地の文を表示
	CALL KOJO_8_0_ADD_MESSAGE, @"\M"
RETURN 1


