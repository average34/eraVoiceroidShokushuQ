		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			CALL KOJO_8_0_ADD_MESSAGE, @"\d催眠の力で身体の自由を奪われた%ARGS:1%に、%CALLNAME:TARGET%は囁いた\d\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"\d催眠の力で身体の自由を奪われた%ARGS:1%に、%CALLNAME:TARGET%は命令した\d\n"
		; 発情・感情操作系
		CASE 1
			CALL KOJO_8_0_ADD_MESSAGE, @"\d催眠の力で快楽を得る事しか考えられなくなった%ARGS:1%に、%CALLNAME:TARGET%は囁いた\d\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"\d催眠の力で快楽を得る事しか考えられなくなった%ARGS:1%に、%CALLNAME:TARGET%は命令した\d\n"
		; 無意識・認識操作系
		CASE 2
			CALL KOJO_8_0_ADD_MESSAGE, @"\d催眠の力で何でも言うことを聞くようになった%ARGS:1%に、%CALLNAME:TARGET%は囁いた\d\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"\d催眠の力で何でも言うことを聞くようになった%ARGS:1%に、%CALLNAME:TARGET%は命令した\d\n"
		ENDSELECT
		
	; 同意
	CASE 1
		CALL KOJO_8_0_ADD_MESSAGE, @"\d今から何をされるか察し身体の力を抜いた%ARGS:1%に、%CALLNAME:TARGET%はゆっくりと近付いた\d\n"
	ENDSELECT
	CALL KOJO_8_0_PARAGRAPH_MESSAGE
RETURN 1


