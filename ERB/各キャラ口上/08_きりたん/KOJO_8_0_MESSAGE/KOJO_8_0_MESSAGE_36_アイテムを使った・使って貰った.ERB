; □ 54 着替えセット
@KOJO_8_0_SYSTEM_MESSAGE_36_54(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 前の服状態による口上
	; 裸だった
	IF PREV_BASE:3 == 0
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「ああ、服を着てるって安心感がありますね」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「やっぱ裸は良くないですよねえ」\n"
		ENDSELECT
		
	; 新品だった
	ELSEIF PREV_BASE:3 == MAXBASE:3
		SELECTCASE KOJO_MODE
		CASE "強気"
			CALL KOJO_8_0_ADD_MESSAGE, @"「資源が乏しい場所での豪遊だからこそ、おしゃれって感じですか？」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「やっぱり新しい服はいいですねー」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「いくら破れてないっていっても、やっぱり清潔な服がいいですよねえ」\n"
		ENDSELECT
	
	; 破れていた
	ELSE
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「これで防御は完璧！」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「ほんの少しの傷で大事に至ることだってありますからね」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「おお、ぴったり♪」\n"
		ENDSELECT
	ENDIF
	
	; 服装による追加口上
	SELECTCASE CFLAG:501
	; 00:いつもの服
	CASE 0
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「やっぱりこの服が一番わたしの魅力を引き出せるんですよねー♥」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「何でわたしの服が落ちてるんですか…　ううむ、どう考えたって怪しいです…」\n"
		ENDSELECT
	; 01:普通の服
	CASE 1
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「こういう時こそ長いスカートがいいんですけどね」\n"
		ENDSELECT
	; 02:体操着
	CASE 2
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「動きやすくはあるんですよね、この服…」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「随分としっくりきますが、まさか私のですか？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「動きやすいのは良いですが、防御力は低いんですよね」\n"
		ENDSELECT
	; 03:メイド服
	CASE 3
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「コスプレ用ですかね？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「うわ思った以上に生地が本格的ですね」\n"
		ENDSELECT
	; 04:パジャマ
	CASE 4
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「パジャマもいいけど布団が欲しいです\n　あっという間に万年床みたいになりそうですけど…」\n"
		ENDSELECT
	; 05:巫女服
	CASE 5
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「巫女服ですね、ずん姉様に似合いそうです」\n"
		ENDSELECT
	; 06:スクール水着
	CASE 6
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「まったく、どこで泳げって言うんですか！」\n"
		ENDSELECT
	; 07:マイクロビキニ
	CASE 7
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「ほとんど丸見えじゃないですか♥　こんなの着て襲われたらどうするんですか♥♥」\n"
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"「何も着てないよりはいいけど…」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「こ、これ服じゃないですよ！？」\n"
		ENDSELECT
	; 08:ボディスーツ
	CASE 8
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「ぴっちりしてますねぇ、誰の趣味ですか？」\n"
		ENDSELECT
	; 09:セーラー服
	CASE 9
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「ずん姉様の？　いや、私にぴったりですね」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「将来はこれを着て学校に行くんでしょうか」\n"
		ENDSELECT
	; 10:半ズボン
	CASE 10
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「動きやすくはありますけど…」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「う～ん、ちょっと窮屈かも…」\n"
		ENDSELECT
	; 11:妊婦服
	CASE 11
		; 妊娠・寄生されている
		IF CFLAG:36 >= 3 || (CFLAG:22 && CFLAG:36 == 0)
			SELECTCASE KOJO_MODE
			CASEELSE
				CALL KOJO_8_0_ADD_MESSAGE, @"「なんですかこの服、わたしへの当てつけですか？」\n"
			ENDSELECT
			
		; 通常状態
		ELSE
			SELECTCASE KOJO_MODE
			CASEELSE
				CALL KOJO_8_0_ADD_MESSAGE, @"「機能的なのはいいけど、ここじゃ弱点が増えるだけですよね」\n"
			ENDSELECT
		ENDIF
	; 12:ランジェリードレス
	CASE 12
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「こんな服着てたら、誘ってるって思われても仕方ないですよねぇ♥」\n"
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"「やだぁ…　この服、透けすぎ…っ…」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「こんな場所で、誰に見せつけろって言うんですか…」\n"
		ENDSELECT
	; 13:セーター
	CASE 13
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「あったかくて着心地はいいけど、ベタベタにされたら拭き取りにくそうだなあ」\n"
		ENDSELECT
	; 14:チャイナドレス
	CASE 14
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「可愛いんですけど、ちょっと見えすぎじゃないですか？\n　大きく動いたら丸見えになっちゃいそう」\n"
		ENDSELECT
	; 15:貞操帯
	CASE 15
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「ふぅ…　しばらくの間気持ちいいのとはお別れですかね…」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「うぇ～、悪趣味～！\n　わたし%TACHI()%を犯そうとする奴らだらけの場所で、コレで身を守れって言うんですか？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「こんなのを付けなきゃいけない日が来るとは思わなかったです…\n　仕方ないです、安全第一で行きましょう…」\n"
		ENDSELECT
	; 16:ポイントアーマー
	CASE 16
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「女戦士と触手、って王道ですよねえ♥」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「お、重い…　けど、防御力は期待できそうですね…」\n"
		ENDSELECT
	; 17:園児服
	CASE 17
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「よし、どっからどう見ても園児！\n　オンナの部分まで子供かどうかは保証しないけど♥」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「こういう服が落ちてるって事はさー、小さい子供を犯して喜ぶ変態がいるって事ですよね♥」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「こう極端な子供服が似合っても、全然嬉しくないです…」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"（何も言うまい……）\n"
		ENDSELECT
	; 18:エプロン
	CASE 18
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「炊事以外でこんなに役に立つ服があるとは思わなかったです！」\n"
		ENDSELECT
	; 19:ローブ
	CASE 19
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「杖でも持ってりゃ更にそれっぽいですかね？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「ふふん♪　魔法でも使えそうな気分です」\n"
		ENDSELECT
	; 20:ウェディングドレス
	CASE 20
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「ここに迷い込んだのは、全員触手のお嫁さんて事ですか♥　ふふん、尻に敷いてやろうじゃないですか♥♥」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「このドレスを着て犯されろってことですね♥　わたしを食べちゃうお婿さんは誰かしら～♥」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「わたしはやっぱり白無垢のが好みですね♪　まあ西洋風もコレはコレで♪」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「で、誰と誰が結婚するって？」\n"
		ENDSELECT
	; 21:ふんどし
	CASE 21
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「むー…　履いた事はありますけど…」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「この下着だけじゃなくて服も欲しいです」\n"
		ENDSELECT
	; 22:触手服
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「うげ…　これ、本当に服？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「うわ…　動いてるますよ、この服……」\n"
		ENDSELECT
	; 23:スリングショット
	CASE 23
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「普通の服の下にえっちな格好って、なんかドキドキするぅ♥」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「これが服？　紐の間違いじゃないですか？」\n"
		ENDSELECT
	ENDSELECT
	
	; 過去に触手スーツを経験済みなら追加口上あり
	; ただし触手服選択時は除く
	IF GETBIT(CFLAG:900, 2) && CFLAG:501 != 22
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「ちょ～っと期待したんんだけどなあ、えっちな服」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「前に着た気持ちいい服、凄かったなぁ…♥」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「この服は普通の服ですか？　それとも気持ちいい服ですか？」\n"
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"（ほっ…　この服は大丈夫みたいです…）\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"（今回はちゃんとした服でありますように…）\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「よかった、これは普通の服ですね」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「もう変な服はごめんです…」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「この服は…　大丈夫ですよね…？」\n"
		ENDSELECT
	ENDIF
RETURN 1


