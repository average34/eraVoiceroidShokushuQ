	TEMP = BASE:CP * 100 / MAXBASE:CP
	
	; 服:新品
	IF TEMP >= 100
	; 服:通常
	ELSEIF TEMP > 66
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「服の破れた所から攻撃されたりは困るしね」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「応急処置ならまあ、こんなものですかね」\n"
		ENDSELECT
		
	; 服:損傷
	ELSEIF TEMP > 33
	; 服:中破
	ELSE
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「こんな布っきれでも、何も着てないよりはマシかしですかね…」\n"
			CALL KOJO_8_0_PARAGRAPH_MESSAGE
		ENDSELECT
	ENDIF
RETURN 1

