			CALL KOJO_8_0_ADD_MESSAGE, @"（ま、一人よりはマシかな……）\n"
		ENDIF
	ENDIF
	
	; 3人目勧誘成なら追加口上
	IF GET_MEMBER_SUM() == 2
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「一人よりも二人、二人よりも三人ですね♪」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「人数が揃うと心強いです」\n"
