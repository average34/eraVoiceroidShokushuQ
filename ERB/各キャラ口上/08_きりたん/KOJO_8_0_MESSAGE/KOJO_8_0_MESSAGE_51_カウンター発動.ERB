
; ------------------------------------------------------------------------------
; ■ 51 カウンター発動
; ------------------------------------------------------------------------------

@KOJO_8_0_SYSTEM_MESSAGE_51(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「そんな動きじゃ、えっちな小学生さんに食べられちゃいますよぉ♪」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「エッチなメス相手だからって、気は抜かないでね♪」\n"
	CASE "弱気"
		CALL KOJO_8_0_ADD_MESSAGE, @"（わたしの力でも、こうすれば……！）\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"（あいての死角から、こう……）\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"（隙が見えた……）\n"
	CASE "強気"
		CALL KOJO_8_0_ADD_MESSAGE, @"「その動き、隙だらけです！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「飛んで火に入る夏の虫ぃっ！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ふっふっふ！　待ってました！」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「やっぱ、こういうのの方が向いてますね」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「小学生だからって、舐めないでください！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「そっこだぁっ！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「スキありぃっ！」\n"
	ENDSELECT
RETURN 1
