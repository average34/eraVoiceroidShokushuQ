; □ 汎用口上
@KOJO_8_0_SYSTEM_MESSAGE_21(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 二段攻撃も外す
	IF KOJO_8_0_GET_PREV_ARG(0) == 21
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「これはひどい……　じゃ済まないです……」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「二発ともっ！？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「もしかして、わたしバカにされてない？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「なんで当たらないんですかー！！」\n"
		ENDSELECT
		
	; 通常攻撃を外す
	ELSE
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「どうにも手元がブレちゃういます……」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「あぁん♥　犯されるトコロ、想像しちゃって……　集中できないですよぉ……♥」\n"
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"「はぁ……　はぁ……　あたっ……てよぉっ……」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「うぁ……っ！？　お股、こすれて……っ！？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「うぅ……　やっぱり当たらない…」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「なんで当たんないんですかー！？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「なんちゃって　冗談ですよ冗談」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「あっ！？　外れた！？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「むぅ、意外とすばやい……」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「ああもう、ちゃんと当たりに来てくださいよ！」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「もうちょっとトリッキーな動きのがいいんですかね？」\n"
		ENDSELECT
	ENDIF
RETURN 1


