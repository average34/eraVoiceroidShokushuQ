	ELSEIF ABL:12 >= 3 || TALENT:121
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「もっとぉっ…♥　もっと踏んでぇっ♥　足でシコシコされるの好きぃっ♥♥」\n"
		ENDSELECT
	ENDIF
RETURN 1


