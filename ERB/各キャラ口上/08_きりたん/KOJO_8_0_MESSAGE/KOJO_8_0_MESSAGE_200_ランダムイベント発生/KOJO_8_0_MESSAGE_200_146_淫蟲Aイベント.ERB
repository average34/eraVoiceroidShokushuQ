@KOJO_8_0_SYSTEM_MESSAGE_200_146(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	CALL KOJO_8_0_ADD_MESSAGE, @"\dあふれ出した淫蟲は、%CALLNAME:TARGET%を拘束すると巣穴に向けて尻を突き出させた！\d\n"
	CALL KOJO_8_0_PARAGRAPH_MESSAGE
	CALL KOJO_8_0_ADD_MESSAGE, @"\d淫蟲は媚薬混じりの粘液を塗り込みながら、%CALLNAME:TARGET%の尻穴へ次々と潜り込んでいく！\d\n"

	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ひゃぁん♥　おしりぃっ♥　とかされてるみたいぃぃっ♥♥」\n"
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"「うああぁぁっ！？　あつぃぃ…っ！　おしりがあついよぉぉっ！！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「いやああぁぁぁっ！？　入ってくるっ！　はいってくるううっぅっ！！」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「んぎ…っっ！？　そこはあぁぁっ、入れる場所じゃ…ないですぅっ！？」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ぐぁ…っ…　おなか、おも……ぉっ！」\n"
	ENDSELECT
	CALL KOJO_8_0_PARAGRAPH_MESSAGE
	
	CALL KOJO_8_0_ADD_MESSAGE, @"\d媚薬の毒に屈したアヌスは、きりたんの意思を無視して勝手に肉欲を貪っている…\d\n"
RETURN 1
