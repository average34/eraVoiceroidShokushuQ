; □ 1 普通に食べる
@KOJO_8_0_SYSTEM_MESSAGE_170_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「触手まみれな場所に生えてるワリに、まともな食べ物があることが驚きです\n　見てくれは変だけど、ちゃんとおいしいし…」\n"
	ENDSELECT
RETURN 1


; □ 2 野菜自慰
@KOJO_8_0_SYSTEM_MESSAGE_170_2(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「はぁ…ぁ…♥　ごちそうさま…でしたぁ…♥♥」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「思ってた以上に…　気持ちよかった…かも…」\n"
	ENDSELECT
RETURN 1


; □ 3 強制回復
@KOJO_8_0_SYSTEM_MESSAGE_170_3(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ごちそうさま　…でいいんですよね、この場合」\n"
	CASE "強気"
		CALL KOJO_8_0_ADD_MESSAGE, @"「なんだか釈然としないです…」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「なんなんですか一体…」\n"
	ENDSELECT
RETURN 1
