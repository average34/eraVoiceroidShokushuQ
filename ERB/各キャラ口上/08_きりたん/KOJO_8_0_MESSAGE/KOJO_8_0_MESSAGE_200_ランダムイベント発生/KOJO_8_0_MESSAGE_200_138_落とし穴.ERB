; □ 1 回避失敗
@KOJO_8_0_SYSTEM_MESSAGE_200_138_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ああっ♥　ナカ…っ、ぬるぬるがいっぱいっ♥♥」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「わたしは落とし穴に落とす方なのにいぃっ！？」\n"
	ENDSELECT
RETURN 1


; □ 2 回避成功
@KOJO_8_0_SYSTEM_MESSAGE_200_138_2(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「つい避けちゃったけど、ちょっと落ちてみたいかも……」\n"
	CASE "強気"
		CALL KOJO_8_0_ADD_MESSAGE, @"「わたしを落とし穴に落とそうなんて十年早いです！」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「うっわ、エグい落とし穴ですね」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"（うわ…あんなトコ落ちたら…わたし…）\n"
	ENDSELECT
RETURN 1


