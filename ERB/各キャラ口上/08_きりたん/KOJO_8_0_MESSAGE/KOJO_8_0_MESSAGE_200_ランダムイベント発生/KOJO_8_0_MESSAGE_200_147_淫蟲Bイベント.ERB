@KOJO_8_0_SYSTEM_MESSAGE_200_147(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	CALL KOJO_8_0_ADD_MESSAGE, @"\dあふれ出した淫蟲は、%CALLNAME:TARGET%を拘束すると巣穴に向けて胸を突き出させた！\d\n"
	CALL KOJO_8_0_PARAGRAPH_MESSAGE
	
	; CPで分岐
	IF BASE:3 == 0
		CALL KOJO_8_0_ADD_MESSAGE, @"\d淫蟲は媚薬混じりの粘液を服の上から塗りたくると、%CALLNAME:TARGET%の乳房を執拗に嬲り始めた！\d\n"
	ELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"\d注射器のような淫蟲が怪しげな液体を注ぎ込んだ瞬間、%CALLNAME:TARGET%の胸は快楽を求めるように火照りだした！\d\n"
	ENDIF
	CALL KOJO_8_0_PARAGRAPH_MESSAGE
	
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「おっぱいの…っ♥　さきっぽ、からぁ…♥　ビリビリしたのが響く…ぅッ♥♥」\n"
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"「おかしくなっちゃった…っ♥　おっぱい、おかしくなっちゃったぁ…っ♥♥」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「あっ、あなたぁ…っ♥　わたしの胸に、なにしたんですかぁっ♥♥」\n"
	ENDSELECT
	CALL KOJO_8_0_PARAGRAPH_MESSAGE
	
	CALL KOJO_8_0_ADD_MESSAGE, @"\d媚薬漬けにされた胸を弄られる度、%CALLNAME:TARGET%の声は甘く蕩けていく…\d\n"
RETURN 1
