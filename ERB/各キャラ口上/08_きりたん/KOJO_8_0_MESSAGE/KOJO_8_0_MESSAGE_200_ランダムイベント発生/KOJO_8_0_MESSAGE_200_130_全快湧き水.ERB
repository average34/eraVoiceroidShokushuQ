; □ 0 飲んだ
@KOJO_8_0_SYSTEM_MESSAGE_200_130_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「ゲームに出てくる傷を癒やす泉ってやつですか、実際に見ると原理が謎ですね」\n"
	ENDSELECT
RETURN 1


