; □ 0 淫蟲に襲われた(主人公以外)
@KOJO_8_0_SYSTEM_MESSAGE_200_148_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	CALL KOJO_8_0_ADD_MESSAGE, @"\dあふれ出した淫蟲は、%CALLNAME:TARGET%の股間を執拗に責めはじめた！\d\n"
	CALL KOJO_8_0_PARAGRAPH_MESSAGE

	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「あんっ♪　そんな急にっ♪」\n"
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ひぃっ！　やあぁぁっ！！　いやああぁぁっっ！！」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「もうちょっと判りやすい巣をつくってくださいよぉ！？」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ちょっ…　ちょっと待って！？」\n"
	ENDSELECT
	CALL KOJO_8_0_PARAGRAPH_MESSAGE
	
	; ふたなり
	IF GET_PENIS(TARGET)
		CALL KOJO_8_0_ADD_MESSAGE, @"\d強制的に勃起させられた雌ペニスが快感に震えビクビクと脈打っている！\d\n"
	; 通常
	ELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"\d包皮を剥かれ、露出したクリトリスが刺激される度、%CALLNAME:TARGET%の身体が小さく跳ねる…\d\n"
	ENDIF
	CALL KOJO_8_0_PARAGRAPH_MESSAGE
RETURN 1


; □ 1 淫蟲に襲われた(主人公)
@KOJO_8_0_SYSTEM_MESSAGE_200_148_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	; 主人公以外が襲われたときと同じ処理で
	CALL KOJO_8_0_SYSTEM_MESSAGE_200_148_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
RETURN 1


