@KOJO_8_0_SYSTEM_MESSAGE_200_143_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「しまった……　睡眠ガス……です……」\n"
	ENDSELECT
	
	; 眠気によって分岐
	IF FLAG:7 <= 3
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「効果は薄いですが……眠い時に吸ったらマズかったかも……」\n"
		ENDSELECT
		
	ELSEIF FLAG:7 <= 7
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「この程度の眠気なら、なんとか……」\n"
		ENDSELECT
		
	ELSEIF FLAG:7 <= 11
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「うぅ……　ただでさえ眠いって言うのに……」\n"
		ENDSELECT
		
	ELSE
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「やば……　起きてるのも限界なのに、こんな……」\n"
		ENDSELECT
	ENDIF
RETURN 1


