; □ 0 荷物袋を開ける
@KOJO_8_0_SYSTEM_MESSAGE_200_141_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「絶対開けるなって言われたら、開けるのがお約束です」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ちょ、ちょっと待って！？　あなたどうやって入ってたんですか！？」\n"
	ENDSELECT
RETURN 1


; □ 1 荷物袋を開けない
@KOJO_8_0_SYSTEM_MESSAGE_200_141_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	; 荷物袋の中身によって口上が変化するとマズいので、通常荷物袋の口上を呼び出す
	CALL KOJO_8_0_SYSTEM_MESSAGE_200_140_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
