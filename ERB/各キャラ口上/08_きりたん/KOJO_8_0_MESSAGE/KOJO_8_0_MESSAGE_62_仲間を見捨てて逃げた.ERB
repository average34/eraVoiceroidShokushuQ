
; ------------------------------------------------------------------------------
; ■ 62 仲間を見捨てて逃げた
; ------------------------------------------------------------------------------

; □ X 汎用口上
@KOJO_8_0_SYSTEM_MESSAGE_62(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 催眠中
	IF KOJO_8_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_MODE
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ごめんな……さぃっ……！　でもっ……　わたしじゃ……　助けられない……！」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「あとでちゃんと助けに来るからー！\n　……嘘じゃないです！」\n"
	ENDSELECT
	
	; 自分だけ逃げた
	IF (GET_MEMBER_SUM() == 2 && ARG:3 == 0) || (GET_MEMBER_SUM() == 3 && ARG:3 != 0)
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"（わたしだけでも逃げないと――　助けを呼ばないと――）\n"
		ENDSELECT
	ENDIF
RETURN 1


; □ 1 クイーン戦
