
; ------------------------------------------------------------------------------
; ■ 133 部屋を移動：慎重
; ------------------------------------------------------------------------------

@KOJO_8_0_SYSTEM_MESSAGE_133(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	SELECTCASE KOJO_MODE
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"（待ちぶせ……　罠……　悪いことばかり考えちゃうなあ……）\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"（大丈夫……　大丈夫……　落ち着いて動けば、怖い物なんてない……）\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"（ヘンなのが居ませんように……）\n"
	CASE "強気"
		CALL KOJO_8_0_ADD_MESSAGE, @"「変にビクついてるととっさに動けなくなりますからね\n　いつも通り、いつも通り」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「次の部屋は何があるかな」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"（物音を立てないよう、気をつけて……）\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"（ゆっくり行って、何か居たらすぐに隠れるっ！）\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「いくら耳を澄ましても嫌な音しか聞こえやしないんですよね、慎重にもなりますよ……」\n"
	ENDSELECT
	
	; 移動前部屋の汚染度で追加口上
	; 清浄
	IF FLAG:(50 + FLAG:5) < 10
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「次の部屋も綺麗だといいなあ」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「こんな綺麗な部屋が続いてくれると嬉しいんですけどね」\n"
		ENDSELECT
		
	; 通常
	ELSEIF FLAG:(50 + FLAG:5) < 40
		
	; 軽度汚染
	ELSEIF FLAG:(50 + FLAG:5) < 70
		
	; 中度汚染
	ELSEIF FLAG:(50 + FLAG:5) < 100
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"（出てく前に少し片しておいたほうが良かったかな？　ヘンなもの湧きそうですし）\n"
		ENDSELECT
		
	; 重度汚染
	ELSE
		SELECTCASE KOJO_MODE
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"「もうこの部屋来たくないなあ……」\n"
		CASE "強気"
			CALL KOJO_8_0_ADD_MESSAGE, @"「こんな汚い部屋からは、とっととオサラバしましょ」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「こんな酷い部屋からは、さっさと出ないと病気になっちゃいます」\n"
		ENDSELECT
	ENDIF
	
	; 眠気による追加口上
	IF FLAG:7 <= 3
		
	ELSEIF FLAG:7 <= 7
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「用心深く行動したいなら、まず眠気どうにかしたほうが」\n"
		ENDSELECT
		
	ELSEIF FLAG:7 <= 11
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"（こんだけ眠いと、どんだけ警戒しても見落としが出ますね……）\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"（どんだけ気を張っても、生理現象には勝てないですよ……　眠い……）\n"
		ENDSELECT
		
	ELSE
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「慎重に……　慎重に……　ねむ……」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「この眠気じゃ、慎重にって言ってもね」\n"
		ENDSELECT
	ENDIF
RETURN 1
