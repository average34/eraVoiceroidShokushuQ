; □ XX 消耗武器攻撃 汎用口上
@KOJO_8_0_SYSTEM_MESSAGE_1_THROW_ATTACK(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 汎用攻撃口上を読み込む
	CALL KOJO_8_0_SYSTEM_MESSAGE_1_VERSATILE_ATTACK(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	CALL KOJO_8_0_FIX_MESSAGE
	
	; 基本口上
	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「どんな武器でも直接殴りかかるよりはマシですねぇ」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「やっぱり遠くからぺしぺしする方が性に合います\n　攻撃の届かない高台とかから一方的に撃てれば一番いいんですけど」\n"
	ENDSELECT

	; 武器別追加口上
	SELECTCASE TFLAG:67
	; 火炎放射器
	CASE 3
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「もっと燃えるがいいや！」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「攻撃するのはいいけど、ヤケドに気をつけないと」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「ひゃっはー！　汚物は消毒だー！……一度言ってみたかったんですよね」\n"
		ENDSELECT
	ENDSELECT
RETURN 1
