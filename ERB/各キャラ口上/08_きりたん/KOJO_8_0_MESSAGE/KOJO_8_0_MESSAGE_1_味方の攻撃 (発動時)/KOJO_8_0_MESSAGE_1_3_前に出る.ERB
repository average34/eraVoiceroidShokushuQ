
; ------------------------------------------------------------------------------
; ■ 1 味方の攻撃 (発動時) - 3 前に出る
; ------------------------------------------------------------------------------

@KOJO_8_0_SYSTEM_MESSAGE_1_3(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; PTメンバーがいる
	IF GET_MEMBER_SUM() > 1
		SELECTCASE KOJO_MODE
		CASE "強気"
			CALL KOJO_8_0_ADD_MESSAGE, @"「私が前に出ます！」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"（安全な距離を保ったまま、少しでも近くに……）\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「なんとなく前に出たけど、これって囮役じゃないですかー！？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「鬼さんこちらー　ほらほら、こっちですよー」\n"
		ENDSELECT
		
	; ひとりだよ
	ELSE
		SELECTCASE KOJO_MODE
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"（とりあえず近付いたけど、軽率だったかも…）\n"
		CASE "強気"
			CALL KOJO_8_0_ADD_MESSAGE, @"「手っ取り早く済ませないと」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「攻撃は最大の防御です、手早くいきますよ！」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「ちょっとでも攻撃を当てやすく…」\n"
		ENDSELECT
	ENDIF
RETURN 1
