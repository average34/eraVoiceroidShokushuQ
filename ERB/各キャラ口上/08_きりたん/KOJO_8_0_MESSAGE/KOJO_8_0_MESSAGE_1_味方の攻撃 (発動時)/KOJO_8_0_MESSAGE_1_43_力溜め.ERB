; □ 0 通常
@KOJO_8_0_SYSTEM_MESSAGE_1_43_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「緩い捕まえ方してると、獲物が逃げちゃいますよ～♪」\n"
	CASE "強気"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ぬるい捕まえ方、こんなのすぐに振り払ってやるんだから！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"（いつまでも捕まってると思わないでよ！）\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"（こいつの力が緩んだら、その瞬間を逃さず振りほどく！）\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"（隙を見せたら、すぐに脱出してやるんだから！）\n"
	ENDSELECT
RETURN 1


