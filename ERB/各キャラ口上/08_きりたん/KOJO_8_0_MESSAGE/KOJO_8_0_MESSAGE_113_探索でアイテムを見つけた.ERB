; □ 54 着替えセット
@KOJO_8_0_SYSTEM_MESSAGE_113_54(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 喪失中は何もしないで帰る
	SIF CFLAG:29
		RETURN 0
	
	; 服のストックなし
	IF ITEM:54 == 0
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「予備の着替えなかったから助かります」\n"
		ENDSELECT
		
		; 自身のCPも低いなら追加口上
		IF BASE:CP <= (MAXBASE:CP / 100 * 25)
			CALL KOJO_8_0_ADD_MESSAGE, @"「新しい服探してたんですよ\n　早いとこ着替えたいです、ボロボロだし……」\n"
		ENDIF
		
	; 服のストックあり
