		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「ありがたいけど、なんで新品の服が落ちてるんだろう？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「すぐダメになっちゃうから服はいくらあっても困らないですね」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「普段ならどうでもいいけど、ここだと多分貴重品ですね」\n"
		ENDSELECT
		
		IF BASE:CP <= (MAXBASE:CP / 100 * 25)
			CALL KOJO_8_0_ADD_MESSAGE, @"「おっ、新しい服\n　替えも何着かあるし、ボロボロの服着てないで着替えたいです」\n"
		ENDIF
	ENDIF
RETURN 1


