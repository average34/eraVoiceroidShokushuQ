		CALL KOJO_8_0_ADD_MESSAGE, @"「でっかいだけ奴は攻撃も大雑把ですね」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「でっかいだけで動きは遅いですね」\n"
	ENDSELECT
RETURN 1


