			CALL KOJO_8_0_ADD_MESSAGE, @"「しぼらないでェっ！　壊れちゃうっっ！ごわれぢゃううぅゥ――っ！！」\n"
		ENDSELECT
	
	; 連続で胸絶頂しているなら触手スーツに追加の母乳を絞られた
	ELSE
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「だめぇ…　もう…　しぼらないでぇ……っ」\n"
