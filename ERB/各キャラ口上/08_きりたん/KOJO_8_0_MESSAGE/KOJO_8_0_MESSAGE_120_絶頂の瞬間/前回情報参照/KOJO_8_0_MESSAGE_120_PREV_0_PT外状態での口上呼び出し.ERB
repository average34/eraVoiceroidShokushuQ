
; ------------------------------------------------------------------------------
; ■ 120 絶頂の瞬間 - 前回情報参照 0 PT外状態での口上呼び出し
; ------------------------------------------------------------------------------
; PT外状態での口上呼び出し(遭遇時会話など)が発生した場合、1ターン前のARG:0～ARG:6は突飛な口上を呼び出さないよう0に固定される
; ここではARG:0～ARG:6が0になっている場合のみ動作する口上を記述する、情報参照が可能な場合は別途分岐を作成する事

; □ ROOT
@KOJO_8_0_SYSTEM_MESSAGE_120_PREV_0_0_0_0_0_0_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; りばーす東方触手宮では不具合の可能性がある為無効化
	SIF KOJO_8_0_IS_REVERSE()
		RETURN 0
		
	; 行動不能時にレイプされた(ARGで管理出来ないのでいろいろと判定 内容は以下の通り)
	; ※ 非戦闘中, 非PTメンバー, 喪失 or 催眠 or 拘束中, 行動中のPTがレイプ可能条件を満たす(ふたなりか戦意喪失)
	IF !TFLAG:13 && !(CHECK_MEMBER_FROM_ID(TARGET)) && (CFLAG:29 || KOJO_8_0_IS_HYPNO() || CFLAG:504) && (GET_PENIS(1) && (FLAG:520 == 2 || (FLAG:10 == 0 || (FLAG:11 == 0 && (CFLAG:(FLAG:10):29 || GET_PENIS(FLAG:10))) || ((CFLAG:(FLAG:10):29 || GET_PENIS(FLAG:10)) && (CFLAG:(FLAG:11):29 || GET_PENIS(FLAG:11))))))
		; 催眠中
		IF KOJO_8_0_IS_HYPNO()
			CALL KOJO_8_0_DEPLOY_MESSAGE_SINGLE(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6, "KOJO_8_0_SYSTEM_MESSAGE_120_PREV_0_0_0_0_0_0_0_RAPE_HYPNO")
		; 喪失中
		ELSEIF CFLAG:29
			CALL KOJO_8_0_DEPLOY_MESSAGE_SINGLE(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6, "KOJO_8_0_SYSTEM_MESSAGE_120_PREV_0_0_0_0_0_0_0_RAPE_STEAL")
		; 拘束中
		ELSE
			CALL KOJO_8_0_DEPLOY_MESSAGE_SINGLE(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6, "KOJO_8_0_SYSTEM_MESSAGE_120_PREV_0_0_0_0_0_0_0_RAPE_BIND")
		ENDIF
	ENDIF
RETURN RESULT


