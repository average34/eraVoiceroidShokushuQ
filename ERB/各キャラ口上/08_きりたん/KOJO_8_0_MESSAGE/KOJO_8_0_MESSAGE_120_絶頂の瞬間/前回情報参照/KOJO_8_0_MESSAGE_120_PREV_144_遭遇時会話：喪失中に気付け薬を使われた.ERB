		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF
	
	; 通常時
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「足でしこしこされるの…イイのぉっ♥\n　あっ♥　あっ♥　でちゃうっ♥　足に射精しちゃうっ♥♥」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「～～～ッ♥　踏まれて…イッちゃったぁ♥\n　あははっ♥　わたしもう立派な変態さんだぁ♥♥」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「もっと踏んでぇっ♥　おちんぽ壊してぇぇっ♥」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「うああああっ♥　射精るぅぅっ♥♥　クリちんぽ踏まれて精液出ちゃううぅぅっ♥♥」\n"
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"（わたしっ…　わたしのおちんちんっ…　踏まれて気持ちよくなっちゃってる…っ）\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"（やだぁぁっ！　射精しちゃうっ！　おちんちん踏まれて射精しちゃうよぉぉぉっっ！！）\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"（足っ！？　足でいじられてるだけ…なのに！？　イッてるぅ…っ！？\n　だめぇっ…　おちんちん、感じすぎ…るぅっ！！）\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「なんでぇっ！？　なんで踏まれるだけでこんなに気持ちイイのおぉっ！？」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「うああぁっ…！　おちん…ちんっ、ガマン出来ないっ！\n　のぼってくるぅっ！　精液のぼってきちゃうぅっっ！！」\n"
	ENDSELECT
	
	; 相手の名前の参照する口上
	; 足コキ系のコマンドが実行されていた場合ARGS:0に相手の名前あり
	IF (KOJO_8_0_GET_PREV_ARG(0) == 144 && KOJO_8_0_GET_PREV_ARG(1) == 10) || (KOJO_8_0_GET_PREV_ARG(0) == 465 && KOJO_8_0_GET_PREV_ARG(1) == 0)
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「おちんぽ…っ♥　射精するよぉ♥♥　%KOJO_8_0_CALLNAME_FROM_ID(1)%の足に精液出すよぉっ♥♥」\n"
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"（おちんちん…っ…　%KOJO_8_0_CALLNAME_FROM_ID(1)%に踏まれて…　ビクビクって暴れて…るぅ…）\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「%KOJO_8_0_CALLNAME_FROM_ID(1)%の足気持ちよすぎるよぉ…っ…　踏まれてイクっ！？　イッちゃうっ！？」\n"
		ENDSELECT
	ENDIF
RETURN 1
