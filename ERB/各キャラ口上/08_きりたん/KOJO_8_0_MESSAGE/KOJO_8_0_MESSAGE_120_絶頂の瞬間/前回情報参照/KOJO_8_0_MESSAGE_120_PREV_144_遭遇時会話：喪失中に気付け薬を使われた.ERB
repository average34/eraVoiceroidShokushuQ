	; 治療中の連続絶頂でペニス外れちゃった
	SIF !GET_PENIS(TARGET)
		RETURN 0
	
	; 喪失中
	IF CFLAG:29
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「もっと…ぉ…　つよく、ふんでぇ…♥」\n"
		CASEELSE
