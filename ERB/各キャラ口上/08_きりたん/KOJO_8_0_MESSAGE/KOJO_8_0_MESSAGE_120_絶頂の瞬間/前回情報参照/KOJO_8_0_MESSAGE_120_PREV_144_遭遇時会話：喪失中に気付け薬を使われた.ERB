; ◇ 06 乳搾り(強制)
@KOJO_8_0_SYSTEM_MESSAGE_120_PREV_144_6(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 優先口上指定
	CALL KOJO_8_0_SET_IMPORTANT_FLAG()
	
	; 追加地の文関数(前)を登録
	CALL KOJO_8_0_REGIST_DESCRIPTION_BEFORE("KOJO_8_0_SYSTEM_MESSAGE_120_DESCRIPTION_BEFORE")
	
	; 喪失中
	IF CFLAG:29
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「おっぱ…い…　きもち…い……♥」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「おっぱい…　ちゅーちゅー…されて…♥」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「すっちゃ……　だめ…ぇ……」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「おっぱい…　こわれ…ちゃ……」\n"
		ENDSELECT
		RETURN 1
	ENDIF
	
	; 催眠中
	IF KOJO_8_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF
	
	; 通常時
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「もっとぉ♥　もっと吸ってぇ♥　いっぱい、出すからぁ♥♥」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「んいぃっ♥　おっぱい出すのぉ、きもちいいよぉ…っ♥」\n"
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"（吸われるのだけじゃなくて、おっぱい出すのも気持ちよくなってきてる！？\n　わたしのカラダどうなってるの！？）\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"（こんなのでイッちゃうなんて…　わたしのおっぱい、どんどんおかしくなってる…）\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「もう吸うのやめてぇ…　おっぱい出して、気持ちいいのは…　いやですぅ……」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「ガマンできないのぉっ！　イクのもぉっ、おっぱい出すのもぉぉっ！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「うううっ…！　これぇっ、どうやったら止まるんですかっ！？」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「イクうっ！？　イッちゃううっ！？　おっぱい吸われてイクうううっ！？」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「いやあぁっ！　おっぱいぃっ！　とまらないっ！！　とまらないよぉっ！！」\n"
	ENDSELECT
RETURN 1


