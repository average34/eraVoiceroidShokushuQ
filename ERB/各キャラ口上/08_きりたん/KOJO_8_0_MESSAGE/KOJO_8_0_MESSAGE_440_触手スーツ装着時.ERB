		CASE "強気"
			CALL KOJO_8_0_ADD_MESSAGE, @"「くっ…！！　この服はハズレですか……っ！！」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「ここに落ちてる服はろくでもないのばっかり…っ！！」\n"
