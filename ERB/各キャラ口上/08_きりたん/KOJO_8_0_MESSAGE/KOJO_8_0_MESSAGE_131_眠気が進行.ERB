
; ------------------------------------------------------------------------------
; ■ 131 眠気が進行
; ------------------------------------------------------------------------------

@KOJO_8_0_SYSTEM_MESSAGE_131(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 1ループ前に睡眠開始 つまりは起きたばっかり
	; 重度汚染部屋で睡眠(気絶かも)でも起きたばっかり
	; もしくは眠気MAXで気絶してた
	IF KOJO_8_0_GET_PREV_ARG(0) == 114 || KOJO_8_0_GET_PREV_ARG(0) == 116 || (KOJO_8_0_GET_PREV_ARG(0) == 131 && KOJO_8_0_GET_PREV_ARG(1) == 15)
		SELECTCASE ARG:1
		CASE 3
			CALL KOJO_8_0_ADD_MESSAGE, @"「もうちょっと寝たいです」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「まだちょっと、眠いかも……」\n"
		CASE 7
			CALL KOJO_8_0_ADD_MESSAGE, @"「全然寝足りないです……　まだ眠い……」\n"
		CASE 11
			CALL KOJO_8_0_ADD_MESSAGE, @"「起きたばっかなのに……　ふらふらします……」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「もっとちゃんと……　寝ないと……」\n"
		ENDSELECT
		
		; 眠気MAX気絶の場合は追加口上あり
		IF KOJO_8_0_GET_PREV_ARG(0) == 131 && KOJO_8_0_GET_PREV_ARG(1) == 15
			SELECTCASE KOJO_MODE
			CASEELSE
				CALL KOJO_8_0_ADD_MESSAGE, @"「わたしとしたことが油断しました……　どっか安全なトコを見つけて休まないと……」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「気絶するまで眠らないなんて……　健康が大ピンチです」\n"
			ENDSELECT
		ENDIF
		
	; 通常処理
	ELSE
		SELECTCASE ARG:1
		CASE 3
			SELECTCASE KOJO_MODE
			CASE "強気"
				CALL KOJO_8_0_ADD_MESSAGE, @"「少し眠くなってきたけど、こんなトコでどうやって眠ればいいんですかね」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「眠くなってきたけど、こんな場所で寝るのもねえ」\n"
				CALL KOJO_8_0_PARAGRAPH_MESSAGE
				
				CALL KOJO_8_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は、うんざりした顔で部屋を眺めている\d\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は、いつ襲われるかわからない状況に辟易した顔で部屋を眺めている\d\n"
			CASEELSE
				CALL KOJO_8_0_ADD_MESSAGE, @"「ちょっと眠いくらい、まあ大丈夫でしょう」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「まだ寝なくても平気ですよね」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「休めるうちに休んどいた方がいいですかね？」\n"
			ENDSELECT
		CASE 7
			SELECTCASE KOJO_MODE
			CASE "強気"
				CALL KOJO_8_0_ADD_MESSAGE, @"（余裕があるうちに睡眠は取るべき、頭が回らなくなったら命取りだし）\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「そろそろ休んどかないと危ないかな」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「睡眠不足は健康の敵なんですけどね」\n"
			CASEELSE
				CALL KOJO_8_0_ADD_MESSAGE, @"「う～ん……　眠るべきか進むべきか、悩むわね……」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「少し休んでおいたほうがいいかも」\n"
			ENDSELECT
		CASE 11
			SELECTCASE KOJO_MODE
			CASE "強気"
				CALL KOJO_8_0_ADD_MESSAGE, @"「う～……　気をしっかり持たないと意識落ちちゃう……」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「お布団の形した罠とか、今なら掛かる自信あります……」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「そろそろ休まないと身体が持たないです」\n"
			CASEELSE
				CALL KOJO_8_0_ADD_MESSAGE, @"（眠い……　眠い……　眠い……）\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「こんな場所で寝落ちしたら、絶対襲われる……」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「お布団がほしい……　ふかふかで清潔な……」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「なんだかふらふらする……」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「どこか安全に眠れそうな場所は……」\n"
			ENDSELECT
		CASE 15
			SELECTCASE KOJO_MODE
			CASE "強気"
				CALL KOJO_8_0_ADD_MESSAGE, @"「今気絶した…ら何されるかわかったもん…じゃ……」\n"
			CASEELSE
				CALL KOJO_8_0_ADD_MESSAGE, @"「うう……　もう限界……」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「もう……　だめ……　眠すぎ……」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「うー……　あー……　あ……ぁ…………」\n"
			ENDSELECT
		ENDSELECT
	ENDIF
RETURN 1
