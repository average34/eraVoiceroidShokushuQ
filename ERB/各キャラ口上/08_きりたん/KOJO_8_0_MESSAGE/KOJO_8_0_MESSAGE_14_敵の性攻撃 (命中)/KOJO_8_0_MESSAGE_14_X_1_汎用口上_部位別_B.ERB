			CALL KOJO_8_0_ADD_MESSAGE, @"（ああああぁぁっ♥♥　おっぱいの感度、壊れてるううぅぅっ♥♥）\n"
		ENDIF
	ENDSELECT
	CALL KOJO_8_0_PARAGRAPH_MESSAGE
	
