		; 乳首勃起中 追加口上
		ELSEIF GET_ERECTION_STATE_B(TARGET)
			CALL KOJO_8_0_ADD_MESSAGE, @"「勃起乳首……っ♥　勃起乳首いじめぇ……っ♥　んにゃぁぁっ♥　そこ弱いのぉぉっ♥♥」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「ボッキ乳首……っ♥　刺激、つよすぎ……っ♥♥」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「あぁ……っ♥　勃起ちくび…ぃ、ビンカンなのお……っ♥♥」\n"
		ENDIF
	
		; [淫乳]所持 または りばーす東方触手宮でB感覚LV3以上
		IF TALENT:76 || (KOJO_8_0_IS_REVERSE() && ABL:7 >= 3)
			CALL KOJO_8_0_ADD_MESSAGE, @"「胸えぇっ♥　感じるっ♥　感じすぎちゃううぅぅっ♥♥」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「ほへえぇぇっ♥　おっぱいっ♥　おっぱいとけちゃううぅっ♥♥」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「んﾞにいぃぃっ♥　ひゅごいぃっ♥　おっぱいひゅごいぃぃぃっ♥♥」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"（うああぁぁ♥♥　すごいいいぃぃっ♥♥　おっぱい弄られるだけで頭の中幸せだらけぇ♥♥）\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"（気持ちよすぎぃっ♥♥　このままおっぱいでイキ狂いたいっ♥♥）\n"
		ENDIF
		
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「ぅひぃ……っ！？　ヘンなさわりかたしないでください！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ううっ……！　胸なんていじくって、何が楽しいんですかぁ……っ！？」\n"
		
		; 乳首陥没中 追加口上
		IF TALENT:159
			CALL KOJO_8_0_ADD_MESSAGE, @"（そんな……っ、陥没乳首ばっかり狙うみたいな……っ！？）\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「そんな……っ、ほじくるみたいにいっ！？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"（やめてよ！！　そんなムリヤリされたら勃っちゃ――）\n"
			
		; 乳首勃起中 追加口上
		ELSEIF GET_ERECTION_STATE_B(TARGET)
			CALL KOJO_8_0_ADD_MESSAGE, @"「い……っ今はダメぇぇっ！　乳首勃起して……っ、感じすぎちゃ……　うひいぃぃぃっ！！」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「やめてください……　わたしの乳首はあなた達の玩具じゃないです……」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"（ううっ……　勃った乳首にねちっこい責め……っ……）\n"
		ENDIF
		
		; [淫乳]所持 または りばーす東方触手宮でB感覚LV3以上
		IF TALENT:76 || (KOJO_8_0_IS_REVERSE() && ABL:7 >= 3)
			CALL KOJO_8_0_ADD_MESSAGE, @"「うあﾞあﾞあﾞあﾞぁぁぁっ♥♥　おっぱいはイヤあﾞあﾞあﾞぁぁぁっ♥♥」\n"
