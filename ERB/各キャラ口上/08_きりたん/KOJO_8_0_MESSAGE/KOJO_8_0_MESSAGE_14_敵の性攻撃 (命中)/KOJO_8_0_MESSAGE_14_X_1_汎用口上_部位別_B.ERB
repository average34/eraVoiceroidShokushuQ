				CALL KOJO_8_0_ADD_MESSAGE, @"「わたしは……　おっぱいで……イクのが……　大好きな……　ヘンタイです……」\n"
			ENDSELECT
			
			; 乳首勃起時 追加口上
			IF GET_ERECTION_STATE_B(TARGET)
				SELECTCASE CFLAG:43
				CASE 1
					CALL KOJO_8_0_ADD_MESSAGE, @"（乳首……っ、とがってるぅっ！？　やだぁっ、こんなの気持ちよくない……ですっ！？）\n"
				CASE 2
					CALL KOJO_8_0_ADD_MESSAGE, @"「乳首ぃ……♪　肉便器スイッチ……ぃ♪　そんなに押したら、勃起しすぎて壊れちゃうよぉ♪」\n\d胸を弄られるたびに顔を上気させ、%CALLNAME:TARGET%は蕩けた顔で肉便器として扱われる悦びに浸っている\d\n"
					CALL KOJO_8_0_ADD_MESSAGE, @"（ちくびが……たったら……　こりこりして……もらわないと……）\n"
				CASEELSE
					CALL KOJO_8_0_ADD_MESSAGE, @"「……乳首……すごい勃起してます……」\n"
					CALL KOJO_8_0_ADD_MESSAGE, @"「勃起ちくび……　いっぱい……　いじめてください……」\n"
				ENDSELECT
			ENDIF
			RETURN 1
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「おっぱいっ……♥　おっぱいがぁ…っ♥♥」\n"
