
; ------------------------------------------------------------------------------
; ■ 14 敵の性攻撃 (命中) - 攻撃種類別 0354 スライム 全体B
; ------------------------------------------------------------------------------

@KOJO_8_0_SYSTEM_MESSAGE_14_354(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 追加地の文関数(前)を登録
	CALL KOJO_8_0_REGIST_DESCRIPTION_BEFORE("KOJO_8_0_SYSTEM_MESSAGE_14_DESCRIPTION_BEFORE")

	; 追加地の文関数(後)を登録
	CALL KOJO_8_0_REGIST_DESCRIPTION_AFTER("KOJO_8_0_SYSTEM_MESSAGE_14_DESCRIPTION_AFTER")
	
	; 睡眠・喪失・諦め
	SIF CFLAG:25 || CFLAG:29 || TFLAG:16 == 2
		RETURN 0

	; 催眠中
	IF KOJO_8_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「あんっ♥　指じゃ無理な、いじり方ぁ♥」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「うげぇ、破片が動いてる　核がないスライムですか！？」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「うひぃっ！？　ぬめぬめして気持ち悪いっ！」\n"
	ENDSELECT
	
	; [母乳体質] 非所持時 追加口上
	IF !TALENT:130
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「そんなにしても、おっぱいは出ないですよぉ♥」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「乳搾りの真似事？　どんなに絞っても出ないですよ」\n"
		ENDSELECT
		
	; [母乳体質] 所持時 追加口上
	ELSE
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「そんなにグニグニしてぇ、おっぱい飲みたいのぉ？」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「いやぁ……　そんなにされたら母乳出ちゃうっ……」\n"
		ENDSELECT
	ENDIF
	
	CALL KOJO_8_0_PARAGRAPH_MESSAGE
	
	; 地の文側で\nするので口上側は\nで終わること
RETURN 1
