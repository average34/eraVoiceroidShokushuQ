@KOJO_8_0_SYSTEM_MESSAGE_14_623(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	; 追加地の文関数(前)を登録
	CALL KOJO_8_0_REGIST_DESCRIPTION_BEFORE("KOJO_8_0_SYSTEM_MESSAGE_14_DESCRIPTION_BEFORE")

	; 追加地の文関数(後)を登録
	CALL KOJO_8_0_REGIST_DESCRIPTION_AFTER("KOJO_8_0_SYSTEM_MESSAGE_14_DESCRIPTION_AFTER")
	
	; 睡眠
	SIF CFLAG:25
		RETURN 0

	; 催眠中
	IF KOJO_8_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「おまたに力入らない……っ♥　深いトコぉ、ゴリゴリされちゃうぅっ♥♥」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「足捕まって、おまんこほじられたらぁ……♥　腰振るしか出来ないですよぉ……♥♥」\n"
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"（恥ずかしいっ……　こんな格好で犯されるの恥ずかしい……っ……）\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「いやぁぁ……っ……　足放してぇ……っ……　うあああぁぁっ！　奥まで入ってきてるぅぅ……っ！」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「抜いて！　抜いてくださいっ！　ううっ……　足閉じられないっ……！」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"（うああぁぁっ……！　足ムリヤリ開かれて、おまたに力入んないぃ……っ！）\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「やめてぇぇっ！　抜いて！　抜いえぇっ！」\n"
	ENDSELECT
	CALL KOJO_8_0_PARAGRAPH_MESSAGE
	
	; 地の文側で\nするので口上側は\nで終わること
RETURN 1
