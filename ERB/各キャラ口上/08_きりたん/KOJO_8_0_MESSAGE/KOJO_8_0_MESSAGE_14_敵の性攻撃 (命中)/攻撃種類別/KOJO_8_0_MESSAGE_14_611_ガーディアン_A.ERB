@KOJO_8_0_SYSTEM_MESSAGE_14_611(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 追加地の文関数(前)を登録
	CALL KOJO_8_0_REGIST_DESCRIPTION_BEFORE("KOJO_8_0_SYSTEM_MESSAGE_14_DESCRIPTION_BEFORE")

	; 追加地の文関数(後)を登録
	CALL KOJO_8_0_REGIST_DESCRIPTION_AFTER("KOJO_8_0_SYSTEM_MESSAGE_14_DESCRIPTION_AFTER")
	
	; 睡眠
	SIF CFLAG:25
		RETURN 0
		
	; 催眠中
	IF KOJO_8_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"（おし……っ♥　おしりの穴ぁ♥　ふやけちゃってるぅ♥♥）\n"
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"（どうしてっ♥　どうしてこんなにお尻が熱いのぉ……っ♥♥）\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「見るなぁっ！！　そんなとこ見るなあぁぁっ！！」\n"
	ENDSELECT
	CALL KOJO_8_0_PARAGRAPH_MESSAGE
	
	; 地の文側で\nするので口上側は\nで終わること
RETURN 1
