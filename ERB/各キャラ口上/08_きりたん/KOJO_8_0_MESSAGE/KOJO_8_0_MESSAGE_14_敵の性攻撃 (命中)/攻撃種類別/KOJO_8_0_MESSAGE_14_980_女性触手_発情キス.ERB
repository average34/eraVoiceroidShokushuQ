@KOJO_8_0_SYSTEM_MESSAGE_14_980(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 優先口上指定
	CALL KOJO_8_0_SET_IMPORTANT_FLAG()
	
	; 追加地の文関数(前)を登録
	CALL KOJO_8_0_REGIST_DESCRIPTION_BEFORE("KOJO_8_0_SYSTEM_MESSAGE_14_DESCRIPTION_BEFORE")
	
	; 追加地の文関数(後)を登録
	CALL KOJO_8_0_REGIST_DESCRIPTION_AFTER("KOJO_8_0_SYSTEM_MESSAGE_14_DESCRIPTION_AFTER")
	
	; 睡眠・喪失・諦め
	SIF CFLAG:25 || CFLAG:29 || TFLAG:16 == 2
		RETURN 0

	; 催眠中
	IF KOJO_8_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"（あ、これ……　えっちになっちゃうキスだ♥）\n"
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"「んんんっ！？　んんんんっ！！　んんんんんんっ♥」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"（何か飲まされた……せいで……　頭の中が熱く……ッ！？）\n"
	ENDSELECT
	
	; キス魔所持なら追加口上
	IF TALENT:79
		; 通常時
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"（えっちになっちゃうヨダレ、全部飲んであげるぅ♥）\n"
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"（なにこれぇ……　ヨダレ飲んで興奮してるぅ♥）\n"
		CASEELSE
		ENDSELECT
	ENDIF
	
	CALL KOJO_8_0_PARAGRAPH_MESSAGE
	
	; 地の文側で\nするので口上側は\nで終わること
RETURN 1
