; □ 2 NPCが見張り
@KOJO_8_0_SYSTEM_MESSAGE_114_2(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
#DIM CHARA_ID

	CHARA_ID = ARG:2
	
	; 喪失中なら何も喋らずに戻る
	SIF CFLAG:29
		RETURN 0
		
	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「悪いですね、こんな事頼んじゃって」\n"
	ENDSELECT
	
	; 好感度による追加口上
	; 好感度:低
	IF CFLAG:CHARA_ID:5 < 0
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"（%KOJO_8_0_CALLNAME_FROM_ID(CHARA_ID)%に見張り頼んですけど、まあ居ないよりマシ程度\n　最悪わたしを放置して逃げるだろうし）\n"
		ENDSELECT
		
	; 好感度:警戒
	ELSEIF CFLAG:CHARA_ID:5 < 50
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"（同じ部屋に居たから一応頼んですけど、%KOJO_8_0_CALLNAME_FROM_ID(CHARA_ID)%って全然信用できない）\n"
		ENDSELECT
		
	; 好感度:通常
	ELSEIF CFLAG:CHARA_ID:5 < 200
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「急なお願い聞いてくれてありがと、助かります」\n"
		ENDSELECT
		
	; 好感度:高
	ELSEIF CFLAG:CHARA_ID:5 >= 200
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「ほんと、%KOJO_8_0_CALLNAME_FROM_ID(CHARA_ID)%って優しいですね\n　敵が来たら言ってくださいね、すぐ起きるから」\n"
		ENDSELECT
	ENDIF
RETURN 1
