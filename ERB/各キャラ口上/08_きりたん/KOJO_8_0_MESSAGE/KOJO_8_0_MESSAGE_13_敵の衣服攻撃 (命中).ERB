; □ 汎用口上
@KOJO_8_0_SYSTEM_MESSAGE_13(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 服:大破時は「敵の性攻撃(命中)」を呼び出す
	IF BASE:CP <= 0
		CALL KOJO_8_0_DEPLOY_MESSAGE(14, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:4, 0, 0, 0, "KOJO_8_0_SYSTEM_MESSAGE_")
		RETURN RESULT
	ENDIF
	
	; 睡眠時
	IF CFLAG:25
		; 服:大破
		IF BASE:CP <= 0
			CALL KOJO_8_0_ADD_MESSAGE, @"\d裸のまま眠り続ける%CALLNAME:TARGET%の身体を、触手が好き放題にもてあそんでいる\d\n"
		; 服:残ってる
		ELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"\d服を破られる事にも気づかず、%CALLNAME:TARGET%はこんこんと眠り続けている\d\n"
		ENDIF
		RETURN 1
	ENDIF
	
	; 催眠中
	IF KOJO_8_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			; 服:新品
			IF (BASE:CP * 100 / MAXBASE:CP) >= 100
				CALL KOJO_8_0_ADD_MESSAGE, @"（脱がなきゃ……　わたしなんかが服を着てるなんて……失礼……）\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「服……　着てたら…………　じゃまです……よね……」\n"
			; 服:通常
			ELSEIF (BASE:CP * 100 / MAXBASE:CP) > 66
				CALL KOJO_8_0_ADD_MESSAGE, @"「はい……　服なんか着てて……　申し訳ありません……」\n"
			; 服:損傷
			ELSEIF (BASE:CP * 100 / MAXBASE:CP) > 33
				CALL KOJO_8_0_ADD_MESSAGE, @"「着衣プレイ……なら……　このくらいで……いかがですか……」\n"
			; 服:中破
			ELSE
				CALL KOJO_8_0_ADD_MESSAGE, @"「全部脱いだら……　わたしの身体、たっぷり使ってくださいね……」\n"
				CALL KOJO_8_0_ADD_MESSAGE, @"「もうちょっとで……　全部……　脱げちゃいます……」\n"
			ENDIF
			RETURN 1
		ENDSELECT
	ENDIF

	; 通常時
	; 服:新品
	IF (BASE:CP * 100 / MAXBASE:CP) >= 100
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「あら？　着衣プレイは嫌いですか？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「んもう♥　脱いで欲しいって言えば、自分で脱ぐのに♥」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「もうちょっとやさしく脱がせて欲しいなー♥」\n"
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"「や、破いちゃダメですっ！」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「ふ……服が……！？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"（ちゃんとした服を着てたおかげで助かった――？）\n"
		CASE "強気"
			CALL KOJO_8_0_ADD_MESSAGE, @"「破かせる為に着てるんじゃないんですよ！」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「服だけで済んでマシだった、って考えるべきかな」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「うわっ、なんで服なんて狙ってくるんですか！？\n　痛い目にあうよりはマシだけですけど」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「なにするんですか！？　新品の服だったのにー！！」\n"
		ENDSELECT
		
	; 服:通常
	ELSEIF (BASE:CP * 100 / MAXBASE:CP) > 66
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「もう、えっちなんですからぁ♥」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「なぁに？　わたしの服、脱がせたいんですか？」\n"
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"「穴だらけになっちゃうじゃないですか……」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「もう破かないでくださいよ……」\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「あーもー！　ビリビリじゃない……」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「なんで服だけ攻撃するんですかー？」\n"
		ENDSELECT
		
	; 服:損傷
	ELSEIF (BASE:CP * 100 / MAXBASE:CP) > 33
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「コレじゃあ、動いたらスキマから見えちゃうでしょう♥　えっち♥」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「こんなに穴だらけじゃ、どこからでも犯せるじゃないですか♥」\n"
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"（身の守りを着実に奪ってく……　このままじゃ……）\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"（こんなボロボロの服じゃ、まともに身を守れない……）\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「ヘンな汁とか飛ばしてくるの一杯居るんですよ！？　病気にでもなったらどう責任取ってくれるんですか！？」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「ちょっと、やめてくださいよ！」\n"
		ENDSELECT
		
	; 服:中破
	ELSE
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_8_0_ADD_MESSAGE, @"「もう服なんていいからぁ♥　焦らさないでぇ♥　はやく……いじめてぇっ……♥♥」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「やぁん♥　そろそろ全部見えちゃう♥」\n"
		CASE "発情"
			CALL KOJO_8_0_ADD_MESSAGE, @"（このまま全部破られたら……わたし……）\n"
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"「こんな服じゃ着てる方が動きにくいです、脱ぐ気は無いけど」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「こんなボロを破りたがるなんて、どんだけ服にご執心なんだか」\n"
			CALL KOJO_8_0_ADD_MESSAGE, @"「もうほとんど布なんだから、わざわざ脱がせなくてもいいじゃないですか……」\n"
		ENDSELECT
	ENDIF
RETURN 1


