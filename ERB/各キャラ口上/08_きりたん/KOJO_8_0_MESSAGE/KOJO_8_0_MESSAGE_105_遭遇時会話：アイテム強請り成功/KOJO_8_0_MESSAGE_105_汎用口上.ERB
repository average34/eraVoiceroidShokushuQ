
; ------------------------------------------------------------------------------
; ■ 105 遭遇時会話：アイテム強請り成功 - 汎用口上
; ------------------------------------------------------------------------------

; □ 0 通常交渉
@KOJO_8_0_SYSTEM_MESSAGE_105_X_X_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_MODE
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"「あ、ありがとう……　本当に助かります……」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「ありがとー、助かります」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"（言ってみるものですね、本当に貰えるとは思わなかった）\n"
	ENDSELECT
	
	; 非睡眠 & 非発情 & 非喪失 & 裸 の条件が揃うと地の文が変化する
	; 対応追加口上
	IF !CFLAG:25 && !CFLAG:28 && !CFLAG:29 && BASE:CP <= 0
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_8_0_ADD_MESSAGE, @"（し、視線が気になる……）\n"
		ENDSELECT
	ENDIF
RETURN 1


; □ 1 喪失キャラから強奪
@KOJO_8_0_SYSTEM_MESSAGE_105_X_X_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「次に会ったとき、お礼に気持ちいいことしてあげますね♥」\n"
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"（こんな状態じゃ使えないだろうし……　それなら……）\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ごめんね……　わたし今余裕なくて……」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「ちょっと借りますねー」\n"
	ENDSELECT
RETURN 1
