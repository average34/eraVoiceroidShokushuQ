; □ 1 喪失キャラから強奪
@KOJO_8_0_SYSTEM_MESSAGE_105_X_58_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 優先口上指定
	CALL KOJO_8_0_SET_IMPORTANT_FLAG()
	
	SELECTCASE KOJO_MODE
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"（必要な薬を持ってるのに倒れてるって事は、使う暇なかったって事かも……）\n"
	CASE "強気"
		CALL KOJO_8_0_ADD_MESSAGE, @"「誰かと行動してれば、この薬を使って貰えたのに　運が無いですね」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「この薬、自分に使えば良かったのに」\n"
	ENDSELECT
	

RETURN 1
