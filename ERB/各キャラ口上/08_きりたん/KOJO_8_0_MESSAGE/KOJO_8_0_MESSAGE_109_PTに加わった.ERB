
; ------------------------------------------------------------------------------
; ■ 109 PTに加わった
; ------------------------------------------------------------------------------

; PT外だと理性度の変動はほぼ起こらないので、基本的に汎用口上が呼び出される
; 汎用以外の口上モードが呼び出されるのは再加入の場合がほとんど
@KOJO_8_0_SYSTEM_MESSAGE_109(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ヤラシイ敵は、わたしが引き受けてあげますよ♥」\n"
	CASE "発情"
		CALL KOJO_8_0_ADD_MESSAGE, @"「えっと……　足手まといには、ならないよう気をつけますね……」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「ちゃ、ちゃんと役に立つから……　よろしくお願い……します……」\n"
	CASEELSE
		CALL KOJO_8_0_ADD_MESSAGE, @"「わたし居ればこんな場所あっという間に脱出ですよ」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「わたしを連れて行けば絶対大丈夫ですからね」\n"
		CALL KOJO_8_0_ADD_MESSAGE, @"「わたしも独りじゃキツイし助かります」\n"
	ENDSELECT
RETURN 1
