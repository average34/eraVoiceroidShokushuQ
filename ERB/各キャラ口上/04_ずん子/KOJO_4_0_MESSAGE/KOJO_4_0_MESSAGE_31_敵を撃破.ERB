; □ 汎用口上
@KOJO_4_0_SYSTEM_MESSAGE_31(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 敵別専用口上があるならそれを呼び出す
	CALL KOJO_4_0_DEPLOY_MESSAGE_SINGLE(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6, @"KOJO_4_0_SYSTEM_MESSAGE_31_ENEMY_{DA:(ARG:1):0}")
	SIF KOJO_4_0_GET_IMPORTANT_FLAG()
		RETURN 1
		
	; 催眠中
	IF KOJO_4_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			CALL KOJO_4_0_ADD_MESSAGE, @"（ほとんど動けなくても勝てるものなのですね）\n"
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			CALL KOJO_4_0_ADD_MESSAGE, @"「…………　もう、私の身体…動かなく…　なっちゃい…　ましたね……」\n"
			RETURN 1
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_4_0_ADD_MESSAGE, @"「よわよわですね魔物さん♪」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「もっとわたしを楽しませてくださいね」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「もっと楽しみたかったんですが」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「あら、もうおしまいなんです？」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「その程度じゃ満足できないです」\n"
	CASE "発情"
		CALL KOJO_4_0_ADD_MESSAGE, @"「な、なんとかなるものですね……」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「た、たおせた…？」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「な、なんとか倒せました……」\n"
	CASE "強気"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ふぅ……　わたしはまだまだイケます！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「さぁ、次の獲物はどこですか？」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「東北家次女の力、思い知りましたか！？」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ふふっ、楽勝です！」\n"
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「ずんだの力、思い知りましたか！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「よし！　倒せました！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ずんだの前に、敵は無し！！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ふぅ……　なんとか一匹倒せました……」\n"
	ENDSELECT
RETURN 1


