@KOJO_4_0_SYSTEM_MESSAGE_200_146(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	CALL KOJO_4_0_ADD_MESSAGE, @"\dあふれ出した淫蟲は、%CALLNAME:TARGET%を拘束すると巣穴に向けて尻を突き出させた！\d\n"
	CALL KOJO_4_0_PARAGRAPH_MESSAGE
	CALL KOJO_4_0_ADD_MESSAGE, @"\d淫蟲は媚薬混じりの粘液を塗り込みながら、%CALLNAME:TARGET%の尻穴へ次々と潜り込んでいく！\d\n"

	SELECTCASE KOJO_4_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ひぐぅっ♥　おしりぃっ♥　とかされてるみたいぃぃっ♥♥」\n"
	CASE "発情"
		CALL KOJO_4_0_ADD_MESSAGE, @"「あああぁぁっ！？　あつ…い…っ！　おしりが、あついです……っ！！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「いやああぁぁぁっ！？　入ってくるっ！　はいってきちゃうううっぅっ！！」\n"
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「ぎ…っっ！？　そこ…はっ、入れる場所じゃ…ない……ですっ！？」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ぐ…っ…　おなかが、おも……ぃっ！」\n"
	ENDSELECT
	CALL KOJO_4_0_PARAGRAPH_MESSAGE
	
	CALL KOJO_4_0_ADD_MESSAGE, @"\d媚薬の毒に屈したアヌスは、%CALLNAME:TARGET%の意思を無視して勝手に肉欲を貪っている…\d\n"
RETURN 1
