; □ 1 眠くなってきた
@KOJO_4_0_SYSTEM_MESSAGE_200_143_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「くっ……　睡眠……ガス……！？」\n"
	ENDSELECT
	
	; 眠気によって分岐
	IF FLAG:7 <= 3
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「多少眠気を感じますが……そこまで強力なガスではなかったようです」\n"
		ENDSELECT
		
	ELSEIF FLAG:7 <= 7
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「これぐらいの眠気なら、大丈夫です……」\n"
		ENDSELECT
		
	ELSEIF FLAG:7 <= 11
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「ん……　眠気でふらふらします……」\n"
		ENDSELECT
		
	ELSE
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「まず…いです…　意識……が……」\n"
		ENDSELECT
	ENDIF
RETURN 1


