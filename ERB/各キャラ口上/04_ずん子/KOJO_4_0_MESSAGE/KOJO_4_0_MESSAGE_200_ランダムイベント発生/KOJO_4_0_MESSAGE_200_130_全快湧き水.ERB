; □ 0 飲んだ
@KOJO_4_0_SYSTEM_MESSAGE_200_130_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_4_0_KOJO_MODE
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「ん……♪凄い……力が沸いてきます……！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「美味しい……！　って、消えちゃいました\n　せっかくなので水浴びもしたかったんですが」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「こくっ……♪　ふぅ…　清らかな気配を感じてましたが、予感が的中して良かったです」\n"
	ENDSELECT
RETURN 1


