
; ------------------------------------------------------------------------------
; ■ 48 ターン終了時自慰発生
; ------------------------------------------------------------------------------

; 詳細な描写は実際に自慰を行う側で
; ここではフレーバー程度の文を追加する
@KOJO_4_0_SYSTEM_MESSAGE_48(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 催眠中
	IF KOJO_4_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	; このターン既に絶頂している
	IF CFLAG:35
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_4_0_ADD_MESSAGE, @"「気持ちいいの、足りませんっ♥♥」\n"
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"（だめなのに…　イッたばかりで息も整ってない…のに…）\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"（どうしてまだ疼くの…っ　たった今気をやっちゃったばかりなの…にっ）\n"
		ENDSELECT
	ENDIF
	
	; 通常の地の文表示
	CALL KOJO_4_0_PARAGRAPH_MESSAGE
	CALL KOJO_4_0_ADD_MESSAGE, @"\M"
RETURN 1
