
; ------------------------------------------------------------------------------
; ■ 101 迷宮内で他のキャラと会った - キャラクター別 014 うなー
; ------------------------------------------------------------------------------

; □ 0 通常
@KOJO_4_0_SYSTEM_MESSAGE_101_X_0_CHARA_14(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	; 遭遇キャラは拘束されている
	IF CFLAG:(ARG:1):504
	
	; 催眠行動中
	ELSEIF CFLAG:(ARG:1):43 == 1
	
	; 遭遇キャラと寸前まで共闘していた
	ELSEIF ARG:1 == KOJO_4_0_PARTY_NO:1 || ARG:1 == KOJO_4_0_PARTY_NO:2
		
		CALL KOJO_4_0_ADD_MESSAGE, @"「%KOJO_4_0_CALLNAME_FROM_ID(ARG:1)%、けがはありませんか…？」\n"
		
	; 通常行動中
	ELSE
		; 対象のキャラとは初遭遇
		; 表示タイミングが一度しかない口上、優先口上として処理する
		IF KOJO_4_0_GET_ENCOUNTER_COUNT(ARG:1) == 0
			CALL KOJO_4_0_SET_IMPORTANT_FLAG()
			CALL KOJO_4_0_ADD_MESSAGE, @"「貴方は……確かきりたんのお友達の…？」\n"
			RETURN 1
		ENDIF
		
		CALL KOJO_4_0_ADD_MESSAGE, @"（こんな小さい子が、犠牲者にならないように頑張らないと…）\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"（早く%KOJO_4_0_CALLNAME_FROM_ID(ARG:1)%を脱出させてあげないと…）\n"
	ENDIF
RETURN 1


; □ 1 喪失中
@KOJO_4_0_SYSTEM_MESSAGE_101_X_1_CHARA_14(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	; 遭遇キャラは拘束されている
	IF CFLAG:(ARG:1):504
	
	; 遭遇キャラと寸前まで共闘していた
	ELSEIF ARG:1 == KOJO_4_0_PARTY_NO:1 || ARG:1 == KOJO_4_0_PARTY_NO:2
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_4_0_ADD_MESSAGE, @"「ふふっ♥　可愛い顔♥　きりたんが見たらどう思うでしょうか…♥♥」\n"
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「ごめん…なさい…」\n"
		ENDSELECT
		
	; 通常行動中
	ELSE

	ENDIF
RETURN 1
