		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_4_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は腰を押しつけ一際深くペニスをくわえ込むと、絶頂寸前の子宮口へ密着させた\d\n"
