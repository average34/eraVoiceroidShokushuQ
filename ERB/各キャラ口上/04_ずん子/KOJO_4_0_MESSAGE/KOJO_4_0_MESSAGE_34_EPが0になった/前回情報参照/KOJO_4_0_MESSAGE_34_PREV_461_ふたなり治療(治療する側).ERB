			CALL KOJO_4_0_ADD_MESSAGE, @"「このまま赤ちゃんの部屋に出したらっ♥　あなたとの子供が出来るかもしれませんね♥♥」\n"
		ENDIF
		
	CASE "発情"
		CALL KOJO_4_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は無意識のうちに子宮口をペニスを密着させ、艶めかしく腰を動かしている\d\n"
