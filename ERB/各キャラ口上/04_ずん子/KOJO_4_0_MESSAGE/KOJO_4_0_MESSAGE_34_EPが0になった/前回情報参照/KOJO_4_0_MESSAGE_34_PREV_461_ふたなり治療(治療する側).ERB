		CALL KOJO_4_0_PARAGRAPH_MESSAGE
		CALL KOJO_4_0_ADD_MESSAGE, @"「イ、イクっ♥　イッちゃう♥　イッちゃうっ♥♥　イッちゃうっ♥♥♥」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"（抜かないとっ！　抜かないとダメなのに…っ！　わたしの子宮、精液ほしいって訴えてます…っ！）\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"（抜かないとぉ……っ♥　抜かないと……ただの子作りになっちゃいますっ♥♥\n　ダメ……なのにぃっ……♥　気持ち、いいんですっ♥　きもちよすぎるんですっッッ♥♥♥）\n"
		
		; 妊娠していない or 妊娠中(判明前)なら追加口上
		IF !CFLAG:36 || CFLAG:36 == 2
			CALL KOJO_4_0_ADD_MESSAGE, @"（こっ……このままじゃ妊娠しちゃう♥♥　でも……っ、とまらない、とまらないんですっっ♥♥）\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「抜いてっ♥　抜いてくださいっっ♥♥　赤ちゃん出来ちゃうから♥♥　貴方ので妊娠しちゃうからぁっっ♥♥」\n"
		ENDIF

	CASEELSE
