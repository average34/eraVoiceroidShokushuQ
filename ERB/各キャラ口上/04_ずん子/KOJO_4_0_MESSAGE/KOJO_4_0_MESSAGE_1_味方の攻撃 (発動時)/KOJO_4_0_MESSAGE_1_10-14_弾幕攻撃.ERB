				CALL KOJO_4_0_ADD_MESSAGE, @"「さぁ……終焉の唄を奏でましょう」\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「あなたは、どんな断末魔を聞かせてくれますか？」\n"
			ENDSELECT
		ENDIF
	ENDIF
