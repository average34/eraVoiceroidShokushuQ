		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「こんな攻撃でも、少しは効くハズです…っ！」\n"
		ENDSELECT
		
	; 残りMP 0%以上
	ELSEIF BASE:1 >= (MAXBASE:1 / 100 * 0)
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"（この攻撃が、今の私の精一杯…っ！）\n"
		ENDSELECT
	ENDIF
	
RETURN 1


