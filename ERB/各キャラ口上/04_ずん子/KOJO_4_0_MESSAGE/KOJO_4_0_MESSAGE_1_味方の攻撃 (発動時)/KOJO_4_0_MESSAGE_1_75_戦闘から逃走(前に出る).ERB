@KOJO_4_0_SYSTEM_MESSAGE_1_75(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 催眠中行動
	IF KOJO_4_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			SELECTCASE KOJO_4_0_KOJO_MODE
			CASE "淫乱"
				CALL KOJO_4_0_ADD_MESSAGE, @"「……なるほど、絶対逃げられないように操作してるんですね♥」\n"
			CASEELSE
				CALL KOJO_4_0_ADD_MESSAGE, @"「…っ！？　足が勝手にっ！？」\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「えっ！？　そ、そっちは違っ！？」\n"
			ENDSELECT
			
		; 発情・感情操作系
		CASE 1
			CALL KOJO_4_0_ADD_MESSAGE, @"「気持ちいいことしてくれるなら、わたしはどこにも行きません♥」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「もっと近くに……　ん……♥　大好き、です♥」\n"

		; 無意識・認識操作系
		CASE 2
			CALL KOJO_4_0_ADD_MESSAGE, @"「ご主人様から逃げようとした……　愚かなわたしを……　お躾けください……」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「一瞬でも逃げようなんて考えた……わたしに……　罰を与えて下さい……」\n"
		ENDSELECT
	ENDIF
RETURN 1
