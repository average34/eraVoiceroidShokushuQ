; □ 0 通常
@KOJO_4_0_SYSTEM_MESSAGE_1_43_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_4_0_ADD_MESSAGE, @"「隙を見せると、獲物が逃げますよっ♪」\n"
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「これぐらいの拘束、すぐに振り払ってあげます！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"（いつまでも捕まってると思わない事です！）\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"（魔物の力が緩んだら、その瞬間に全力を出します！）\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"（隙を見せたら、すぐに脱出してみせます…！）\n"
	ENDSELECT
RETURN 1


