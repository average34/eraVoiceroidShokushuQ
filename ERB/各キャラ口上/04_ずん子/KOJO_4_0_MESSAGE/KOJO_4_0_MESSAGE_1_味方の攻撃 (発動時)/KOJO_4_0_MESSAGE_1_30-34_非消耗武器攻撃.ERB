; □ XX 非消耗武器攻撃 汎用口上
@KOJO_4_0_SYSTEM_MESSAGE_1_DIRECT_ATTACK(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 汎用攻撃口上を読み込む
	CALL KOJO_4_0_SYSTEM_MESSAGE_1_VERSATILE_ATTACK(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	CALL KOJO_4_0_FIX_MESSAGE
	
	; 残りMP 33%以上
	IF BASE:1 >= (MAXBASE:1 / 100 * 33)
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「叩いて、のめすッ！」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「もっと離れて攻撃したいですね」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「攻撃したらすぐに離れます！」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「もっと離れて攻撃できると返り血とか浴びなくてすむんですが」\n"
		ENDSELECT
		
	; 残りMP 0%以上
	ELSEIF BASE:1 >= (MAXBASE:1 / 100 * 0)
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「…っ　武器が重い……ですねっ……」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"（こんな状態で直接攻撃……すぐに離れないと…！）\n"
		ENDSELECT
	ENDIF
	
	; 1人で行動中なら追加口上
	IF GET_MEMBER_SUM() == 1
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「一人で戦う時は、あまり敵に近付きたくないんですが」\n"
		ENDSELECT
	ENDIF
		
	; 武器別追加口上
	SELECTCASE TFLAG:67
	; ナイフ
	CASE 10
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「食べる物に困ったら、これで魔物の捌いて…いえ、なんでもありません」\n"
		ENDSELECT
		
	; クナイ
	CASE 11
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「こういうので遠距離攻撃する方が、わたしらしさがありますよね」\n"
		ENDSELECT
	
		; 2人以上のパーティーなら追加口上
		IF GET_MEMBER_SUM() > 1
			SELECTCASE KOJO_4_0_KOJO_MODE
			CASEELSE
				CALL KOJO_4_0_ADD_MESSAGE, @"「…他の子を攻撃しないように、注意しないと」\n"
			ENDSELECT
		ENDIF
		
	; フライパン★
	CASE 12
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「凄いですよねこれ　焼いて良し、炒めてよし、叩いて…良し！」\n"
		ENDSELECT
		
	; マジカルステッキ
	CASE 13
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「結構装飾が多いので、鈍器としても強そうですね魔法少女の杖って」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「魔法少女ずん子の一撃、受けなさい！」\n"
		ENDSELECT
		
	; 大剣
	CASE 16
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「こういう剣も振り回してみたかったんです」\n"
		ENDSELECT
	ENDSELECT
RETURN 1

