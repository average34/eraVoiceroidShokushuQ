	CALL KOJO_4_0_FIX_MESSAGE
	
	; 基本口上
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「少し安全な場所から攻撃するっていうのは大事ですね」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「攻撃の届かない場所から一方的に撃てれば一番いいんですが」\n"
	ENDSELECT

	; 武器別追加口上
	SELECTCASE TFLAG:67
	; 火炎放射器
	CASE 3
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「燃え尽きろ！」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「ごぉぉー♪」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「こうして火の海にするのも楽しいですね」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「ひゃっはー！　汚物は消毒だー！」\n"
		ENDSELECT
	ENDSELECT
RETURN 1
