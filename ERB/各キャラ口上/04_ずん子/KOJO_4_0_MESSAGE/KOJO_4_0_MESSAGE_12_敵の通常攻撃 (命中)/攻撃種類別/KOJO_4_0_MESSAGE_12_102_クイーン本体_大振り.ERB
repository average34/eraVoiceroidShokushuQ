		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASE "発情"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ひぐぅっ！？……♥　か…は…っ♥　あつ…いっ……♥　からだ、が…あつ……いっ……♥♥」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ぁああ……っ♥　はあぁ……っ♥　はあ……っッッ♥♥」\n"
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「きゃあっ！？　……っ！？　からだが、熱く……っ……！？」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「はーっ……　はーっ………　はーっ…………」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「この液体……　かなり、危険……ですっ……！　ぐっ…」\n"
	ENDSELECT
RETURN 1
