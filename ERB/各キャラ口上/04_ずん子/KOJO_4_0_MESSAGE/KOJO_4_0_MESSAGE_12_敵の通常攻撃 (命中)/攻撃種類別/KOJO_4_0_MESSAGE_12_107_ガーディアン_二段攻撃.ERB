
; ------------------------------------------------------------------------------
; ■ 12 敵の通常攻撃 (命中) - 攻撃種類別 0107 ガーディアン 二段攻撃
; ------------------------------------------------------------------------------

@KOJO_4_0_SYSTEM_MESSAGE_12_107(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 睡眠時・喪失時・諦め
	SIF CFLAG:25 || CFLAG:29 || TFLAG:16 == 2
		RETURN 0
	
	; 優先口上指定
	CALL KOJO_4_0_SET_IMPORTANT_FLAG()
	
	; 催眠中
	IF KOJO_4_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「…っ！？　目が追い付かな…っ！！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「そ、そんなの避けられるわけ…っ！」\n"
	ENDSELECT
RETURN 1
