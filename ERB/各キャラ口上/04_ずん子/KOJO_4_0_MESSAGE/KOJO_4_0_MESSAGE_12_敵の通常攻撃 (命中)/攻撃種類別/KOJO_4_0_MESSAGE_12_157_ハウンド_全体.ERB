; ------------------------------------------------------------------------------

@KOJO_4_0_SYSTEM_MESSAGE_12_157(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	 
	; 睡眠時・喪失時・諦め
	SIF CFLAG:25 || CFLAG:29 || TFLAG:16 == 2
		RETURN 0

	; 優先口上指定
	CALL KOJO_4_0_SET_IMPORTANT_FLAG()
	
	; 催眠中
	IF KOJO_4_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「きゃっ！？　こ、この……！？　……っ！　捌ききれない…！？」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「統率の取れた攻撃！？　このわんちゃん達、かなり手ごわ――――きゃぁっ！？」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「くっ……狩りの基本がわかっている……ようですね……っ！」\n"
	ENDSELECT
RETURN 1
