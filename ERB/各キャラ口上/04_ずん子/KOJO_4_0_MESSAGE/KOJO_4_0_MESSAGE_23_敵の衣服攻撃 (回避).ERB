@KOJO_4_0_SYSTEM_MESSAGE_23(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 催眠中
	IF KOJO_4_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	; 服:大破
	IF BASE:CP <= 0
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「もう裸ですよ私」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「もう脱がせるものなんて何もありません！」\n"
		ENDSELECT
		
	; 服:新品
	ELSEIF (BASE:CP * 100 / MAXBASE:CP) >= 100
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「きゃっ！\n　……今、わたしの服を狙った…？」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「服を破ろうとするなんて、えっちな敵ですね…！」\n"
		ENDSELECT
		
	; 服:通常
	ELSEIF (BASE:CP * 100 / MAXBASE:CP) > 66
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「危ないっ！　服ばっかり狙わないでください！」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「どうして服ばかり狙うんでしょう…」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「そんな攻撃で、何がしたかったんです？」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「もうちょっとちゃんと狙った方が良いと思います」\n"
		ENDSELECT
		
	; 服:損傷
	ELSEIF (BASE:CP * 100 / MAXBASE:CP) > 33
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「ひゃっ！こ、これ以上破られたら大事なところが…」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「集中……集中しないと…」\n"
		ENDSELECT
		
	; 服:中破
	ELSE
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「こ、こんな場所で裸にされるなんてまっぴらごめんです……！」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「やめてください！　ただでさえ服が無いんですから！」\n"
		ENDSELECT
	ENDIF
RETURN 1


