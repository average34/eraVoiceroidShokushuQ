
; ------------------------------------------------------------------------------
; ■ 56 戦闘で敗北
; ------------------------------------------------------------------------------

@KOJO_4_0_SYSTEM_MESSAGE_56(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 捕食中のずんちゃんを助ける戦闘だった場合
	IF KOJO_4_0_TEMP_FLAG:0
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_4_0_ADD_MESSAGE, @"「ごめんなさい、巻き込んじゃったみたいで……♥　%KOJO_4_0_CALLNAME_FROM_ID(FLAG:10)%♥"
			CALL KOJO_4_0_PARAGRAPH_MESSAGE
			IF FLAG:11
				CALL KOJO_4_0_ADD_MESSAGE, @"　%KOJO_4_0_CALLNAME_FROM_ID(FLAG:11)%♥」\n"
			ELSE
				CALL KOJO_4_0_ADD_MESSAGE, @"」\n"
			ENDIF
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「申し訳…ないです…　わたしのせいで……　%KOJO_4_0_CALLNAME_FROM_ID(FLAG:10)%……"
			CALL KOJO_4_0_PARAGRAPH_MESSAGE
			IF FLAG:11
				CALL KOJO_4_0_ADD_MESSAGE, @"　%KOJO_4_0_CALLNAME_FROM_ID(FLAG:11)%……」\n"
			ELSE
				CALL KOJO_4_0_ADD_MESSAGE, @"」\n"
			ENDIF
		ENDSELECT
		RETURN 1
	ENDIF
	
	; 催眠中
	IF KOJO_4_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			; 催眠深度によって変化
			SELECTCASE CFLAG:43
			CASE 1
				CALL KOJO_4_0_ADD_MESSAGE, @"「……　わたしは……あわれな……負け犬…　これからは、みなさんの精液便所……です……」\n"
				CALL KOJO_4_0_PARAGRAPH_MESSAGE
				CALL KOJO_4_0_ADD_MESSAGE, @"\d力尽きた%CALLNAME:TARGET%は操られるままに、望まぬ誓いを口にした…\d\n"
			CASE 2
				CALL KOJO_4_0_ADD_MESSAGE, @"（これは負けたわけではありません。魔物さんに身体を使ってもらう事がわたしのお仕事だから…♥）\n"
				CALL KOJO_4_0_PARAGRAPH_MESSAGE
				CALL KOJO_4_0_ADD_MESSAGE, @"\d催眠術で思考を歪められた%CALLNAME:TARGET%は、敗北しながらも奇妙な幸福感に満たされた…\d\n"
			CASEELSE
				CALL KOJO_4_0_ADD_MESSAGE, @"「使っていただいて……ありがとうござい……ます……　またの、ご利用……お待ちしております……」\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「触手様の遊び相手になれて、%CALLNAME:TARGET%は幸せです……」\n"
			ENDSELECT
			RETURN 1
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_4_0_ADD_MESSAGE, @"（わたし……　これからどうなるのでしょう……♥\n　孕み袋？♥それとも精液ボテになるまで注ぎ込まれちゃう…？♥　ああ、楽しみです…♥）\n"
		
		; [尻穴狂い]所持 または りばーす東方触手宮でA感覚LV3以上
		IF TALENT:75 || (KOJO_4_0_IS_REVERSE() && ABL:6 >= 3)
			CALL KOJO_4_0_ADD_MESSAGE, @"（あぁ♥　敗北しちゃいました♥　\n　期待してトロトロになってる私のお尻の穴♥　イキ狂うまでかき回してくださいぃ…♥♥）\n"
		ENDIF
		
		; [淫壺]所持 または りばーす東方触手宮でV感覚LV3以上
		IF TALENT:78 || (KOJO_4_0_IS_REVERSE() && ABL:9 >= 3)
			CALL KOJO_4_0_ADD_MESSAGE, @"（あは♥　負けちゃいました♥♥\n　わたし……触手の精液便所にされちゃうんですね♥　精神が焼き切れるまで、子宮の中までかき回されちゃうんですね♥♥\n　あっ♥　ああぁっ♥　はやくっ♥　トロトロぐちゅぐちゅのおまんこに触手を♥♥♥）\n"
		ENDIF
		
	CASE "発情"
		CALL KOJO_4_0_ADD_MESSAGE, @"（こんな所で倒れたら、壊れるまで……玩具にされてしまい……ます…♥）\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"（このまま……オモチャにされちゃうん……ですね……♥\n　あぁ…♥　心の底で、期待してる私がいる……ぅ♥）\n"
	CASE "強気"
		CALL KOJO_4_0_ADD_MESSAGE, @"（こんな……　ところで……）\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"（なんとか隙を見つけて……　逃げないと……）\n"
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「他の皆さんが…きっと……貴方を……！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"（わたし%TACHI()%……　どうして……　こんなことに…なったんでしょうか……）\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"（負けたら……終わりなのに……）\n"
	ENDSELECT
RETURN 1
