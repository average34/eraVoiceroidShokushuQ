; □ 汎用口上
@KOJO_4_0_SYSTEM_MESSAGE_21(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 二段攻撃も外す
	IF KOJO_4_0_GET_PREV_ARG(0) == 21
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「集中力が、途切れているみたいです……」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「二発とも外したっ！？」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「もしかして、わたしおちょくられてるのでは…」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「もう！動かないで下さい！！」\n"
		ENDSELECT
		
	; 通常攻撃を外す
	ELSE
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_4_0_ADD_MESSAGE, @"「狙いが、定まらない……」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「んぅ♥　あの立派なモノが、欲しくて……　集中ができません……♥」\n"
		CASE "発情"
			CALL KOJO_4_0_ADD_MESSAGE, @"「はぁ……　はぁ……　あたっ……るわけないです…よね……」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「うぁ……っ！？　身体が、疼いて……っ！？」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「あはは……　やっぱり、当たりませんよね…」\n"
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「どうして当たらないの…！？」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「い、今のは威嚇射撃です　次は当てますから」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「なっ！？　外した…っ！？」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「むむむ、意外とすばやいですね……」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「くっ、集中しないと…！」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「見切られた…！？」\n"
		ENDSELECT
	ENDIF
RETURN 1


