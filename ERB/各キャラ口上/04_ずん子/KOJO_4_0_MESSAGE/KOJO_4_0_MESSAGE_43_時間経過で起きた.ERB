
; ------------------------------------------------------------------------------
; ■ 43 時間経過で起きた
; ------------------------------------------------------------------------------

@KOJO_4_0_SYSTEM_MESSAGE_43(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
#DIM ATTACK_COUNT

	VARSET ATTACK_COUNT
	
	; 睡眠中に受けた性攻撃関連回数をカウント
	; 戦闘中の回数をカウントするので、戦闘中に睡眠状態になった場合は多少不都合が出るかも
	ATTACK_COUNT += KOJO_4_0_CREAMPIE_COUNT
	ATTACK_COUNT += SUMARRAY(KOJO_4_0_ORGASM_COUNT, 0)
	ATTACK_COUNT += SUMARRAY(KOJO_4_0_SEXUAL_ASSAULT_COUNT, 0)
	
	; 催眠中
	IF KOJO_4_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	; 寝てる間にイタズラされた
	IF ATTACK_COUNT
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_4_0_ADD_MESSAGE, @"「んっ♥　睡眠姦とは中々の趣味を持ってますね♥」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「……寝てる間に、えっちなコトされちゃったいました…♥」\n"
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「……寝てる間、何をされていたんでしょうか」\n"
		ENDSELECT
	
	; 寝てたのに何もされなかった
	ELSE
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_4_0_ADD_MESSAGE, @"「……ふみゅ　……あれ？　寝てたのに、どうして何もされてないの……？」\n"
			CALL KOJO_4_0_PARAGRAPH_MESSAGE
			CALL KOJO_4_0_ADD_MESSAGE, @"\d不満そうな顔で、%CALLNAME:TARGET%は目の前の触手をにらんでいる\d\n"
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「寝てる間に何かされたりは……ない、みたいですね」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「戦闘中に眠ってしまうとは、反省ですね……」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「……はっ！？　わたし寝てました！？」\n"
		ENDSELECT
	ENDIF
RETURN 1
