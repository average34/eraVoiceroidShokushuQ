
; ------------------------------------------------------------------------------
; ■ 51 カウンター発動
; ------------------------------------------------------------------------------

@KOJO_4_0_SYSTEM_MESSAGE_51(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_4_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_4_0_ADD_MESSAGE, @"「そんな動きでは、私をとらえることはできませんよ♪」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「弱い魔物さんには興味無いんです♪」\n"
	CASE "弱気"
		CALL KOJO_4_0_ADD_MESSAGE, @"（わたしの力でも、こうすることで……！）\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「乾坤一擲…ここで思いっきり！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"（隙が見えた……）\n"
	CASE "強気"
		CALL KOJO_4_0_ADD_MESSAGE, @"「その動き、隙だらけですよ！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「窮鼠猫を噛む。油断しましたね？」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「甘いです！」\n"
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「東北家次女の力、思い知りなさい！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「そこですっ！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「見えました、水のひとしずく！」\n"
	ENDSELECT
RETURN 1
