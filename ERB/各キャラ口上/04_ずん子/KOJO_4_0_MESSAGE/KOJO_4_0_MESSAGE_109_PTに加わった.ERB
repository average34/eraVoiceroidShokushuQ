; PT外だと理性度の変動はほぼ起こらないので、基本的に汎用口上が呼び出される
; 汎用以外の口上モードが呼び出されるのは再加入の場合がほとんど
@KOJO_4_0_SYSTEM_MESSAGE_109(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ｺｯｼｮﾘをしてくる魔物は、わたしにお任せください♥」\n"
	CASE "発情"
		CALL KOJO_4_0_ADD_MESSAGE, @"「あはは……　が、頑張って自分の身は自分で守るので、お互い頑張りましょう」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ちょっと身体の…んぅっ♥　調子が悪いですが……　よろしく、お願いしますね」\n"
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「わたしのずんだアローの出番ですね！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「頑張って脱出しましょう。絶対に、ね」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「独りだと厳しい部分がありますので、助かりました」\n"
	ENDSELECT
RETURN 1
