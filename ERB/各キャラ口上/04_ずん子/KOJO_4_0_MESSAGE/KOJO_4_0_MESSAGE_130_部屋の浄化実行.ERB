
; ------------------------------------------------------------------------------
; ■ 130 部屋の浄化実行
; ------------------------------------------------------------------------------

@KOJO_4_0_SYSTEM_MESSAGE_130(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 部屋の状態:清浄～通常
	IF FLAG:(50 + FLAG:5) < 40
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「綺麗であるに越したことはありませんからね」\n"
			CALL KOJO_4_0_PARAGRAPH_MESSAGE
			CALL KOJO_4_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は浄化された部屋を満足気に眺めている…\d\n"
		ENDSELECT
		
	; 部屋の状態:軽度汚染～重度汚染
	ELSE
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_4_0_ADD_MESSAGE, @"「浄化せずに置いておけば、そのうち面白そうな事が起きそうだったんですが」\n"
			CALL KOJO_4_0_PARAGRAPH_MESSAGE
			CALL KOJO_4_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は浄化される部屋を物欲しげに眺めている…\d\n"
		CASE "強気"
			CALL KOJO_4_0_ADD_MESSAGE, @"「不浄が溜まってる部屋は綺麗にするに限ります」\n"
			CALL KOJO_4_0_PARAGRAPH_MESSAGE
			CALL KOJO_4_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は浄化された部屋を満足気に眺めている…\d\n"
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「掃除は大事です。綺麗な部屋を見れば、気分も晴れやかになりますし」\n"
			CALL KOJO_4_0_PARAGRAPH_MESSAGE
			CALL KOJO_4_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は浄化された部屋を満足気に眺めている…\d\n"
		ENDSELECT
	ENDIF
RETURN 1
