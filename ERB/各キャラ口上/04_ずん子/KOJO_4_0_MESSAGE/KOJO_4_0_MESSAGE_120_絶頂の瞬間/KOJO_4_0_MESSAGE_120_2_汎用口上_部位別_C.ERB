
; ------------------------------------------------------------------------------
; ■ 120 絶頂の瞬間 - 2 汎用口上 部位別 C
; ------------------------------------------------------------------------------

@KOJO_4_0_SYSTEM_MESSAGE_120_2(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 追加地の文関数(前)を登録
	CALL KOJO_4_0_REGIST_DESCRIPTION_BEFORE("KOJO_4_0_SYSTEM_MESSAGE_120_DESCRIPTION_BEFORE")
	
	; 睡眠・喪失・諦め
	SIF CFLAG:25 || CFLAG:29 || TFLAG:16 == 2
		RETURN 0

	; 催眠中
	IF KOJO_4_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			; ふたなり
			IF GET_PENIS(TARGET)
				CALL KOJO_4_0_ADD_MESSAGE, @"「おとこのっ…人の快楽で…　イキ…ました……」\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「んっ……　おちん…ぽっ…　絶頂しました…っ」\n"
			; 通常
			ELSE
				CALL KOJO_4_0_ADD_MESSAGE, @"「んっ……　クリト…リスっ…　絶頂しました…っ」\n"
			ENDIF
			CALL KOJO_4_0_PARAGRAPH_MESSAGE
			
			CALL KOJO_4_0_ADD_MESSAGE, @"\d催眠状態の%CALLNAME:TARGET%は、顔を上気させながら事務的に絶頂したことを伝えた\d\n"
			RETURN 1
		ENDSELECT
	ENDIF

	; 通常時
	; ふたなり
	IF GET_PENIS(TARGET)
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_4_0_ADD_MESSAGE, @"「あああぁっ♥　おちんぽっ♥　おちんぽとける…っ♥♥」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「もう限界だからっ♥　破裂っ♥　はれつじぢゃう…うぅっ♥」\n"
		CASE "発情"
			CALL KOJO_4_0_ADD_MESSAGE, @"「いやいやいやぁ…っ♥　おとこの人のでイクの、おかしくなっちゃうからっ♥　イギだくないいいっ♥♥」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「イッへましぇんっ♥　おちんちんっ気持ちよくなんか…なってにゃいのっ♥」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「イッちゃだめぇっ！　おちんちんっイッたら…っ、精液出ちゃう…っっ！」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「やだっ♥　やだぁぁっ♥　おちんちん…っ、イッちゃうぅぅっ♥」\n"
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「だめぇっ…！　射精ちゃうっ！　射精ちゃうからあぁぁぁっ！！」\n"
		ENDSELECT
		
	; 通常
	ELSE
	ENDIF
	CALL KOJO_4_0_FIX_MESSAGE
	
	; 連続絶頂時 or 寸止め時 追加口上
	IF GETBIT(ARG:3, 3) || CFLAG:820

		; ふたなり
		IF GET_PENIS(TARGET)
			SELECTCASE KOJO_4_0_KOJO_MODE
			CASE "淫乱"
				CALL KOJO_4_0_ADD_MESSAGE, @"「もっと…♥　おちんぽ、もっとシゴいてください…♥\n　わたしの精液♥　びゅるびゅる…しぼりださせて…♥」\n"
				CALL KOJO_4_0_PARAGRAPH_MESSAGE
				CALL KOJO_4_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は少しでも快感を引き延ばそうと、絶頂したばかりのふたなりペニスをしごき続けている…\d\n"
			CASEELSE
				CALL KOJO_4_0_ADD_MESSAGE, @"「おちんちん…　ビクビクって…　とまらない…っ！」\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「またぁぁっ！？　またイクうぅっ！？\n　もうやめて…！　気持ちいいのイヤなんですっ！　おちんちん…破裂しちゃうからぁっ！」\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「ひぃ…っ！？　あぁぁっ…！？　うぁあああぁぁぁっ！？\n　もうだめッ…！　とけるっ！　おちんちんとけちゃうからぁぁぁっ！」\n"
			ENDSELECT
			
		; 通常
		ELSE
			SELECTCASE KOJO_4_0_KOJO_MODE
			CASE "淫乱"
				CALL KOJO_4_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は少しでも快感を引き延ばそうと、絶頂したばかりのクリトリスをしごき続けている…\d\n"
			CASEELSE
				CALL KOJO_4_0_ADD_MESSAGE, @"「うあ…ぁぁっ…　おまめ…ぇっ…　おかしく…なって…！？」\n"
			ENDSELECT
		ENDIF
	ENDIF
	CALL KOJO_4_0_FIX_MESSAGE
	
	; 多重絶頂時 追加口上
	IF ARG:3 && !GETBIT(ARG:3, 3)

		; ふたなり
		IF GET_PENIS(TARGET)
			SELECTCASE KOJO_4_0_KOJO_MODE
			CASE "淫乱"
				CALL KOJO_4_0_ADD_MESSAGE, @"「他にもイッてるのに…♥　おちんぽまでイッちゃっうなんて……♥♥」\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「おちんぽっ♥　おちんぽもイッちゃうぅっ♥♥」\n"
			CASE "発情"
				CALL KOJO_4_0_ADD_MESSAGE, @"（他にイッてるのにっ、おちんちんまでっ！？）\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「いやぁぁぁっ♥　もう気持ちよくしないでくださいっ♥　おちんちん……までぇぇぇっ♥♥」\n"
			CASEELSE
				CALL KOJO_4_0_ADD_MESSAGE, @"「ダメぇっ！　おちんちんもイクっ！　イクううぅぅぅっ！！」\n"
			ENDSELECT
			
		; 通常
		ELSE
			SELECTCASE KOJO_4_0_KOJO_MODE
			CASE "淫乱"
				CALL KOJO_4_0_ADD_MESSAGE, @"「他にもイッてるのに…♥　お豆ちゃんまでイッちゃうなんて……♥♥」\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「くりとりすっ♥　くりとりすもイッちゃうぅっ♥♥」\n"
			CASE "発情"
				CALL KOJO_4_0_ADD_MESSAGE, @"（他にイッてるのにっ、お豆までっ！？）\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「いやあぁぁっ♥　もう気持ちよくしないでくださいっ♥　お豆……までぇぇぇっ♥♥」\n"
			CASEELSE
				CALL KOJO_4_0_ADD_MESSAGE, @"「ダメぇっ！　お豆もイクっ！　イクううぅぅぅっ！！」\n"
			ENDSELECT
		ENDIF
	ENDIF
	CALL KOJO_4_0_FIX_MESSAGE
RETURN 1
