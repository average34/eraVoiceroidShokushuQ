		CALL KOJO_4_0_ADD_MESSAGE, @"「ちくびっ♪　ぴくぴくしてとまりません……っ♪」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「使い魔さんのくせに、わたしのおっぱい壊すつもりなんですか……っ♥」\n"
	CASE "発情"
		CALL KOJO_4_0_ADD_MESSAGE, @"「使い魔さんのっ、仕事はこういうのでは…ぁっ♥」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「使い魔さん…邪魔を…しないでください……っ♥」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「――ッ♥　――ッッ♥♥」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ひぁっ！？　ちょっ、ちょっと待ってください！？　なに、して……っ！？」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「離れてっ！　そんなコトしなくていい……からっ！」\n"
	ENDSELECT
RETURN 1

