		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF
	
	; 通常時
	; 発情中にしか発動しないので淫乱・発情のみ埋めればOK
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_4_0_ADD_MESSAGE, @"「あっ♥　あっ♥　あっ♥　ちくび、もっと強くしてくださいっ♥」\n"
