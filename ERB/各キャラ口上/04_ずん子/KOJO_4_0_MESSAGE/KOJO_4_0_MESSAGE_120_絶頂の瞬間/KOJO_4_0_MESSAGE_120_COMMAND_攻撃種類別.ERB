; □ 387 コウノトリ見せつけ
@KOJO_4_0_SYSTEM_MESSAGE_120_COMMAND_387(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 追加地の文関数(前)を登録
	CALL KOJO_4_0_REGIST_DESCRIPTION_BEFORE("KOJO_4_0_SYSTEM_MESSAGE_120_DESCRIPTION_BEFORE")
	
	; 睡眠・喪失・諦め
	SIF CFLAG:25 || CFLAG:29 || TFLAG:16 == 2
		RETURN 0
	
	; 催眠中
	IF KOJO_4_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF
	
	; 通常時
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_4_0_ADD_MESSAGE, @"「見てるだけなの…にっ♥　どういうこと…ですか、これ…っ♥　うぁあ…っ♥\n　おかしいっ♥　見てるだけで気持ちよく…っ♥　カラダが…勝手に…っ…♥♥」\n"
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「どうっ…してっ！？　触られても…いないのにっ！？」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「んひぃっ！？　カラダが…　勝手にビクビクって…！？」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「んぁぁっ！？　ひぐぅぅっ！？　どうして…絶頂して…っ！？」\n"
	ENDSELECT
RETURN 1
