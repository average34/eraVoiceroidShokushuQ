; □ 汎用口上
@KOJO_4_0_SYSTEM_MESSAGE_24(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 睡眠時・喪失時・諦め
	SIF CFLAG:25 || CFLAG:29 || TFLAG:16 == 2
		RETURN 0
		
	; 敵の通常攻撃(回避) 汎用口上 も併用する
	CALL KOJO_4_0_SYSTEM_MESSAGE_22(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
		
	; 催眠中
	IF KOJO_4_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_4_0_ADD_MESSAGE, @"「そんなぬるい攻撃だと、あんまり気持ちよくなれなさそうです♥」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「あっ♥　避けちゃったの勿体なかったかも♥」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ざんねん♥　えっちなお姉さんはこっちですよ～♥」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「当たらないように手加減してるんですか？　特殊なプレイですね」\n"
	CASE "強気"
		CALL KOJO_4_0_ADD_MESSAGE, @"「そういう事したいなら、相手を捕まえてからやるべきですね」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「おいたが過ぎますよ、変態魔物さん！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「当たるわけにはいきません！」\n"
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「っもう、ここの魔物はすぐ変なとこを触ろうとしてくるんですから…」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「変な攻撃、当たったらどうなるんでしょうか…」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「避けられた…？　嫌な予感しかしない攻撃でした…」\n"
	ENDSELECT
RETURN 1


