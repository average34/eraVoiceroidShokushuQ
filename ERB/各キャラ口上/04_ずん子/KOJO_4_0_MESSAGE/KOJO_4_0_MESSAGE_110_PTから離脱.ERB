@KOJO_4_0_SYSTEM_MESSAGE_110_X_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 別れる側口上・別れた側口上の両方が呼び出される為分岐
	; 仲間側口上
	IF ARG:1 == TARGET
		; 喪失中
		IF CFLAG:29
			SELECTCASE KOJO_4_0_KOJO_MODE
			CASEELSE
				CALL KOJO_4_0_ADD_MESSAGE, @"（いや……　おいて……いかないで…）\n"
			ENDSELECT
			
		; 好感度:普通
		ELSEIF CFLAG:5 < 200

		; 好感度:高
		ELSE
			SELECTCASE KOJO_4_0_KOJO_MODE
			CASEELSE
				CALL KOJO_4_0_ADD_MESSAGE, @"「…どうして、どうしてそんな事言うんですか？　私、何か機嫌を損ねるようなことしましたか…？」\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「…え？　あ、あの　よく聞こえなかったので…もう一度、お願いできますか…？」\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は目を見開き、絶望した表情でこちらを見ている\d\n「……嘘…ですよね…？　嘘って、言って、くれますよね…？」\n"
			ENDSELECT
		ENDIF
		
	; 主人公側口上
	ELSE
	
	ENDIF
RETURN 1


