	; 1 クイーン戦にお願い
	CALL KOJO_4_0_SYSTEM_MESSAGE_55_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
