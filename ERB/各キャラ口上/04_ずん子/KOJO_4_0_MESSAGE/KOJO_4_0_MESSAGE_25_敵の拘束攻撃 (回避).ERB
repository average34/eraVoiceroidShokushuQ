		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_4_0_ADD_MESSAGE, @"「わたしを捕まえたいなら、もっとしっかり狙ってくださいね♪」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ふふっ♪」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「わたしを捕まえたいならもっとがんばってくださいね♥」\n"
	CASE "発情"
		CALL KOJO_4_0_ADD_MESSAGE, @"「よ、避けれました……」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「あ、危なかったです……」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「あんなのに捕まったらわたし……」\n"
		CALL KOJO_4_0_PARAGRAPH_MESSAGE
		CALL KOJO_4_0_ADD_MESSAGE, @"\d%ARGS:1%の攻撃を回避できた事に、%CALLNAME:TARGET%は火照る身体を抱きしめながら安堵の声を漏らした…\d\n"
	CASE "強気"
		CALL KOJO_4_0_ADD_MESSAGE, @"「そんな大振りでわたしを捕まえるなんて無理ですよ！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「わたしを捕まえたいならもっと工夫を凝らしてくださいね！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「そんな単調な動きでは、捕まえられませんよ」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「遅いです！」\n"
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「残念でしたね、避けるのは結構得意なんです」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「あぶなかったぁ……！」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ふぅ、ちゃんと避けられた……」\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"「あんなのに捕まったら、どうなっちゃうんでしょう……」\n"
	ENDSELECT
	CALL KOJO_4_0_FIX_MESSAGE
	
	; 服を破って拘束を回避時追加口上
	IF BASE:3 != KOJO_4_0_PREV_BASE:3
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASE "淫乱"
			CALL KOJO_4_0_ADD_MESSAGE, @"「少しずつ私の服を破っていく魂胆でしょうか♥」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「ちょっと惜しいことしちゃったかも…」\n"
		CASE "発情"
			CALL KOJO_4_0_ADD_MESSAGE, @"「服が……！」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「はぁ…はぁ…　もう、捕まらないようにしないと……」\n"
		CASE "強気"
			CALL KOJO_4_0_ADD_MESSAGE, @"「もうっ！　後で縫わないと…」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「破れた服の分、痛い目にあわせてあげます！」\n"
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「この服、結構気に入ってるのですが…」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「服がなければ危なかったですね……」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「破けちゃいましたか…　捕まるよりマシですけども…」\n"
		ENDSELECT
	ENDIF
RETURN 1


