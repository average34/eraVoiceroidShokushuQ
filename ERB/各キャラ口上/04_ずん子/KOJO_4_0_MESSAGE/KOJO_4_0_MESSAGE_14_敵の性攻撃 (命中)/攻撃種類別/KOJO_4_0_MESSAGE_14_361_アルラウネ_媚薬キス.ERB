@KOJO_4_0_SYSTEM_MESSAGE_14_361(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 追加地の文関数(前)を登録
	CALL KOJO_4_0_REGIST_DESCRIPTION_BEFORE("KOJO_4_0_SYSTEM_MESSAGE_14_DESCRIPTION_BEFORE")

	; 追加地の文関数(後)を登録
	CALL KOJO_4_0_REGIST_DESCRIPTION_AFTER("KOJO_4_0_SYSTEM_MESSAGE_14_DESCRIPTION_AFTER")
	
	; 睡眠・喪失・諦め
	SIF CFLAG:25 || CFLAG:29 || TFLAG:16 == 2
		RETURN 0

	; 催眠中
	IF KOJO_4_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 通常時
	SELECTCASE KOJO_4_0_KOJO_MODE
	CASE "淫乱"
		CALL KOJO_4_0_ADD_MESSAGE, @"「ん…　ちゅ…っ♥　ちゅる…ぅ♥」\n"
		CALL KOJO_4_0_PARAGRAPH_MESSAGE
		CALL KOJO_4_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は自分から%ARGS:1%に舌を絡め、媚薬混じりの唾液を夢中で舐めとっている\d\n"
	CASE "発情"
		CALL KOJO_4_0_ADD_MESSAGE, @"（魔物の…　女の子との、キスが…　きもちいい…）\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"（どう……してっ…　あたまのなか…　まっしろに…　なる…）\n"
		CALL KOJO_4_0_ADD_MESSAGE, @"（あついっ…♥　あついですっ…♥♥）\n"
		CALL KOJO_4_0_PARAGRAPH_MESSAGE
		CALL KOJO_4_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は無意識に%ARGS:1%と舌を絡め、顔を涎と媚薬でべとべとに汚している…\d\n"
	CASEELSE
		CALL KOJO_4_0_ADD_MESSAGE, @"「んむぅ…っ！？　んんっ！？　んんんぅぅ…っ！？」\n（これ…っ！？　媚薬…っ！？）\n"
	ENDSELECT
	CALL KOJO_4_0_PARAGRAPH_MESSAGE
	
	; 地の文側で\nするので口上側は\nで終わること
RETURN 1
