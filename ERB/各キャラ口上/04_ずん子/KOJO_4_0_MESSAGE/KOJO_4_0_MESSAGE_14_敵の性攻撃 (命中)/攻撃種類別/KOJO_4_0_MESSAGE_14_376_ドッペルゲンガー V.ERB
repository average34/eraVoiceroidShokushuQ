
; ------------------------------------------------------------------------------
; ■ 14 敵の性攻撃 (命中) - 攻撃種類別 0376 ドッペルゲンガー V
; ------------------------------------------------------------------------------

@KOJO_4_0_SYSTEM_MESSAGE_14_376(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 追加地の文関数(前)を登録
	CALL KOJO_4_0_REGIST_DESCRIPTION_BEFORE("KOJO_4_0_SYSTEM_MESSAGE_14_DESCRIPTION_BEFORE")

	; 追加地の文関数(後)を登録
	CALL KOJO_4_0_REGIST_DESCRIPTION_AFTER("KOJO_4_0_SYSTEM_MESSAGE_14_DESCRIPTION_AFTER")
	
	; 睡眠・喪失・諦め
	SIF CFLAG:25 || CFLAG:29 || TFLAG:16 == 2
		RETURN 0
	
	; 催眠中
	IF KOJO_4_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF

	; 攻撃キャラが自分の娘
	; 現在攻撃を行っている敵を把握する為の情報はないので敵の名前で判別する
	; "CALLNAME:TARGET + の娘" なら自分の娘として扱う
	; 他のキャラに同名の名前を付けられると判別が不可能になるけれど、そうそう無い可能性なので考えない
	IF ARGS:1 == CALLNAME:TARGET + "の娘"
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASE "淫乱"
			; CP0超の場合はオリジナル地の文を使う
			IF BASE:3 > 0
				CALL KOJO_4_0_ADD_MESSAGE, @"\m\d%ARGS:1%は何かを期待する顔の母親を俯せに押さえつけると、下着をずらし挿入してきた！\d\n"
				CALL KOJO_4_0_PARAGRAPH_MESSAGE
			ENDIF
	
			CALL KOJO_4_0_ADD_MESSAGE, @"「あはっ♥　こらえ性のないふたなりちんぽ、お母さんが気持ちよくしてあげます♥♥」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「実の母を犯すほどたまってるの？　ガマンの出来ない悪い子ですね♥」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"（わたしのおまんこ♥　娘のおちんぽくわえ込んでっ♥♥）\n"
		CASE "発情"
			CALL KOJO_4_0_ADD_MESSAGE, @"「抜いて…　抜いてください…っ…　お母さんの言うこときいて…ぇ…」\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"（わたし、娘に犯されて感じてます…っ！？　この子、わたしの弱いトコ…的確に…っ！？）\n"
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"（わたし…っ、自分の娘に犯されてるの…っ！？）\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"「離してくださいっ！　母を犯そうとするなんて……っ！？」\n"
		ENDSELECT
		
	; 攻撃キャラが自分以外の娘
	ELSE
	ENDIF
	CALL KOJO_4_0_PARAGRAPH_MESSAGE
	
	; 地の文側で\nするので口上側は\nで終わること
RETURN 1
