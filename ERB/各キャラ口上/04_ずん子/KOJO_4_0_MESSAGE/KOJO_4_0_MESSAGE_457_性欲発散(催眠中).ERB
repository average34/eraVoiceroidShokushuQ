		; 無意識・認識操作系
		CASE 2
			CALL KOJO_4_0_ADD_MESSAGE, @"\d催眠の力で何でも言うことを聞くようになった%ARGS:1%に、%CALLNAME:TARGET%は囁いた\d\n"
			CALL KOJO_4_0_ADD_MESSAGE, @"\d催眠の力で何でも言うことを聞くようになった%ARGS:1%に、%CALLNAME:TARGET%は命令した\d\n"
		ENDSELECT
		
