			CALL KOJO_4_0_ADD_MESSAGE, @"「お、おちんちんっ！　わたしのおちんちん、%KOJO_4_0_CALLNAME_FROM_ID(ARG:3)%のおまんこで気持よくしてくださいっ！」\n"
		ENDSELECT
		
