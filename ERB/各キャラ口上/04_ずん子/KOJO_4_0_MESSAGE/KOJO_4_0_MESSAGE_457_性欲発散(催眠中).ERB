		CASE 1
			SELECTCASE KOJO_4_0_KOJO_MODE
			CASE "淫乱"
				CALL KOJO_4_0_ADD_MESSAGE, @"「はい、%KOJO_4_0_CALLNAME_FROM_ID(ARG:3)%の大好きなおちんちんですっ♥　犯したいですよね♥♥」\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「『私はセックスのことばかり考える変態淫乱おまんこ奴隷です』\n　って言えたら%KOJO_4_0_CALLNAME_FROM_ID(ARG:3)%の大好きなおちんちん、食べさせてあげますよ♥♥」\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「今の%KOJO_4_0_CALLNAME_FROM_ID(ARG:3)%はとってもえっちな孕み奴隷♥　孕ませて貰う事しか考えられないんですよね♥♥」\n"
			CASEELSE
				CALL KOJO_4_0_ADD_MESSAGE, @"「え、えっとっ…　%KOJO_4_0_CALLNAME_FROM_ID(ARG:3)%の大好きなセックスの時間です…　特別にわたし%TACHI()%のおちんちん使ってもいい、ですよ？」\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「今から%KOJO_4_0_CALLNAME_FROM_ID(ARG:3)%は、わたし%TACHI()%のおちんちんから精液を絞り取るんですよね　ほら、我慢しなくて良いんですよ？」\n"
				CALL KOJO_4_0_ADD_MESSAGE, @"「とってもえっちな目でおちんちん見てますね　ほら、好きに加えこんで良いんですよ」\n"
			ENDSELECT
			
		; 無意識・認識操作系
		CASE 2
			SELECTCASE KOJO_4_0_KOJO_MODE
			CASE "淫乱"
				CALL KOJO_4_0_ADD_MESSAGE, @"「%KOJO_4_0_CALLNAME_FROM_ID(ARG:3)%のおまんこは今精液便所\n　精液便所の前におちんぽがあれば、やることは判りますよね♥」\n"
			CASEELSE
				CALL KOJO_4_0_ADD_MESSAGE, @"「%KOJO_4_0_CALLNAME_FROM_ID(ARG:3)%はトロトロに涎を垂らしてる下の口を使って、わたし%TACHI()%のおちんちんを気持ちよくしたい…　そう、ですよね？」\n"
			ENDSELECT
		ENDSELECT
		
	; ずんちゃんはパーティーメンバー
	ELSE
		SELECTCASE KOJO_4_0_KOJO_MODE
		CASE "淫乱" 
			CALL KOJO_4_0_ADD_MESSAGE, @"「わたしも%KOJO_4_0_CALLNAME_FROM_ID(ARG:3)%の中に沢山射精して、お腹ぱんぱんに膨れ上がらせてあげたいです♥」\n"
		CASEELSE
			CALL KOJO_4_0_ADD_MESSAGE, @"「あ、あの！　わたしのおちんちんも気持ちよくしてください…！　%KOJO_4_0_CALLNAME_FROM_ID(ARG:3)%達見てたら、ガマンできなくなっちゃったので…」\n"
		ENDSELECT
	ENDIF
	CALL KOJO_4_0_PARAGRAPH_MESSAGE
	
	; 地の文を表示
	CALL KOJO_4_0_ADD_MESSAGE, @"\M"
RETURN 1


