;気力ピンチの判定　※式中関数
;ARG:0	キャラID
;≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡
@TALK_LOWMP(ARG)
#FUNCTION

IF BASE:(ARG):MP == 0
	;尽きてる
	RETURNF 3
ELSEIF BASE:(ARG):MP <= MAXBASE:(ARG):MP / 3
	;3分の1以下
	RETURNF 2
ELSEIF BASE:(ARG):MP <= MAXBASE:(ARG):MP / 2
	;半分以下
	RETURNF 1
ELSE
	RETURNF 0
ENDIF
