;細かな好感度変動処理
;イベントによる固定値変化ではなく、戦闘中の行動などでの細かな変化を処理
;主人公の話術の影響を受ける
;ARG:0	対象キャラ
;ARG:1	変化量
@ADD_FEELING(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	変化量

IF ARG:0 == 0
	RETURN
ENDIF

LOCAL:1 = ARG:1

SELECTCASE ABL:1:2
	CASE 0
		;変化なし
	CASE 1
		;3以上の変化を1調整
		IF LOCAL:1 <= -3
			LOCAL:1 += 1
		ELSEIF LOCAL:1 >= 3
			LOCAL:1 += 1
		ENDIF
	CASE 2
		;常に1調整、5以上の変化を更に1調整
		IF LOCAL:1 <= -5
			LOCAL:1 += 1
		ELSEIF LOCAL:1 >= 5
			LOCAL:1 += 1
		ENDIF
		LOCAL:1 += 1
	CASEELSE
		;常に1調整、5以上の変化を更に1調整、3以上の変化を更に1調整
		;マイナスを軽減
		IF LOCAL:1 <= -5
			LOCAL:1 += 1
		ELSEIF LOCAL:1 >= 5
			LOCAL:1 += 1
		ENDIF
		IF LOCAL:1 <= -3
			LOCAL:1 += 1
		ELSEIF LOCAL:1 >= 3
			LOCAL:1 += 1
		ENDIF
		LOCAL:1 += 1
		
		IF LOCAL:1 < 0
			LOCAL:1 = LOCAL:1 * 2 / 3
		ENDIF
ENDSELECT

IF ARG:1 < 0 && LOCAL:1 >= 0
	;元がマイナスだったのに0以上に補正された場合、-1にしておく
	LOCAL:1 = -1
ENDIF

CFLAG:(ARG:0):5 += LOCAL:1
