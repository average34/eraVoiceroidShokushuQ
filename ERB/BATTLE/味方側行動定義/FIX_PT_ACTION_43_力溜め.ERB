;力溜め
;CHARA_ID	実行キャラ
@FIX_PT_ACTION_43(CHARA_ID)
#DIM CHARA_ID

;全部こちらで処理するのでメイン処理不要
TFLAG:66 = 1

IF CFLAG:CHARA_ID:20
	CALL PRINT_MESSAGE(CHARA_ID, 1, 43, CALLNAME:CHARA_ID, SAVESTR:(CFLAG:CHARA_ID:20), 0)
ELSE
	CALL PRINT_MESSAGE(CHARA_ID, 1, 43, CALLNAME:CHARA_ID, SAVESTR:(CFLAG:CHARA_ID:10), 0)
ENDIF


IF CFLAG:CHARA_ID:35 && (TALENT:CHARA_ID:34 == 0 || RAND:2 == 0)
	IF CFLAG:CHARA_ID:20
		CALL PRINT_MESSAGE(CHARA_ID, 1, 43, CALLNAME:CHARA_ID, SAVESTR:(CFLAG:CHARA_ID:20), 1)
	ELSE
		CALL PRINT_MESSAGE(CHARA_ID, 1, 43, CALLNAME:CHARA_ID, SAVESTR:(CFLAG:CHARA_ID:10), 1)
	ENDIF
	CFLAG:CHARA_ID:53 -= 5
	IF CFLAG:CHARA_ID:53 < 0
		CFLAG:CHARA_ID:53 = 0
	ENDIF
	RETURN
ENDIF

;V1.00から、低TPだと最初は離脱率が低いが、力溜めの効果が高くなる（冷静に対処できる）ように変更
CFLAG:CHARA_ID:53 += 10 + LIMIT((100 - BASE:CHARA_ID:4) / 5, 0, 10)


