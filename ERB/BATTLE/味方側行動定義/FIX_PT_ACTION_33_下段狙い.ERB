;CHARA_ID	実行キャラ
;EQUIP_NO	装備１と２のどちらなのか
@FIX_PT_ACTION_33(CHARA_ID, EQUIP_NO)
#DIM CHARA_ID
#DIM EQUIP_NO

TFLAG:51 = CHARA_ID
TFLAG:53 = CFLAG:CHARA_ID:51
TFLAG:55 = 0
TFLAG:56 = 1
TFLAG:57 = EQUIP_POWER(TFLAG:67, CHARA_ID)

TFLAG:58 = 25
TFLAG:61 = 80

;汚染度ＭＡＸかつ触手系武器を装備していた場合は命中率が上昇
SIF FLAG:(FLAG:5 + 50) == 100 && (TFLAG:67 == 17 || TFLAG:67 == 18)
	TFLAG:61 += 30


TFLAG:68 = 100

TFLAG:99 = 60

CALL PRINT_MESSAGE(CHARA_ID, 1, 33, CALLNAME:CHARA_ID, "")


@EXTRA_ACTION_60(CHARA_ID, ENEMY_ID)
#DIM CHARA_ID
#DIM ENEMY_ID
PRINTFORML %SAVESTR:ENEMY_ID%の速度が少し下がった！
DA:ENEMY_ID:80 += 15

IF TALENT:CHARA_ID:161 == 2 && (CFLAG:CHARA_ID:(6 + CFLAG:CHARA_ID:50 / 100) == 12 || CFLAG:CHARA_ID:(6 + CFLAG:CHARA_ID:50 / 100) == 16 || CFLAG:CHARA_ID:(6 + CFLAG:CHARA_ID:50 / 100) == 18)
	DA:ENEMY_ID:80 += ABL:CHARA_ID:98 * 15 / 100
ELSEIF TALENT:CHARA_ID:161 == 1
	DA:ENEMY_ID:80 += ABL:CHARA_ID:98 / 10
ENDIF

IF DA:ENEMY_ID:80 > 45
	DA:ENEMY_ID:80 = 45
ENDIF


