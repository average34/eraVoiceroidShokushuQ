;強攻撃（非消耗）
;CHARA_ID	実行キャラ
;EQUIP_NO	装備１と２のどちらなのか
@FIX_PT_ACTION_32(CHARA_ID, EQUIP_NO)
#DIM CHARA_ID
#DIM EQUIP_NO

TFLAG:51 = CHARA_ID
TFLAG:53 = CFLAG:CHARA_ID:51
TFLAG:55 = 0
TFLAG:56 = 1
TFLAG:57 = EQUIP_POWER(TFLAG:67, CHARA_ID)

TFLAG:58 = 70
TFLAG:61 = 60

;汚染度ＭＡＸかつ触手系武器を装備していた場合は命中率が上昇
SIF FLAG:(FLAG:5 + 50) == 100 && (TFLAG:67 == 17 || TFLAG:67 == 18)
	TFLAG:61 += 30


IF TALENT:CHARA_ID:161 == 2 && (TFLAG:67 == 12 || TFLAG:67 == 16 || TFLAG:67 == 18)
	TFLAG:58 += ABL:CHARA_ID:98 / 4
ELSEIF TALENT:CHARA_ID:161 == 1
	TFLAG:58 += ABL:CHARA_ID:98 / 5
ENDIF

TFLAG:68 = 135

CALL PRINT_MESSAGE(CHARA_ID, 1, 32, CALLNAME:CHARA_ID, "")



