;みだれうち　　せつなさみだれうちにしようかとちょっと迷った
;CHARA_ID	実行キャラ
;EQUIP_NO	装備１と２のどちらなのか
@FIX_PT_ACTION_24(CHARA_ID, EQUIP_NO)
#DIM CHARA_ID
#DIM EQUIP_NO

TFLAG:51 = CHARA_ID
TFLAG:53 = CFLAG:CHARA_ID:51
TFLAG:55 = 0
IF TFLAG:67 == 3
	TFLAG:56 = 3
	FLAG:(FLAG:5 + 50) -= RAND:6
	SIF FLAG:(FLAG:5 + 50) < 0
		FLAG:(FLAG:5 + 50) = 0
;触手放射器は火炎放射器の逆効果
ELSEIF TFLAG:67 == 9
	TFLAG:56 = 2
	FLAG:(FLAG:5 + 50) += (5 + RAND:15)
	SIF FLAG:(FLAG:5 + 50) > 100
		FLAG:(FLAG:5 + 50) = 100
ELSE
	TFLAG:56 = 2
ENDIF
TFLAG:57 = EQUIP_POWER(TFLAG:67, CHARA_ID)

TFLAG:58 = 35
TFLAG:61 = 110

;汚染度ＭＡＸかつ触手系武器を装備していた場合は命中率が上昇
SIF FLAG:(FLAG:5 + 50) == 100 && TFLAG:67 == 9
	TFLAG:61 += 30


TFLAG:(EQUIP_NO + 79) = 2
IF TALENT:CHARA_ID:53
	TFLAG:58 = TFLAG:58 * 11 / 10
ENDIF

TFLAG:59 = 1

TFLAG:68 = 50

TFLAG:99 = 63


CALL PRINT_MESSAGE(CHARA_ID, 1, 24, CALLNAME:CHARA_ID, "")



