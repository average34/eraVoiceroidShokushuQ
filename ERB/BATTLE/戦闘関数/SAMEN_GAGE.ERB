;妊娠確率
@SAMEN_GAGE(ARG:0, ARG:1)

;妊娠OFFなら帰る
IF FLAG:515 == 1
	RETURN
ENDIF

;ペットが居る場合、妊娠確率をペットが奪い去るので合計する
LOCAL:1 = (ARG:0 + CFLAG:(ARG:1):401) / 5

LOCALS:0 = 【%CALLNAME:(ARG:1)%】の妊娠ゲージ
STRLENS LOCALS:0

IF LOCAL:1 > 100
	LOCAL:1 = 100
ENDIF
IF LOCAL:1
	PRINTFORML 
	PRINTFORM %LOCALS:0, 30, LEFT%
	IF LOCAL:1 > 20
		SETCOLOR RGBCOLOR(255, 120, 160)
	ELSE
		RESETCOLOR
	ENDIF
	FOR LOCAL:0, 0, LOCAL:1
		PRINTFORM ■
	NEXT
	IF LOCAL:1 < 20
		FOR LOCAL:0, 0, 20 - LOCAL:1
			PRINTFORM □
		NEXT
	ENDIF
	RESETCOLOR
	PRINTFORML 
	PRINTFORM 精液量{(ARG:0 + CFLAG:(ARG:1):401)} ％
	IF LOCAL:1 >= 100
		PRINTFORM   ※ゲージと%CALLNAME:(ARG:1)%のお腹が限界です
	ENDIF
	PRINTFORML 
	PRINTFORML 
	
ENDIF
