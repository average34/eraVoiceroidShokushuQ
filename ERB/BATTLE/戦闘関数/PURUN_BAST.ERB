;胸揺れダメージ
@PURUN_BAST(CHARA_ID, MP_DECREASE_RATE = 100)
#DIM CHARA_ID
#DIM MP_DECREASE_RATE

IF GET_BUST(CHARA_ID) >= 1 && ABL:CHARA_ID:7 <= 1
	TFLAG:52 = 0
	TFLAG:55 = 1
	CALL PRINT_MESSAGE(CHARA_ID, 505, 0, CALLNAME:CHARA_ID, "")
	CALL DAMAGE_COMMON(CHARA_ID, 0, 20 + RAND:50)
ELSEIF GET_BUST(CHARA_ID) >= 1 && ABL:CHARA_ID:7 >= 2
	TFLAG:52 = 0
	TFLAG:55 = 3
	TFLAG:63 = 1
	CALL PRINT_MESSAGE(CHARA_ID, 505, 1, CALLNAME:CHARA_ID, "")
	CALL DAMAGE_COMMON(CHARA_ID, 2, 200 + RAND:500, MP_DECREASE_RATE)
	IF BASE:CHARA_ID:3 < MAXBASE:CHARA_ID:3 / 2
		TFLAG:52 = 0
		CALL PRINT_MESSAGE(CHARA_ID, 505, 2, CALLNAME:CHARA_ID, "")
		CALL DAMAGE_COMMON(CHARA_ID, 2, 200 + RAND:500, MP_DECREASE_RATE, 1)
	ENDIF
ENDIF

