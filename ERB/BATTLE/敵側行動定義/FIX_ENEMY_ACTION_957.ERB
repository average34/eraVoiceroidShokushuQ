@FIX_ENEMY_ACTION_957(ENEMY_ID)
#DIM ENEMY_ID
;LOCAL
;0	母乳粘度増加率

TFLAG:52 = ENEMY_ID
TFLAG:54 = DA:ENEMY_ID:51
TFLAG:55 = 6
TFLAG:60 = 1

TFLAG:57 = DA:ENEMY_ID:5

TFLAG:58 = 60
TFLAG:61 = 30

TFLAG:59 = 0
TFLAG:99 = 957

IF DA:ENEMY_ID:0 == 21
	LOCAL:0 = 30
ELSEIF DA:ENEMY_ID:0 == 87
	LOCAL:0 = 35
ELSEIF DA:ENEMY_ID:0 == 88
	LOCAL:0 = 40
ENDIF

LOCAL:0 += TALENT:102 * 3
LOCAL:0 += GET_BUST(TFLAG:54) * 3
LOCAL:0 += TALENT:162 * 4
LOCAL:0 += TALENT:130 * 5

;母乳体質でない、または侵食度15未満では母乳粘度増加は発生しない
IF CFLAG:(TFLAG:54):80 < 15 || TALENT:(TFLAG:54):130 == 0
	TFLAG:98 = 0
ELSEIF RAND:100 < LOCAL:0 && (FLAG:521 == 0 || FLAG:521 == 2 || (FLAG:521 == 3 && TALENT:(TFLAG:54):122 == 0))
	TFLAG:98 = 1
ELSE
	TFLAG:98 = 0
ENDIF

TFLAG:63 = 1

CALL ACTION_FILTER(-1, 7, 957, CALLNAME:(TFLAG:54), SAVESTR:ENEMY_ID, TFLAG:54, TFLAG:64, TFLAG:63)

@EXTRA_ACTION_957(ENEMY_ID, CHARA_ID)
#DIM ENEMY_ID
#DIM CHARA_ID
;LOCAL
;1	命中率

LOCAL:1 = 150

CALL MILK_COME(CHARA_ID, 1, 1)
IF TFLAG:98 == 1
	CALL MILK_VISCOSITY(CHARA_ID, 1)
ENDIF
CALL PRINT_MESSAGE(CHARA_ID,17, TFLAG:99, CALLNAME:CHARA_ID, SAVESTR:ENEMY_ID, CHARA_ID)
CALL MILK_ADJUST(CHARA_ID, 0)
