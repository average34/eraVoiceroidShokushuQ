		TFLAG:90 = 50
		;ダメージは中毒の2乗・肌感度に比例
		LOCAL:1 = ABL:(ARG:1):14 * ABL:(ARG:1):14 * CALC_SENSITIVITY(ARG:1, TFLAG:63, 100) / (1 + RAND:4)
		;淫乱持ちは最大MPの割合でダメージ増加
		SIF TALENT:(TFLAG:54):74 == 1
			LOCAL:1 = LOCAL:1 * (MAXBASE:(TFLAG:54):MP / (1000 + RAND:500))
		;触手服かCP33％以下だと二倍
		PERCENT = BASE:(ARG:1):CP * 100 / MAXBASE:(ARG:1):CP
		SIF CFLAG:(ARG:1):37 || PERCENT <= 33
			LOCAL:1 = LOCAL:1 * 2
		CALL PRINT_MESSAGE(ARG:1, 500, 0, CALLNAME:(ARG:1), "")
		CALL DAMAGE_COMMON(ARG:1, 2, LOCAL:1 + RAND:600, 50)
	ENDIF
	
