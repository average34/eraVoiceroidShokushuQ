#DIM PERCENT

	;精液中毒上昇
	CALL ADD_ABL_EXP(14, TFLAG:54, SQRT(TFLAG:64))
	;汚れる
	BASE:(TFLAG:54):5 += 10
	
	;精液中毒1以上だと精液に触れただけで肌ダメージ
	IF ABL:(TFLAG:54):14 >= 1
		TFLAG:52 = 0
		TFLAG:55 = 3
