TFLAG:60 = 1

TFLAG:57 = DA:(ARG:0):5

TFLAG:58 = 50
TFLAG:61 = 40

TFLAG:64 = 1
TFLAG:65 = 0

TFLAG:59 = 0
TFLAG:91 = 0

CALL ACTION_FILTER(-1, 5, 573, CALLNAME:(TFLAG:54), SAVESTR:(ARG:0), TFLAG:54, TFLAG:65)


@EXTRA_CAPTURE_573(ENEMY_ID, CHARA_ID)
#DIM ENEMY_ID
#DIM CHARA_ID
#DIM PERCENT

;精液中毒上昇
CALL ADD_ABL_EXP(14, CHARA_ID, 1)

;汚れる
BASE:CHARA_ID:5 += 10

;精液中毒1以上だと精液に触れただけで肌ダメージ
IF ABL:CHARA_ID:14 >= 1
	TFLAG:52 = 0
	TFLAG:55 = 3
	TFLAG:63 = 5
	TFLAG:65 = 0
	;ダメージは中毒の2乗・肌感度に比例
	LOCAL:1 = ABL:CHARA_ID:14 * ABL:CHARA_ID:14 * CALC_SENSITIVITY(CHARA_ID, TFLAG:63, 100) / 10
	;淫乱持ちは最大MPの割合でダメージ増加
	SIF TALENT:CHARA_ID:74 == 1
		LOCAL:1 = LOCAL:1 * (MAXBASE:CHARA_ID:MP / (1000 + RAND:500))
	;触手服かCP33％以下だと二倍
	PERCENT = BASE:CHARA_ID:CP * 100 / MAXBASE:CHARA_ID:CP
	SIF CFLAG:CHARA_ID:37 || PERCENT <= 33
		LOCAL:1 = LOCAL:1 * 2
	CALL PRINT_MESSAGE(CHARA_ID, 500, 0, CALLNAME:CHARA_ID, "")
	CALL DAMAGE_COMMON(CHARA_ID, 2, LOCAL:1 + RAND:600, 50)
ENDIF
