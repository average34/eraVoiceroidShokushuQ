@EXTRA_ACTION_1308(ENEMY_ID, CHARA_ID)
#DIM ENEMY_ID
#DIM CHARA_ID
;LOCAL
;1	命中率
;2　カウント数

CALL PRINT_MESSAGE(CHARA_ID, 17, TFLAG:99, CALLNAME:CHARA_ID, SAVESTR:ENEMY_ID, CHARA_ID)

;援軍を呼ぶ
LOCAL:2 = 0

FOR LOCAL:0, 5, FLAG:1
	IF DA:(LOCAL:0):10 == 0 && LOCAL:2 < 1 && FLAG:1 > 10 && RAND:2 == 0

		LOCAL:2 += 1

		DA:(LOCAL:0):4 = FLAG:5
		DA:(LOCAL:0):12 = FLAG:5
		DA:(LOCAL:0):13 = FLAG:5

	ENDIF
NEXT
