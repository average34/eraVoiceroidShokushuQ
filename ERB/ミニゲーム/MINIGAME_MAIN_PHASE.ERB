;各フェイズのメイン処理
@MINIGAME_MAIN_PHASE
;LOCAL
;0	LOOP

;誰なのか当てるためにチェック回答
FOR LOCAL:0, 2, CHARANUM
	IF FLAG:4 == 0
		CALL MINIGAME_TALK_0(LOCAL:0)
	ELSEIF FLAG:4 == 1
		CALL MINIGAME_TALK_1(LOCAL:0)
	ELSEIF FLAG:4 == 2
		CALL MINIGAME_TALK_2(LOCAL:0)
	ELSEIF FLAG:4 == 3
		CALL MINIGAME_TALK_3(LOCAL:0)
	ENDIF
NEXT
CALL MINIGAME_END_PHASE
;SHOPへ戻る
JUMP MINIGAME_SHOP
