;フェイズごとの【覚】の消耗チェック
;ARG:0	対象キャラ
@CHECK_SATORIDESCARTES(ARG:0)
;LOCAL
;0	LOOP
;1	メッセージ表示フラグ

SIF TALENT:(ARG:0):94 == 0
	RETURN

SIF CFLAG:(ARG:0):29
	RETURN

SIF FLAG:(50 + (CFLAG:(ARG:0):4)) < 70
	RETURN

;主人公と場所が違うかチェック
IF CFLAG:(ARG:0):4 != CFLAG:1:4
	LOCAL:1 = 0
ELSE
	LOCAL:1 = 1
ENDIF

IF LOCAL:1
	IF FLAG:(50 + (CFLAG:(ARG:0):4)) < 100
		CALL PRINT_MESSAGE(ARG:0, 169, 0, CALLNAME:(ARG:0), "")
	ELSE
		CALL PRINT_MESSAGE(ARG:0, 169, 1, CALLNAME:(ARG:0), "")
	ENDIF
ENDIF

IF FLAG:(50 + (CFLAG:(ARG:0):4)) < 100
	BASE:(ARG:0):1 -= FLAG:(50 + (CFLAG:(ARG:0):4)) / 2
ELSE
	BASE:(ARG:0):1 -= FLAG:(50 + (CFLAG:(ARG:0):4))
ENDIF

SIF BASE:(ARG:0):1 < 1
	BASE:(ARG:0):1 = 1

