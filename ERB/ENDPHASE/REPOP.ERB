;敵の数取得
@COUNT_ENEMY(ARG:0)
;LOCAL
;0	LOOP
;1	バイオプラントの数

LOCAL:1 = 0

FOR LOCAL:0, 1, FLAG:1
	SIF DA:(LOCAL:0):0 == ARG:0
		LOCAL:1 += 1
NEXT

RETURN LOCAL:1

