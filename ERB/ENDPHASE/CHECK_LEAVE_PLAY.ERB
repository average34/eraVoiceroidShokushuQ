;フェイズごとの放置プレイチェック
;ARG:0	対象キャラ
@LEAVE_PLAY(ARG:0)
;LOCAL
;0	LOOP
;1	メッセージ表示フラグ
;2	NFダメージ計算

SIF (CFLAG:(ARG:0):29 == 0 && CFLAG:(ARG:0):504 == 0) || ARG:0 == FLAG:10 || ARG:0 == FLAG:11
	CFLAG:(ARG:0):505 = 0

SIF CFLAG:(ARG:0):505 == 0
	RETURN
;リタイアしてるなら黙る
SIF CFLAG:(ARG:0):2
	RETURN

LOCAL:1 = 0


;主人公と場所が違うかチェック
SIF CFLAG:(ARG:0):4 == CFLAG:1:4
	LOCAL:1 = 1

IF LOCAL:1
	IF (CFLAG:(ARG:0):505 & 1)
		CALL PRINT_MESSAGE(1, 462, 0, CALLNAME:(ARG:0), "")
		CALL PRINT_MESSAGE(ARG:0, 463, 0, CALLNAME:(ARG:0), "")
		TFLAG:63 = 3
		CALL DAMAGE_COMMON(ARG:0, 2, 8000 + RAND:4001, 100)
	ENDIF
	IF (CFLAG:(ARG:0):505 & 2)
		TRYCALL CALC_NIPPLE_FUCK(ARG:0, 5)
		IF RESULT:0 == 1
			CALL PRINT_MESSAGE(1, 462, 5, CALLNAME:(ARG:0), "")
			CALL PRINT_MESSAGE(ARG:0, 463, 5, CALLNAME:(ARG:0), "")
			SIF TALENT:(ARG:0):130 >= 3
				CFLAG:(ARG:0):506 += TALENT:(ARG:0):130 * 3
			CFLAG:(ARG:0):512 += 1
			TFLAG:63 = 1
			;素質LVまたは乳姦回数によるダメージ補正
			LOCAL:2 = 8000 + CALC_NF_DAMAGE(ARG:0, 4)
			CALL DAMAGE_COMMON(ARG:0, 2, LOCAL:2 + RAND:4001 + RAND:4001, 100)
			;母乳体質+
			IF GET_BUST(ARG:0) >= 2
				CALL MILK_COME(ARG:0, 1, 2)
				CALL PRINT_MESSAGE(ARG:0, 441, 26, CALLNAME:(ARG:0), "")
				CALL MILK_ADJUST(ARG:0, 0)
			ENDIF
			TRYCALL CHECK_NIPPLE_EXTEND(ARG:0)
		ELSE
			CALL PRINT_MESSAGE(1, 462, 1, CALLNAME:(ARG:0), "")
			CALL PRINT_MESSAGE(ARG:0, 463, 1, CALLNAME:(ARG:0), "")
			TFLAG:63 = 1
			CALL DAMAGE_COMMON(ARG:0, 2, 8000 + RAND:4001, 100)
		ENDIF
	ENDIF
	IF (CFLAG:(ARG:0):505 & 4)
		CALL PRINT_MESSAGE(1, 462, 2, CALLNAME:(ARG:0), "")
		CALL PRINT_MESSAGE(ARG:0, 463, 2, CALLNAME:(ARG:0), "")
		TFLAG:63 = 0
		CALL DAMAGE_COMMON(ARG:0, 2, 8000 + RAND:4001, 100)
	ENDIF
	IF (CFLAG:(ARG:0):505 & 8)
		CALL PRINT_MESSAGE(1, 462, 3, CALLNAME:(ARG:0), "")
		CALL PRINT_MESSAGE(ARG:0, 463, 3, CALLNAME:(ARG:0), "")
		TFLAG:63 = 2
		CALL DAMAGE_COMMON(ARG:0, 2, 8000 + RAND:4001, 100)
	ENDIF
	IF (CFLAG:(ARG:0):505 & 16)
		CALL PRINT_MESSAGE(1, 462, 4, CALLNAME:(ARG:0), "")
		CALL PRINT_MESSAGE(ARG:0, 463, 4, CALLNAME:(ARG:0), "")
	ENDIF
	
ENDIF


