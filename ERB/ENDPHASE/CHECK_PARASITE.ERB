;フェイズごとの寄生チェック
;ARG:0	対象キャラ
@CHECK_PARASITE(ARG:0)
#DIM MP_DECREASE_RATE
;LOCAL
;0	LOOP
;1	メッセージ表示フラグ
;2	触手が襲う部位
;3	ダメージ

SIF CFLAG:(ARG:0):22 <= 0 || CFLAG:(ARG:0):36
	RETURN
;リタイアしてるなら黙る
SIF CFLAG:(ARG:0):2
	RETURN

;主人公と場所が違うかチェック
IF CFLAG:(ARG:0):4 != CFLAG:1:4
	LOCAL:1 = 0
ELSE
	LOCAL:1 = 1
ENDIF
;寄生封じの札
IF CFLAG:(ARG:0):153 >= 3
	CFLAG:(ARG:0):22 = 0
	CFLAG:(ARG:0):23 = 0
	CFLAG:(ARG:0):153 -= 3
	SIF LOCAL:1
		PRINTFORMW 寄生封じの札が体内の異物を浄化したようだ
	RETURN
ENDIF
CFLAG:(ARG:0):23 -= 1

IF LOCAL:1
	IF CFLAG:(ARG:0):23 >= 1
		CALL PRINT_MESSAGE(ARG:0, 125, CFLAG:(ARG:0):23, CALLNAME:(ARG:0), "")
		FOR LOCAL:0, 0, 3
			SIF GET_MEMBER(LOCAL:0) != ARG:0
				CALL PRINT_MESSAGE(GET_MEMBER(LOCAL:0), 145, CFLAG:(ARG:0):23, CALLNAME:(ARG:0), "", ARG:0)
		NEXT
	ENDIF
ENDIF
IF CFLAG:(ARG:0):23 <= 0
	;ウォッチャーのチェック
	FOR LOCAL:5 , 1, FLAG:1
		;ウォッチャーだとフラグ
		IF DA:(LOCAL:5):0 == 97
			DA:(LOCAL:5):4 = CFLAG:(ARG:0):4
			LOCAL:11 += 1
			BREAK
		ENDIF
	NEXT

	IF LOCAL:1 || LOCAL:11
		;ウォッチャーがいる場合ライブ中継
		IF LOCAL:11
			CALL PRINT_MESSAGE(ARG:0, 127, 4, CALLNAME:(ARG:0), "", LOCAL:2)
		ENDIF
		
		CALL PRINT_MESSAGE(ARG:0, 127, 0, CALLNAME:(ARG:0), "")
		
		IF LOCAL:1
			FOR LOCAL:0, 0, 3
				SIF GET_MEMBER(LOCAL:0) != ARG:0
					CALL PRINT_MESSAGE(GET_MEMBER(LOCAL:0), 147, 0, CALLNAME:(ARG:0), "", ARG:0)
			NEXT
		ENDIF
		;汚染度が高いと出産の隙を触手が狙う
		IF (FLAG:(FLAG:5 + 50) + RAND:70) >= 100
			CALL PRINT_MESSAGE(ARG:0, 127, 3, CALLNAME:(ARG:0), "")
			FOR LOCAL:0, 0, 3
				LOCAL:2 = RAND:4
				LOCAL:3 = 300 + RAND:401
				CALL ADD_ABL_EXP(LOCAL:2 + 6, ARG:0, 100 + RAND:100)
				CALL DOUKA_EFFECT_4(ARG)
				IF RESULT > 0
					MP_DECREASE_RATE = RESULT:1
				ELSE
					MP_DECREASE_RATE = 300
				ENDIF
				TFLAG:63 = LOCAL:2
				CALL DAMAGE_COMMON(ARG:0, 2, LOCAL:3, MP_DECREASE_RATE, 1)
				TFLAG:63 = 0
			NEXT
		ENDIF
		CALL LOST_VIRGIN(ARG:0, 2, 6)
		CALL EXTASY(ARG:0, 3, 400, 3000)
		CALL PRINT_MESSAGE(ARG:0, 127, 1, CALLNAME:(ARG:0), "")
		;地の文に合わせて【母乳体質】付与
		SIF TALENT:(ARG:0):130 == 0
			TALENT:(ARG:0):130 = 1
		FOR LOCAL:0, 0, 3
			SIF GET_MEMBER(LOCAL:0) != ARG:0
				CALL PRINT_MESSAGE(GET_MEMBER(LOCAL:0), 147, 1, CALLNAME:(ARG:0), "", ARG:0)
		NEXT
		CALL EXTASY(ARG:0, 1, 400, 2000)
		SIF TALENT:(ARG:0):159 == 1
			CALL EXTASY(ARG:0, 1, 400, 2000)
		;触手スーツ暴走
		IF CFLAG:(ARG:0):40 == 1
			PRINTFORMW さらに、衣服に擬態していた触手が幼体の為に乳房が歪むほど揉み搾り始め、凄まじい勢いで母乳が噴出する
			CALL EXTASY(ARG:0, 1, 400, 100)
			CALL EXTASY(ARG:0, 1, 400, 100)
		ENDIF
		;暴走終わり
		CALL ADD_ABL_EXP(11, ARG:0, 100)
		RESULT:0 = 0
		;拡張乳腺4以上＆爆乳以上＆母乳製造装置ならNFチェック
		SIF TALENT:(ARG:0):162 >= 4 && GET_BUST(ARG:0) >= 2 && TALENT:(ARG:0):130 >= 3
			TRYCALL CALC_NIPPLE_FUCK(ARG:0, 7)
		;NFならメッセージとダメージ追加
		IF RESULT:0 == 1
			CALL PRINT_MESSAGE(ARG:0, 127, 5, CALLNAME:(ARG:0), "")
			CALL EXTASY(ARG:0, 1, 400, 2000 + CALC_NF_DAMAGE(ARG:0, 8))
			CFLAG:(ARG:0):512 += 1
		ENDIF
		CALL PRINT_MESSAGE(ARG:0, 127, 2, CALLNAME:(ARG:0), "")
		FOR LOCAL:0, 0, 3
			SIF GET_MEMBER(LOCAL:0) != ARG:0
				CALL PRINT_MESSAGE(GET_MEMBER(LOCAL:0), 147, 2, CALLNAME:(ARG:0), "", ARG:0)
		NEXT
	ELSE
		;非表示の場合でも、MP減少などの処理は入れておく
		FLAG:20 = 1
		IF (FLAG:(FLAG:5 + 50) + RAND:70) >= 100
			FOR LOCAL:0, 0, 3
				LOCAL:2 = RAND:4
				LOCAL:3 = 300 + RAND:401
				CALL ADD_ABL_EXP(LOCAL:2 + 6, ARG:0, 100 + RAND:100)
				CALL DOUKA_EFFECT_4(ARG)
				IF RESULT > 0
					MP_DECREASE_RATE = RESULT:1
				ELSE
					MP_DECREASE_RATE = 300
				ENDIF
				TFLAG:63 = LOCAL:2
				CALL DAMAGE_COMMON(ARG:0, 2, LOCAL:3, MP_DECREASE_RATE, 1)
				TFLAG:63 = 0
			NEXT
		ENDIF
		MP_DECREASE_RATE = 3000 * (50 + FLAG:4 * 10) / 100
		CALL LOST_VIRGIN(ARG:0, 2, 6)
		CALL EXTASY(ARG:0, 3, 400, MP_DECREASE_RATE)
		;こっちでも【母乳体質】付与
		SIF TALENT:(ARG:0):130 == 0
			TALENT:(ARG:0):130 = 1
		MP_DECREASE_RATE = 2000 * (50 + FLAG:4 * 10) / 100
		CALL EXTASY(ARG:0, 1, 400, MP_DECREASE_RATE)
		CALL ADD_ABL_EXP(11, ARG:0, 100)
		FLAG:20 = 0
	ENDIF
ENDIF

IF CFLAG:(ARG:0):23 <= 0
	;生まれた場合の共通処理
	CALL ADD_FEELING(ARG:0, -10)
	BASE:(ARG:0):0 = 0
	;◆触手服の時は全裸にならない　触手包帯の時で服装が包帯でも全裸にならない
		IF CFLAG:(ARG:0):40 == 0 && (CFLAG:(ARG:0):46 == 0 || CFLAG:(ARG:0):501 != 100)
			BASE:(ARG:0):3 = 0
			SIF CFLAG:(ARG:0):44 >= 1
				CFLAG:(ARG:0):44 = 0
		ENDIF
	;◆◆
	
	;貞操帯破壊
	SIF CFLAG:(ARG:0):47 == 1
		CFLAG:(ARG:0):47 = 0

	BASE:(ARG:0):4 = 0
	CALL CREATE_ENEMY(CFLAG:(ARG:0):22, 0, FLAG:5 , ARG:0)

	;ED用
	IF EXP:(ARG:0):22 == 0
		CALL ADD_HISTORY(DAY, ARG:0, CFLAG:(ARG:0):22, 3)
	ENDIF
	;出産回数追加
	EXP:(ARG:0):22 += 1

	CFLAG:(ARG:0):22 = 0
	CFLAG:(ARG:0):23 = 0
	;出産時豊乳化
	IF FLAG:521 == 1
		;豊乳化OFF設定なら無効
	ELSEIF FLAG:521 == 3 && TALENT:(ARG:0):122 > 0
		;男の娘のみOFF設定かつ男の娘なら無効
	ELSE
		;絶壁
		IF GET_BUST(ARG:0) <= -2
			SIF LOCAL:1
				CALL PRINT_MESSAGE(ARG:0, 427, 5, CALLNAME:(ARG:0), "")
		;貧乳
		ELSEIF GET_BUST(ARG:0) == -1
			SIF LOCAL:1
				CALL PRINT_MESSAGE(ARG:0, 427, 0, CALLNAME:(ARG:0), "")
		;普通
		ELSEIF GET_BUST(ARG:0) == 0
			SIF LOCAL:1
				CALL PRINT_MESSAGE(ARG:0, 427, 1, CALLNAME:(ARG:0), "")
		;巨乳
		ELSEIF GET_BUST(ARG:0) == 1
			SIF LOCAL:1
				CALL PRINT_MESSAGE(ARG:0, 427, 2, CALLNAME:(ARG:0), "")
		;爆乳
		ELSEIF GET_BUST(ARG:0) == 2
			IF LOCAL:1
				CALL PRINT_MESSAGE(ARG:0, 427, 3, CALLNAME:(ARG:0), "")
			ENDIF
		;超乳
		ELSEIF GET_BUST(ARG:0) >= 3
			IF LOCAL:1
				CALL PRINT_MESSAGE(ARG:0, 427, 6, CALLNAME:(ARG:0), "")
			ENDIF
		ENDIF
		CALL ADD_BUST(ARG:0, 1, 2)
	ENDIF
	
	CALL MILK_COME(ARG:0, 1, 2)
	CALL MILK_ADJUST(ARG:0, 0)
	
ENDIF

