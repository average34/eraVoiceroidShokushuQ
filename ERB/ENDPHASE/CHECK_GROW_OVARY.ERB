;フェイズごとの卵巣成長チェック
;ARG:0	対象キャラ
@CHECK_GROW_OVARY(ARG:0)
;LOCAL
;0	LOOP
;1	メッセージ表示フラグ

;すでに苗床卵巣まで成長していたら無効 卵巣パッチOFFでも無効
IF TALENT:(ARG:0):137 == 3
	RETURN
ELSEIF FLAG:535 == 0
	RETURN
ENDIF
;リタイアしてるなら黙る
SIF CFLAG:(ARG:0):2
	RETURN


LOCAL:1 = 0


;主人公と場所が違うかチェック
SIF CFLAG:(ARG:0):4 == CFLAG:1:4
	LOCAL:1 = 1


;メッセージ表示処理
IF LOCAL:1
	IF TALENT:(ARG:0):137 == 2 && EXP:(ARG:0):22 >= 10 && ABL:(ARG:0):11 >= 3 && CFLAG:(ARG:0):511 == 0
		CALL PRINT_MESSAGE(ARG:0, 512,3, CALLNAME:(ARG:0), "")
	ELSEIF TALENT:(ARG:0):137 == 1 && EXP:(ARG:0):22 >= 5 && ABL:(ARG:0):11 >= 3 && CFLAG:(ARG:0):510 == 0
		CALL PRINT_MESSAGE(ARG:0, 512,2, CALLNAME:(ARG:0), "")
	ELSEIF TALENT:(ARG:0):137 == 0 && EXP:(ARG:0):22 >= 3 && ABL:(ARG:0):11 >= 2 && CFLAG:(ARG:0):509 == 0
		CALL PRINT_MESSAGE(ARG:0, 512,1, CALLNAME:(ARG:0), "")
	ELSEIF TALENT:(ARG:0):137 == -1 && EXP:(ARG:0):20 >= 50 && EXP:(ARG:0):14 >= 50 && CFLAG:(ARG:0):508 == 0
		CALL PRINT_MESSAGE(ARG:0, 512,0, CALLNAME:(ARG:0), "")
	;ELSE
	;	CALL PRINT_MESSAGE(ARG:0, 512,-1, CALLNAME:(ARG:0), "")
	ENDIF
	
ENDIF

;素質成長処理
IF TALENT:(ARG:0):137 == 2 && EXP:(ARG:0):22 >= 10 && ABL:(ARG:0):11 >= 3
	TALENT:(ARG:0):137 = 3
	CFLAG:(ARG:0):511 = 1
	CFLAG:(ARG:0):510 = 0
	CFLAG:(ARG:0):509 = 0
	CFLAG:(ARG:0):508 = 0
ELSEIF TALENT:(ARG:0):137 == 1 && EXP:(ARG:0):22 >= 5 && ABL:(ARG:0):11 >= 3
	TALENT:(ARG:0):137 = 2
	CFLAG:(ARG:0):511 = 0
	CFLAG:(ARG:0):510 = 1
	CFLAG:(ARG:0):509 = 0
	CFLAG:(ARG:0):508 = 0
ELSEIF TALENT:(ARG:0):137 == 0 && EXP:(ARG:0):22 >= 3 && ABL:(ARG:0):11 >= 2
	TALENT:(ARG:0):137 = 1
	CFLAG:(ARG:0):511 = 0
	CFLAG:(ARG:0):510 = 0
	CFLAG:(ARG:0):509 = 1
	CFLAG:(ARG:0):508 = 0
ELSEIF TALENT:(ARG:0):137 == -1 && EXP:(ARG:0):20 >= 50 && EXP:(ARG:0):14 >= 50
	TALENT:(ARG:0):137 = 0
	CFLAG:(ARG:0):511 = 0
	CFLAG:(ARG:0):510 = 0
	CFLAG:(ARG:0):509 = 0
	CFLAG:(ARG:0):508 = 1
ENDIF

