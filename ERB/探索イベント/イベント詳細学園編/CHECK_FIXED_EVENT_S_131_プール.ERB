;固定イベント
;RETURN	0:失敗した　1:成功した　2:以後のイベントスキップ
@CHECK_FIXED_EVENT_S_131
;LOCAL
;0	LOOP
;1	目標値
;2	達成値
;3	戻り値

LOCAL:3 = 0

;目標値（イベント難易度）決定
LOCAL:1 = 30


;達成値決定
CALL GET_SEARCH_RATE
LOCAL:2 = RESULT


IF LOCAL:2 >= LOCAL:1
	;何度も使える休憩ポイント、ただし汚染度が高いと罠に変わる
	CALL ADD_ABL_EXP_PT(0, 500)
	PRINTFORML プールが使えるようだ。休んでいきますか？
	CALL ASK_YN
	IF RESULT == 0
		;汚染度80以上で確定、汚染度50以上で確率の罠化
		IF FLAG:(50 + FLAG:5) >= 50 && (FLAG:(50 + FLAG:5) >= RAND:100 || FLAG:(50 + FLAG:5) >= 80)
			IF RAND:2
				PRINTFORML %CALLNAME:1%%TACHI()%はプールで遊ぼうとした……
				PRINTFORML しかし、プールの水はスライム化しており%CALLNAME:1%%TACHI()%に襲いかかった！
				
				CALL ADD_ABL_EXP(5, 1, 1000 + RAND:(ABL:1:5 * 500 + 1))
				CALL PRINT_MESSAGE(1, 200, 131, CALLNAME:1, "", 2)
				LOCAL:5 = 6 + RAND:4
				FOR LOCAL:0, 0, LOCAL:5
					LOCAL:6 = RAND:4
					IF LOCAL:6 == 3
						CALL LOST_VIRGIN(1, 1, 4)
					ENDIF
					CALL EXTASY(1, LOCAL:6, RAND:50, 200)
				NEXT
				CALL WAIT_AUTOMODE(400, 0)
				
				IF FLAG:10
					CALL ADD_ABL_EXP(5, FLAG:10, 1000 + RAND:(ABL:(FLAG:10):5 * 500 + 1))
					CALL PRINT_MESSAGE(FLAG:10, 200, 131, CALLNAME:1, "", 2)
					LOCAL:5 = 6 + RAND:4
					FOR LOCAL:0, 0, LOCAL:5
						LOCAL:6 = RAND:4
						IF LOCAL:6 == 3
							CALL LOST_VIRGIN(FLAG:10, 1, 4)
						ENDIF
						CALL EXTASY(FLAG:10, LOCAL:6, RAND:50, 200)
					NEXT
					CALL WAIT_AUTOMODE(400, 0)
				ENDIF
				IF FLAG:11
					CALL ADD_ABL_EXP(5, FLAG:11, 1000 + RAND:(ABL:(FLAG:11):5 * 500 + 1))
					CALL PRINT_MESSAGE(FLAG:11, 200, 131, CALLNAME:1, "", 2)
					LOCAL:5 = 6 + RAND:4
					FOR LOCAL:0, 0, LOCAL:5
						LOCAL:6 = RAND:4
						IF LOCAL:6 == 3
							CALL LOST_VIRGIN(FLAG:11, 1, 4)
						ENDIF
						CALL EXTASY(FLAG:11, LOCAL:6, RAND:50, 200)
					NEXT
					CALL WAIT_AUTOMODE(400, 0)
				ENDIF
				PRINTFORML %CALLNAME:1%%TACHI()%はへとへとになりながらもプールを後にした……
			ELSE
				PRINTFORML %CALLNAME:1%%TACHI()%はプールで遊ぼびだした！
				PRINTFORML しかし、発情が止まらなくなっていく……
				PRINTFORML どうやらプールの水が媚薬になっていたらしい……
				
				CFLAG:1:28 += 1 + RAND:3
				CFLAG:(FLAG:10):28 += 1 + RAND:3
				CFLAG:(FLAG:11):28 += 1 + RAND:3
				
				CALL RANDOM_MASTURBATION(1, CALLNAME:1)
				CALL RANDOM_MASTURBATION((FLAG:10), CALLNAME:(FLAG:10))
				CALL RANDOM_MASTURBATION((FLAG:11), CALLNAME:(FLAG:11))
				PRINTFORML %CALLNAME:1%%TACHI()%は気まずくなりながらもプールを後にした……
			ENDIF
		ELSE
			;HPよりMP回復多め
			PRINTFORML %CALLNAME:1%%TACHI()%はプールで遊んだ……
			PRINTFORML リラックスできたようだ！
			PRINTFORML HP・MP・EPが回復し汚れが落ちた！
			CALL PRINT_MESSAGE(1, 200, 131, CALLNAME:1, "")
			CALL PRINT_MESSAGE(FLAG:10, 200, 131, CALLNAME:1, "")
			CALL PRINT_MESSAGE(FLAG:11, 200, 131, CALLNAME:1, "")
			BASE:1:0 = MIN(MAXBASE:1:0, BASE:1:0 + MAXBASE:1:0 / 16)
			BASE:1:1 = MIN(MAXBASE:1:1, BASE:1:1 + MAXBASE:1:1 / 3)
			BASE:1:2 = MAXBASE:1:2
			BASE:1:5 = 0
			BASE:1:6 = 0
			
			IF FLAG:10
				BASE:(FLAG:10):0 = MIN(MAXBASE:(FLAG:10):0, BASE:(FLAG:10):0 + MAXBASE:(FLAG:10):0 / 16)
				BASE:(FLAG:10):1 = MIN(MAXBASE:(FLAG:10):1, BASE:(FLAG:10):1 + MAXBASE:(FLAG:10):1 / 3)
				BASE:(FLAG:10):2 = MAXBASE:(FLAG:10):2
				BASE:(FLAG:10):5 = 0
				BASE:(FLAG:10):6 = 0
				
			ENDIF
			IF FLAG:11
				BASE:(FLAG:11):0 = MIN(MAXBASE:(FLAG:11):0, BASE:(FLAG:11):0 + MAXBASE:(FLAG:11):0 / 16)
				BASE:(FLAG:11):1 = MIN(MAXBASE:(FLAG:11):1, BASE:(FLAG:11):1 + MAXBASE:(FLAG:11):1 / 3)
				BASE:(FLAG:11):2 = MAXBASE:(FLAG:11):2
				BASE:(FLAG:11):5 = 0
				BASE:(FLAG:11):6 = 0
				
			ENDIF
			CALL WAIT_AUTOMODE(400, 0)
		ENDIF
	ELSE
		CALL PRINT_MESSAGE(1, 200, 131, CALLNAME:1, "", 1)
		CALL PRINT_MESSAGE(FLAG:10, 200, 131, CALLNAME:1, "", 1)
		CALL PRINT_MESSAGE(FLAG:11, 200, 131, CALLNAME:1, "", 1)
	ENDIF
	LOCAL:3 = 1
ELSE
	;見つからなかった場合（通常は何もしない）
ENDIF

RETURN LOCAL:3

