;固定イベント
;RETURN	0:失敗した　1:成功した　2:以後のイベントスキップ
@CHECK_FIXED_EVENT_S_101
;LOCAL
;0	LOOP
;1	目標値
;2	達成値
;3	戻り値
#DIM ITEM_NUMBER

LOCAL:3 = 0

;目標値（イベント難易度）決定
LOCAL:1 = 0


;達成値決定
CALL GET_SEARCH_RATE
LOCAL:2 = RESULT


IF LOCAL:2 >= LOCAL:1
	;一度きりのイベントなので、成功したら削除
	FLAG:100 = 0
	
	CALL PRINT_MESSAGE(1, 113, 10, CALLNAME:1, ITEMNAME:10)
	CALL PRINT_MESSAGE(FLAG:10, 113, 10, CALLNAME:1, ITEMNAME:10)
	CALL PRINT_MESSAGE(FLAG:11, 113, 10, CALLNAME:1, ITEMNAME:10)
	CALL ADD_ABL_EXP_PT(0, 500)
	
	ITEM_NUMBER = RAND:8 + 1
	
	CALL ADD_ITEM(ITEM_NUMBER, 1, 1)
	WAIT
	LOCAL:3 = 1
ELSE
	;見つからなかった場合（通常は何もしない）
ENDIF

RETURN LOCAL:3

