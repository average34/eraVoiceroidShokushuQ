;探索の達成値取得
@GET_SEARCH_RATE
;RAND:(100 + MAXLV*40 + TOTAL*15)  TL:23 で+10  が基本　これ以外の値を使う場合、各自で計算
;ソロだと275、以降ひとり増えるごとに+55が最大値

LOCAL:4 = 0
LOCAL:5 = ABL:1:0
IF TALENT:1:23
	LOCAL:4 += 10
ENDIF
IF FLAG:10
	LOCAL:5 += ABL:(FLAG:10):0
	IF TALENT:(FLAG:10):23
		LOCAL:4 += 10
	ENDIF
ENDIF
IF FLAG:11
	LOCAL:5 += ABL:(FLAG:11):0
	IF TALENT:(FLAG:11):23
		LOCAL:4 += 10
	ENDIF
ENDIF
LOCAL:4 += RAND:(100 + GET_PT_MAX_ABL(0) * 40 + LOCAL:5 * 15)

RETURN LOCAL:4



;探索中のPT危機回避達成値取得
@GET_SEARCH_RATE_2
;RAND:(100 + MAXLV*20 + TOTAL*5)

LOCAL:4 = 0
LOCAL:5 = ABL:1:5
IF FLAG:10
	LOCAL:5 += ABL:(FLAG:10):5
ENDIF
IF FLAG:11
	LOCAL:5 += ABL:(FLAG:11):5
ENDIF
LOCAL:4 += RAND:(100 + GET_PT_MAX_ABL(5) * 20 + LOCAL:5 * 5)

RETURN LOCAL:4


