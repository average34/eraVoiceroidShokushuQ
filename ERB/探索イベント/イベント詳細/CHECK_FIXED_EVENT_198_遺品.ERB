;固定イベント
;RETURN	0:失敗した　1:成功した　2:以後のイベントスキップ
@CHECK_FIXED_EVENT_198
;LOCAL
;0	LOOP
;1	目標値
;2	達成値
;3	戻り値

LOCAL:3 = 0

;目標値（イベント難易度）決定
LOCAL:1 = 0


;達成値決定
CALL GET_SEARCH_RATE
LOCAL:2 = RESULT


IF LOCAL:2 >= LOCAL:1
	;一度きりのイベントなので、成功したら削除
	FLAG:198 = 0
	
	CALL PRINT_MESSAGE(1, 202, 8, CALLNAME:1, CALLNAME:8)
	CALL PRINT_MESSAGE(FLAG:10, 202, 8, CALLNAME:1, CALLNAME:8)
	CALL PRINT_MESSAGE(FLAG:11, 202, 8, CALLNAME:1, CALLNAME:8)
	CALL ADD_ABL_EXP_PT(0, 200)
	CALL ADD_ITEM(54, 1, 1)
	IF FLAG:AUTOMODE
		TWAIT FLAG:AUTOMODE * 500, 0
	ELSE
		WAIT
	ENDIF
	LOCAL:3 = 1
ELSE
	;見つからなかった場合（通常は何もしない）
ENDIF

RETURN LOCAL:3

