;遺品を見つけるパッチ
;CFLAG:41	遺品が落ちている場所。死んでなければ、または拾っていると0
;
;LOCAL
;0	ループ

@FIND_RELIC
LOCAL:0 = 0

FOR LOCAL:0, 0, CHARANUM
	IF CFLAG:(LOCAL:0):41 == FLAG:5
		;入れ子が深くなりすぎて見づらいのでメッセージは関数で
		CALL FIND_RELIC_MESSAGE(LOCAL:0)
		CFLAG:(LOCAL:0):41 = 0
		CALL ADD_HISTORY(DAY,, LOCAL:0, 11)
	ENDIF
NEXT

RETURN 0


