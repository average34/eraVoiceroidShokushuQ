;チュートリアル一覧表示
@SHOW_TUTORIAL_WIKI
;LOCAL
;0	ループ用
;

	DRAWLINE
	PRINTFORML どのチュートリアルを見ますか？
	FOR LOCAL:0, 1, 23
			PRINTFORM [{LOCAL:0,3}] %TUTORIAL_NAME(LOCAL:0),18,LEFT%
			LOCAL:1 += 1
			;2つ表示するごとに改行
			SIF (LOCAL:1 % 3) == 0 && LOCAL:1 > 0
				PRINTL  
	NEXT
	LOCAL:1 = 0
	PRINTL
	PRINTL [  0] キャンセル

	$INPUT_LOOP
	INPUT
	
	IF RESULT == 0
		RETURN
	ELSEIF RESULT > 0 && RESULT < 23
		DRAWLINE
		SETCOLOR 0xF2A0A1

		TRYCCALLFORM TUTORIAL_{RESULT-1}
		CATCH
			;該当するチュートリアルが未実装の場合、何もしない
			RESETCOLOR
			RETURN 0
		ENDCATCH

		RESETCOLOR
		CALL SHOW_TUTORIAL_WIKI
	ELSE
		CLEARLINE 1
		REUSELASTLINE 入力が不正です！
		GOTO INPUT_LOOP
	ENDIF


