;10	行削除用カウント1(計算用)
;11	行削除用カウント2(計算用)
;12	行削除用カウント3(項目の改行数)
;13	行削除用カウント4(計算用)
;14	行削除用カウント5(計算用)
;15	行削除用カウント6(詳細の改行数)

	$START
	REDRAW 0
	LOCAL:10 = LINECOUNT

	LOCAL:1 = 0
	DRAWLINE
	PRINTFORML どのペットの項目を見ますか？
	
	FOR LOCAL:0, 1, 23
		IF GROUPMATCH(LOCAL:0,1,8,17)
			SETCOLOR 0x60C0FF
			IF LOCAL:0 == 1
				PRINTFORML ■■ 概要
			ELSEIF LOCAL:0 == 8
				PRINTL
				PRINTFORML ■■ ステータス
			ELSEIF LOCAL:0 == 17
				PRINTL
				PRINTFORML ■■ ペットメニュー項目
			ENDIF
			RESETCOLOR
			LOCAL:1 = 0
		ENDIF
		PRINTFORM [{LOCAL:0,3}] %PETMENU_NAME(LOCAL:0),30,LEFT%
		LOCAL:1 += 1
		;2つ表示するごとに改行
		SIF (LOCAL:1 % 2) == 0 && LOCAL:1 > 0
			PRINTL
	NEXT
	PRINTL
	PRINTL
	PRINTL [  0] キャンセル

	$INPUT_LOOP
	INPUT

	LOCAL:11 = LINECOUNT
	;項目表示の改行数を記録
	LOCAL:12 = LOCAL:11 - LOCAL:10

	IF RESULT == 0
		REDRAW 1
		LOCAL:3 = 0
		RETURN
	ELSEIF RESULT > 0 && RESULT < 23
		;行削除(初回)
		IF LOCAL:3 == 0
			CLEARLINE LOCAL:12
		;行削除(2回目～)
		ELSEIF LOCAL:3 == 1 && LOCAL:2 != RESULT
			CLEARLINE LOCAL:15 + LOCAL:12 + 3
		;連打のログ流れ防止
		ELSEIF LOCAL:2 == RESULT
			CLEARLINE 1
			GOTO INPUT_LOOP
		ENDIF
		LOCAL:2 = RESULT
		DRAWLINE
		SETCOLOR 0x60C0FF
		PRINTFORML >> %PETMENU_NAME(RESULT),15,LEFT%
		RESETCOLOR
		LOCAL:13 = LINECOUNT
		CALL SHOW_PET_EXPLAIN_WIKI(RESULT)
		LOCAL:14 = LINECOUNT
		;説明表示の改行数を記録
		LOCAL:15 = LOCAL:14 - LOCAL:13
		PRINTL
		LOCAL:3 = 1
		GOTO START
	ELSE
		CLEARLINE 1
		REUSELASTLINE 入力が不正です！
		GOTO INPUT_LOOP
	ENDIF

