;体調・状態一覧表示
@SHOW_STATUS_WIKI
;LOCAL
;0	ループ用
;1	改行用
;2	直前に選択した番号
;3	体調・状態詳細を見た
;10	行削除用カウント1(計算用)
;11	行削除用カウント2(計算用)
;12	行削除用カウント3(項目の改行数)
;13	行削除用カウント4(計算用)
;14	行削除用カウント5(計算用)
;15	行削除用カウント6(詳細の改行数)

	$START
	REDRAW 0
	LOCAL:10 = LINECOUNT

	LOCAL:1 = 0
	DRAWLINE
	PRINTFORML どの項目を見ますか？
	
	FOR LOCAL:0 , 1 , 32
		PRINTFORM [{LOCAL:0,2}] %STATUS_NAME(LOCAL:0),14,LEFT%
		LOCAL:1 += 1
		;4つ表示するごとに改行
		SIF (LOCAL:1 % 4) == 0 && LOCAL:1 > 0
			PRINTL
	NEXT
	PRINTL
	PRINTL
	PRINTL [ 0] キャンセル


	$INPUT_LOOP
	INPUT

	LOCAL:11 = LINECOUNT
	;項目表示の改行数を記録
	LOCAL:12 = LOCAL:11 - LOCAL:10

	IF RESULT == 0
		REDRAW 1
		LOCAL:3 = 0
		RETURN
	ELSEIF RESULT > 0 && RESULT <= 32
		;行削除(初回)
		IF LOCAL:3 == 0
			CLEARLINE LOCAL:12
		;行削除(2回目～)
		ELSEIF LOCAL:3 == 1 && LOCAL:2 != RESULT
			CLEARLINE LOCAL:12 + LOCAL:15 + 3
		;連打のログ流れ防止
		ELSEIF LOCAL:2 == RESULT
			CLEARLINE 1
			GOTO INPUT_LOOP
		ENDIF
		LOCAL:2 = RESULT
		DRAWLINE
		SETCOLOR 0x60C0FF
		PRINTFORML >> %STATUS_NAME(RESULT)%
		RESETCOLOR
		LOCAL:13 = LINECOUNT
		CALL PRINT_MESSAGE(-1, 515, RESULT, CALLNAME:1, "")
		LOCAL:14 = LINECOUNT
		;説明表示の改行数を記録
		LOCAL:15 = LOCAL:14 - LOCAL:13
		PRINTFORML 
		LOCAL:3 = 1
		GOTO START
	ELSE
		CLEARLINE 1
		REUSELASTLINE 入力が不正です！
		GOTO INPUT_LOOP
	ENDIF



