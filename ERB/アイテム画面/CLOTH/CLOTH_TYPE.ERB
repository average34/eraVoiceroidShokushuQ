@GET_CLOTH_DATA_服装表示(服装ID, キャラID)
#DIM 服装ID
#DIM キャラID
#DIM CP率
	
	CALL GET_CLOTH_DATA_有効(服装ID)
	IF RESULT == 1
		CP率 = BASE:(キャラID):CP * 100 / MAXBASE:(キャラID):CP
		IF CP率 > 66 
			LOCAL = 10
		ELSEIF CP率 > 33
			LOCAL = 11
		ELSEIF CP率 > 0
			LOCAL = 12
		;足の装備が残っている時はここで変更
		ELSEIF CFLAG:(キャラID):500
			CFLAG:(キャラID):501 = 101
			LOCAL = 12
		ENDIF
		RESULTS = %""%
		CALLFORM CLOTH_DATA_{服装ID}(LOCAL,キャラID)
		IF RESULTS == ""
			CALL GET_CLOTH_DATA_名前(服装ID)
		ENDIF
		RETURN 1
	ELSE
		RESULTS = %""%
		RETURN -1
	ENDIF
	
