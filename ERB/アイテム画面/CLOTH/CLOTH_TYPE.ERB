		RETURN 1
	ELSE
		LOCALS:0 = [--] 
		LOCALS:1 = %"－－－－－", 25, LEFT%
		LOCALS:2 = %"--", 4, LEFT%
		SETCOLOR 0x333333
		PRINTFORM %LOCALS:0 + LOCALS:1 + LOCALS:2,40,LEFT%
		RESETCOLOR
		RETURN -1
	ENDIF

