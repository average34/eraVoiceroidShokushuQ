	SIF キャラID < 1 || キャラID >= CHARANUM
		RETURN -1

	VARSET ACTIVE
	FOR LCOUNT, 0, 100
		CALL GET_CLOTH_DATA_可不可(LCOUNT, キャラID)
		IF RESULT == 1
		
			ACTIVE:(LCOUNT) = 1
			PRINTFORM [{LCOUNT,2}] 
			
			CALL GET_CLOTH_DATA_名前(LCOUNT)
			PRINTFORM %RESULTS, 17, LEFT%　
			
			CALL GET_CLOTH_DATA_説明(LCOUNT)
			PRINTFORM %RESULTS%
			
			PRINTL
			;全部OFFのチェック用
			LOCAL:1 += 1
		ENDIF
	NEXT
	IF LOCAL:1 > 0
		$INPUT_LOOP_CLOTH
		INPUT
	
		IF RESULT >= 0 && RESULT <= 99 && ACTIVE:(RESULT) == 1
			RETURN RESULT
		ELSE
			GOTO INPUT_LOOP_CLOTH
		ENDIF
	ELSE
	;全OFFならメッセージのみ
		PRINTFORML どこにでもありそうな普通の服だ
	ENDIF

;=================================================
;着せ替えランダム選択
;RESULT:0 服装ID（0:いつもの　1:・・・）
;=================================================
@CLOTH_TYPE_SELECT_RAND(キャラID)
#DIM LCOUNT,3	;ループ用
#DIM キャラID
#DIM ACTIVE, 100	;項目の有効記憶用
;LOCAL:1 全OFFかのチェック

	SIF GET_CLOTH_CONFIG("動作") == 0
		RETURN -1

	VARSET ACTIVE
	LOCAL = 0
	FOR LCOUNT, 0, 100
		CALL GET_CLOTH_DATA_可不可(LCOUNT, キャラID)
		IF RESULT == 1
			ACTIVE:(LCOUNT) = 1
			LOCAL ++
			LOCAL:1 += 1
		ENDIF
	NEXT
	
	IF LOCAL:1 > 0
		FOR LCOUNT, 0, 100
			IF ACTIVE:(LCOUNT) == 1
				IF RAND:LOCAL == 0
					RETURN LCOUNT
				ENDIF
				LOCAL --
			ENDIF
		NEXT
	ELSEIF FLAG:5 == CFLAG:(キャラID):4 && (CFLAG:(キャラID):502 & 2) == 0 && FLAG:997 != 81
	;全OFFならメッセージのみ
		PRINTFORML どこにでもありそうな普通の服だ
	ENDIF
	
