@CLOTH_CONFIG_CLOTH_LIST_ボタン(服装ID)
#DIM 服装ID

	CALL GET_CLOTH_DATA_名前(服装ID)
	IF RESULT == 1
		LOCALS:0 = [{服装ID, 2}] 
