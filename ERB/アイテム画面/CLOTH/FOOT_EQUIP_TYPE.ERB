;服装データ取得
;≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡≡
;=================================================
;服装データ:有効
;RESULT:0 結果(1:有効 -1:無効)
;=================================================
@GET_FOOT_EQUIP_DATA_有効(ARG:0)
;ARG:0 服装ID
	IF GET_FOOT_EQUIP_CONFIG("服装",ARG:0)
		CALL GET_FOOT_EQUIP_DATA_名前(ARG:0)
		IF RESULT == 1
			RETURN 1
		ELSE
			RETURN -1
		ENDIF
	ELSE
		RETURN -1
	ENDIF
	
;=================================================
;服装データ:名前
;RESULT:0 結果(1:成功 -1:失敗)
;RESULTS:0 名前
;=================================================
@GET_FOOT_EQUIP_DATA_名前(ARG:0)
;ARG:0 服装ID
	RESULTS = %""%
	TRYCCALLFORM FOOT_EQUIP_DATA_{ARG:0}(0)
		IF RESULTS == ""
			RETURN -1
		ELSE
			RETURN 1
		ENDIF
	CATCH
		RETURN -1
	ENDCATCH

;=================================================
;服装データ:説明
;RESULT:0 結果(1:成功 -1:失敗)
;RESULTS:0 説明
;=================================================
@GET_FOOT_EQUIP_DATA_説明(ARG:0)
;ARG:0 服装ID
	
	CALL GET_FOOT_EQUIP_DATA_有効(ARG:0)
	IF RESULT == 1
		RESULTS = %""%
		CALLFORM FOOT_EQUIP_DATA_{ARG:0}(1)
		RETURN 1
	ELSE
		RESULTS = %""%
		RETURN -1
	ENDIF
	
;=================================================
;服装データ:選択可不可
;RESULT:0 結果(1:可 -1:不可)
;=================================================
@GET_FOOT_EQUIP_DATA_可不可(ARG:0, ARG:1)
;ARG:0 服装ID
;ARG:1 キャラID
	
	
	CALL GET_FOOT_EQUIP_DATA_有効(ARG:0)
	IF RESULT == 1
		CALLFORM FOOT_EQUIP_DATA_{ARG:0}(2,ARG:1)
		IF RESULT == 0
			RETURN 1
		ELSE
			RETURN -1
		ENDIF
	ELSE
		RETURN -1
	ENDIF
	
;=================================================
;服装データ:服装選択時地の文
;RESULT:0 結果(1:成功 -1:失敗)
;=================================================
@GET_FOOT_EQUIP_DATA_選択文(ARG:0, ARG:1)
;ARG:0 服装ID
;ARG:1 キャラID
	
	CALL GET_FOOT_EQUIP_DATA_有効(ARG:0)
	IF RESULT == 1
		CALLFORM FOOT_EQUIP_DATA_{ARG:0}(5,ARG:1)
		RETURN 1
	ELSE
		RETURN -1
	ENDIF
	
;=================================================
;服装データ:ステータス服装表示
;RESULT:0 結果(1:成功 -1:失敗)
;RESULTS:0 表示
;=================================================
@GET_FOOT_EQUIP_DATA_服装表示(ARG:0, ARG:1)
;ARG:0 服装ID
;ARG:1 キャラID
#DIM CP率
	
	CALL GET_FOOT_EQUIP_DATA_有効(ARG:0)
	IF RESULT == 1
		CP率 = BASE:(ARG:1):CP * 100 / MAXBASE:(ARG:1):CP
		IF CP率 > 66 
			LOCAL = 10
		ELSEIF CP率 > 33
			LOCAL = 11
		ELSE
			LOCAL = 12
		ENDIF
		RESULTS = %""%
		CALLFORM FOOT_EQUIP_DATA_{ARG:0}(LOCAL,ARG:1)
		IF RESULTS == ""
			CALL GET_FOOT_EQUIP_DATA_名前(ARG:0)
		ENDIF
		RETURN 1
	ELSE
		RESULTS = %""%
		RETURN -1
	ENDIF
	

