@FOOT_EQUIP_TYPE_2(ARG:1)
#DIM LCOUNT,3	;ループ用
;ARG:1 キャラID
	SIF GET_FOOT_EQUIP_CONFIG("動作") == 0
		RETURN -1
		
	SIF ARG:1 < 1 || ARG:1 >= CHARANUM
