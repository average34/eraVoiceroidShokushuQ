	ENDIF
	LOCAL = RESULT
	
	IF LOCAL >= 0
		CFLAG:(ARG:1):500 = LOCAL
	ENDIF

;=================================================
;着せ替え選択
;RESULT:0 ARG:0（0:いつもの　1:・・・）
;=================================================
@FOOT_EQUIP_TYPE_SELECT(ARG:1)
#DIM LCOUNT,3	;ループ用
#DIM ACTIVE, 100	;項目の有効記憶用
;ARG:1 キャラID
;LOCAL:1	全部OFFのチェック用
		
	SIF GET_FOOT_EQUIP_CONFIG("動作") == 0
		RETURN -1
		
	SIF ARG:1 < 1 || ARG:1 >= CHARANUM
		RETURN -1

	VARSET ACTIVE
	FOR LCOUNT, 0, 100
		CALL GET_FOOT_EQUIP_DATA_可不可(LCOUNT, ARG:1)
		IF RESULT == 1
		
			ACTIVE:(LCOUNT) = 1
			PRINTFORM [{LCOUNT,2}] 
			
			CALL GET_FOOT_EQUIP_DATA_名前(LCOUNT)
			PRINTFORM %RESULTS, 13, LEFT%　
			
			CALL GET_FOOT_EQUIP_DATA_説明(LCOUNT)
			PRINTFORM %RESULTS%
			
			PRINTL
			;全部OFFのチェック用
			LOCAL:1 += 1
		ENDIF
	NEXT
	IF LOCAL:1 > 0
		$INPUT_LOOP_FOOT_EQUIP
		INPUT
	
		IF RESULT >= 0 && RESULT <= 99 && ACTIVE:(RESULT) == 1
			RETURN RESULT
		ELSE
			GOTO INPUT_LOOP_FOOT_EQUIP
		ENDIF
		
	ELSE
	;全OFFなら何もなし
	ENDIF

;=================================================
;着せ替えランダム選択
;RESULT:0 ARG:0（0:いつもの　1:・・・）
;=================================================
@FOOT_EQUIP_TYPE_SELECT_RAND(ARG:1)
#DIM LCOUNT,3	;ループ用
#DIM ACTIVE, 100	;項目の有効記憶用
;ARG:1 キャラID
;LOCAL:1	全部OFFのチェック用
		
	SIF GET_FOOT_EQUIP_CONFIG("動作") == 0
		RETURN -1

	VARSET ACTIVE
	LOCAL = 0
	FOR LCOUNT, 0, 100
		CALL GET_FOOT_EQUIP_DATA_可不可(LCOUNT, ARG:1)
		IF RESULT == 1
			ACTIVE:(LCOUNT) = 1
			LOCAL ++
		ENDIF
		;全部OFFのチェック用
		LOCAL:1 += 1
	NEXT
	IF LOCAL:1 > 0
		FOR LCOUNT, 0, 100
			IF ACTIVE:(LCOUNT) == 1
				IF RAND:LOCAL == 0
					RETURN LCOUNT
				ENDIF
				LOCAL --
			ENDIF
		NEXT
	ELSE
	;全OFFなら何もなし
	ENDIF
;=================================================
;ステータス上の服装表示
;=================================================
@PRINT_FOOT_EQUIP_TYPE(ARG:1)
;ARG:1 キャラID
	
	SIF GET_FOOT_EQUIP_CONFIG("動作") == 0
		RETURN -1
	
	SIF ARG:1 < 1 || ARG:1 >= CHARANUM
		RETURN -1
	
	IF CFLAG:(ARG:1):500 > 0 && BASE:(ARG:1):3 > 0
		CALL GET_FOOT_EQUIP_DATA_服装表示(CFLAG:(ARG:1):500,ARG:1)
		IF RESULT == 1
			PRINTFORM %RESULTS%
		ENDIF
	ELSE
		SETCOLOR 0xEE1010
		PRINTFORM 全裸
	ENDIF
	RESETCOLOR

;=================================================
;キャラデータ簡易チェック
;RESULT:0 結果(1:成功 -1:失敗)
;=================================================
@FOOT_EQUIP_TYPE_キャラチェック(ARG:1)
;ARG:1 キャラID

	SIF ARG:1 < 1 || ARG:1 >= CHARANUM
		RETURN -1

	BASE:(ARG:1):HP = LIMIT(BASE:(ARG:1):HP,0,MAXBASE:(ARG:1):HP)

	IF CFLAG:(ARG:1):29
		BASE:(ARG:1):MP = 0
	ELSE
		BASE:(ARG:1):MP = LIMIT(BASE:(ARG:1):MP,1,MAXBASE:(ARG:1):MP)
	ENDIF

	BASE:(ARG:1):EP = LIMIT(BASE:(ARG:1):EP,0,MAXBASE:(ARG:1):EP)

	BASE:(ARG:1):CP = LIMIT(BASE:(ARG:1):CP,0,MAXBASE:(ARG:1):CP)
	IF BASE:(ARG:1):CP <= 0
		CFLAG:(ARG:1):40 = 0
		CFLAG:(ARG:1):44 = 0
		CFLAG:(ARG:1):500 = 0
		CFLAG:(ARG:1):501 = 0
	ENDIF
	
	RETURN 1

