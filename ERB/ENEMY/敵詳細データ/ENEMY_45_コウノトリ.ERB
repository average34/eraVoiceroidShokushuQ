;敵データ設定
;ARG:0	設定場所
;ARG:1	Reserved
@SET_ENEMY_DATA_45(ARG:0, ARG:1)

DA:(ARG:0):1 = 3000
DA:(ARG:0):2 = 3000
DA:(ARG:0):3 = 1
DA:(ARG:0):5 = 20
DA:(ARG:0):9 = 100

DA:(ARG:0):15 = 70
DA:(ARG:0):16 = 20
DA:(ARG:0):17 = 10
DA:(ARG:0):18 = 90
DA:(ARG:0):19 = 10

DA:(ARG:0):14 = 150
DA:(ARG:0):40 = 200


;図鑑用触手データ
DA:(ARG:0):85 = 4
DA:(ARG:0):86 = 2
DA:(ARG:0):89 = 8

SAVESTR:(ARG:0) = %ENEMY_NAME(45)%

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_45(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;妊娠している相手を攻撃
		IF CFLAG:(ARG:1):36 >= 3
			;既に妊娠している場合、（用が無いので）必ず解放する
			;ただし全員が妊娠しているor妊娠確定量射精されている場合は襲い続ける
			IF (CFLAG:1:36 >= 3 || CFLAG:1:60 >= 100) && (FLAG:10 == 0 || CFLAG:(FLAG:10):36 >= 3 || CFLAG:(FLAG:10):60 >= 100) && (FLAG:11 == 0 || CFLAG:(FLAG:11):36 >= 3 || CFLAG:(FLAG:10):60 >= 100)
				LOCAL:3 = RAND:13
				SELECTCASE LOCAL:3
					CASE 0 TO 2
						LOCAL:2 = 843
					CASE 3 TO 5
						LOCAL:2 = 844
					CASE 6 TO 8
						LOCAL:2 = 845
					CASE 9 TO 10
						LOCAL:2 = 846
					CASEELSE
						LOCAL:2 = 847
				ENDSELECT
			ELSE
				LOCAL:2 = 1
			ENDIF
		;拘束している相手を攻撃
		ELSEIF CFLAG:(ARG:1):29 && RAND:100 < 80
			;既に戦意喪失している場合、一定確率で解放する
			;ただし全員が妊娠しているor妊娠確定量射精されている場合は襲い続ける
			IF (CFLAG:1:36 >= 3 || CFLAG:1:60 >= 100) && (FLAG:10 == 0 || CFLAG:(FLAG:10):36 >= 3 || CFLAG:(FLAG:10):60 >= 100) && (FLAG:11 == 0 || CFLAG:(FLAG:11):36 >= 3 || CFLAG:(FLAG:10):60 >= 100)
				LOCAL:3 = RAND:13
				SELECTCASE LOCAL:3
					CASE 0 TO 2
						LOCAL:2 = 843
					CASE 3 TO 5
						LOCAL:2 = 844
					CASE 6 TO 8
						LOCAL:2 = 845
					CASE 9 TO 10
						LOCAL:2 = 846
					CASEELSE
						LOCAL:2 = 847
				ENDSELECT
			ELSE
				LOCAL:2 = 1
			ENDIF
		ELSE
			LOCAL:3 = RAND:15
			SELECTCASE LOCAL:3
				CASE 0 TO 1
					LOCAL:2 = 1
				CASE 2 TO 4
					LOCAL:2 = 843
				CASE 5 TO 7
					LOCAL:2 = 844
				CASE 8 TO 10
					LOCAL:2 = 845
				CASE 11 TO 12
					LOCAL:2 = 846
				CASEELSE
					LOCAL:2 = 847
			ENDSELECT
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:5
		SELECTCASE LOCAL:3
			CASE 0 TO 3
				LOCAL:2 = 141
			CASEELSE
				LOCAL:2 = 1
		ENDSELECT
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:5
	SELECTCASE LOCAL:3
		CASE 0 TO 3
			LOCAL:2 = 141
		CASEELSE
			LOCAL:2 = 1
	ENDSELECT
ELSE
	;通常時
	;色々
	LOCAL:3 = RAND:8
	SELECTCASE LOCAL:3
		CASE 0 TO 1
			LOCAL:2 = 387
		CASE 2 TO 4
			LOCAL:2 = 546
		CASEELSE
			LOCAL:2 = 842
	ENDSELECT
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


