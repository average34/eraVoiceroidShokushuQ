;敵データ設定
;ARG:0	設定場所
;ARG:1	Reserved
@SET_ENEMY_DATA_88(ARG:0, ARG:1)

DA:(ARG:0):1 = 25000
DA:(ARG:0):2 = 25000
DA:(ARG:0):3 = 1
DA:(ARG:0):5 = 120
DA:(ARG:0):9 = 40

DA:(ARG:0):15 = 80
DA:(ARG:0):16 = 10
DA:(ARG:0):17 = 10
DA:(ARG:0):18 = 80
DA:(ARG:0):19 = 10

;図鑑用触手データ
DA:(ARG:0):85 = 2
DA:(ARG:0):86 = 6
DA:(ARG:0):89 = 2

SAVESTR:(ARG:0) = %ENEMY_NAME(88)%

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_88(ARG:0, ARG:1)
#DIM 拘束NF,100	;変数番号→拘束後にNFされたキャラID、格納数→NF進行度
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用
;4	拘束フラグ(2人目)？
;5	NFフラグ

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF
LOCAL:4 = 0
IF DA:(ARG:0):10 == 1
	;１人目拘束
	LOCAL:4 = 1
ELSEIF FLAG:10 && DA:(ARG:0):10 == FLAG:10
	;２人目拘束
	LOCAL:4 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):10 == FLAG:11
	;３人目拘束
	LOCAL:4 = FLAG:11
ELSEIF DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:4 = -1
ENDIF

;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0 || LOCAL:4 > 0
	;前ターンでNFされ、今ターン開始時点でNFされた敵に拘束されたまま
	IF DA:(ARG:0):50 == 1205 && DA:(ARG:0):20 == LOCAL:1
		ARG:1 = LOCAL:1
		拘束NF:(ARG:0) = 2
	ELSE
		拘束NF:(ARG:0) = 0
	ENDIF
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1 || ARG:1 == LOCAL:4
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 10
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			TRYCALL CALC_NIPPLE_FUCK(ARG:1, 3)
			LOCAL:5 = RESULT:0
			$BRANCH
			LOCAL:3 = RAND:21
			SELECTCASE LOCAL:3
				CASE 0 TO 1
					LOCAL:2 = 622
				CASE 2 TO 4
					LOCAL:2 = 957
				CASE 5 TO 9
					LOCAL:2 = 972
				CASE 10 TO 11
					LOCAL:2 = 1002
				CASE 12 TO 13
					LOCAL:2 = 1010
				CASE 14 TO 15
					LOCAL:2 = 766
				CASE 16 TO 18
					;NF可でないなら再選択
					IF LOCAL:5 == 0
						GOTO BRANCH
					ENDIF
					LOCAL:2 = 1205
					;B寄生攻撃は拡張乳腺+以上が必要
					IF FLAG:516 > 0 && TALENT:(ARG:1):162 > 1
						SIF 拘束NF:(ARG:1) == 0
							拘束NF:(ARG:1) = 1
					ENDIF
				CASEELSE
					LOCAL:2 = 811
			ENDSELECT
		ENDIF
		;B寄生攻撃フラグ
		IF 拘束NF:(ARG:0) == 2
			LOCAL:2 = 1206
			拘束NF:(ARG:0) = 0
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:16
		SIF FLAG:(50 + FLAG:5) > 100
			LOCAL:3 += 6
		SELECTCASE LOCAL:3
		CASE 0 TO 1
			LOCAL:2 = 950
		CASE 2 TO 4
			LOCAL:2 = 951
		CASE 5
			LOCAL:2 = 952
		CASE 6 TO 8
			LOCAL:2 = 322
		CASE 9 TO 11
			LOCAL:2 = 957
		CASE 12 TO 13
			LOCAL:2 = 976
		CASEELSE
			LOCAL:2 = 977
		ENDSELECT
	ENDIF
ELSEIF LOCAL:1 < 0 || LOCAL:4 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:14
	SIF FLAG:(50 + FLAG:5) > 100
		LOCAL:3 += 6
	SELECTCASE LOCAL:3
		CASE 0 TO 1
			LOCAL:2 = 950
		CASE 2 TO 3
			LOCAL:2 = 951
		CASE 4 TO 5
			LOCAL:2 = 952
		CASE 6 TO 8
			LOCAL:2 = 322
		CASE 9 TO 11
			LOCAL:2 = 977
		CASEELSE
			LOCAL:2 = 957
	ENDSELECT
ELSE
	;通常時
	;色々
	LOCAL:3 = RAND:19
	SIF FLAG:(50 + FLAG:5) > 100
		LOCAL:3 += 6
	SELECTCASE LOCAL:3
		CASE 0 TO 1
			LOCAL:2 = 950
		CASE 2 TO 3
			LOCAL:2 = 951
		CASE 4 TO 5
			LOCAL:2 = 952
		CASE 6 TO 8
			LOCAL:2 = 322
		CASE 9 TO 11
			LOCAL:2 = 976
		CASE 12 TO 14
			LOCAL:2 = 977
		CASE 15 TO 17
			LOCAL:2 = 511
		CASEELSE
			LOCAL:2 = 957
	ENDSELECT
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


