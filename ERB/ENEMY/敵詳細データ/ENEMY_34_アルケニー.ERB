;敵データ設定
;ARG:0	設定場所
;ARG:1	元キャラのID
@SET_ENEMY_DATA_34(ARG:0, ARG:1)

;簡易悪堕ちだった場合
IF ARG:1 > 0 && FLAG:2000 == 1
	DA:(ARG:0):1 = ABL:(ARG:1):98 * 100 + 7000
	DA:(ARG:0):2 = ABL:(ARG:1):98 * 100 + 7000
	DA:(ARG:0):3 = 1
	DA:(ARG:0):5 = 70 + ABL:(ARG:1):98 / 4
	DA:(ARG:0):9 = 40 + ABL:(ARG:1):97 / 4
	;●入れ替わりパッチ追加START
	DA:(ARG:0):49 = CFLAG:(ARG:1):104
	;●END
	;念のため元キャラのIDを残しておく
	DA:(ARG:0):46 = ARG:1
	;転生組である旨を記録
	DA:(FLAG:1):99=2
	SAVESTR:(ARG:0) = アルケニー%CALLNAME:(ARG:1)%
	;元キャラがダミーデータの場合パス　バグ対策
	SIF ARG:1 == 0 || FLAG:997 == 81
		RETURN
;通常湧きの場合
ELSE
	DA:(ARG:0):1 = 6500
	DA:(ARG:0):2 = 6500
	DA:(ARG:0):3 = 1
	DA:(ARG:0):5 = 70
	DA:(ARG:0):9 = 40
	SAVESTR:(ARG:0) = %ENEMY_NAME(34)%
ENDIF

DA:(ARG:0):15 = 0
DA:(ARG:0):16 = 10
DA:(ARG:0):17 = 90
DA:(ARG:0):18 = 80
DA:(ARG:0):19 = 10

DA:(ARG:0):41 = 150
DA:(ARG:0):43 = 150
DA:(ARG:0):44 = 110

;図鑑用触手データ
DA:(ARG:0):85 = 5
DA:(ARG:0):86 = 4
DA:(ARG:0):89 = 6


;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_34(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 40
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:12
			IF LOCAL:3 < 2
				LOCAL:2 = 1027
			ELSEIF LOCAL:3 < 4
				LOCAL:2 = 1028
			ELSEIF LOCAL:3 < 6
				LOCAL:2 = 2619
			ELSEIF LOCAL:3 < 8
				LOCAL:2 = 2620
			ELSEIF LOCAL:3 < 11
				LOCAL:2 = 2808
			ELSE
				LOCAL:2 = 2808
			ENDIF
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:16
		IF LOCAL:3 < 2
			LOCAL:2 = 2961
		ELSEIF LOCAL:3 < 8
			LOCAL:2 = 2216
		ELSE
			LOCAL:2 = 2315
		ENDIF
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:16
	IF LOCAL:3 < 2
		LOCAL:2 = 2961
	ELSEIF LOCAL:3 < 8
		LOCAL:2 = 2216
	ELSE
		LOCAL:2 = 2315
	ENDIF
ELSE
	;通常時
	;色々
	IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 70)
		LOCAL:3 = RAND:14
	ELSE
		IF BASE:(ARG:1):0 < MAXBASE:(ARG:1):0 / 7 || BASE:(ARG:1):2 < MAXBASE:(ARG:1):2 * 2 / 10
			LOCAL:3 = RAND:24
		ELSE
			LOCAL:3 = RAND:16
		ENDIF
	ENDIF
	
	IF LOCAL:3 < 2
		LOCAL:2 = 2961
	ELSEIF LOCAL:3 < 4
		LOCAL:2 = 2216
	ELSEIF LOCAL:3 < 6
		LOCAL:2 = 2217
	ELSEIF LOCAL:3 < 10
		LOCAL:2 = 2315
	ELSEIF LOCAL:3 < 14
		LOCAL:2 = 2315
	ELSE
		LOCAL:2 = 2510
	ENDIF

	;相手睡眠時
	IF CFLAG:(ARG:1):25
		LOCAL:3 = RAND:4
		IF LOCAL:3 < 1
			LOCAL:2 = 2315
		ELSEIF LOCAL:3 < 2
			LOCAL:2 = 2315
		ELSEIF LOCAL:3 < 3
			LOCAL:2 = 2315
		ELSEIF LOCAL:3 < 4
			LOCAL:2 = 2315
		ENDIF
	ENDIF

ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0

