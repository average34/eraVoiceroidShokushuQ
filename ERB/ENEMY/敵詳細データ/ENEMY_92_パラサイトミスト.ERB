;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_92(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 20
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:25
			SELECTCASE LOCAL:3
				CASE 0
					LOCAL:2 = 603
				CASE 1
					LOCAL:2 = 606
				CASE 2
					LOCAL:2 = 609
				CASE 3
					LOCAL:2 = 617
				CASE 4
					LOCAL:2 = 618
				CASE 5
					LOCAL:2 = 619
				CASE 6 TO 14
					LOCAL:2 = 632
				CASEELSE
					LOCAL:2 = 828
			ENDSELECT
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		IF CFLAG:(ARG:1):26
			LOCAL:3 = RAND:11
		ELSE
			LOCAL:3 = RAND:19
		ENDIF
		SELECTCASE LOCAL:3
			CASE 0 TO 2
				LOCAL:2 = 349
			CASE 3 TO 9
				LOCAL:2 = 360
			CASE 10 TO 11
				LOCAL:2 = 1886
			CASEELSE
				LOCAL:2 = 1913
		ENDSELECT
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	IF CFLAG:(ARG:1):26
		LOCAL:3 = RAND:11
	ELSE
		LOCAL:3 = RAND:19
	ENDIF
	SELECTCASE LOCAL:3
		CASE 0 TO 2
			LOCAL:2 = 349
		CASE 3 TO 9
			LOCAL:2 = 360
		CASE 10 TO 11
			LOCAL:2 = 1886
		CASEELSE
			LOCAL:2 = 1913
	ENDSELECT
ELSE
	;通常時
	;色々
	IF CFLAG:(ARG:1):26
		LOCAL:3 = 13 + RAND:8
	ELSE
		LOCAL:3 = RAND:23
	ENDIF
	SELECTCASE LOCAL:3
		CASE 0 TO 2
			LOCAL:2 = 349
		CASE 3 TO 15
			LOCAL:2 = 1913
		CASE 16 TO 19
			LOCAL:2 = 1886
		CASEELSE
			LOCAL:2 = 504
	ENDSELECT
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0



