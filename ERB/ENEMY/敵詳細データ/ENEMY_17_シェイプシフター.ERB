;敵データ設定
;ARG:0	設定場所
;ARG:1	Reserved
@SET_ENEMY_DATA_17(ARG:0, ARG:1)

DA:(ARG:0):1 = 25000
DA:(ARG:0):2 = 25000
DA:(ARG:0):3 = 0
DA:(ARG:0):5 = 150
DA:(ARG:0):9 = 70

DA:(ARG:0):15 = 50
DA:(ARG:0):16 = 20
DA:(ARG:0):17 = 30
DA:(ARG:0):18 = 100
DA:(ARG:0):19 = 20

;図鑑用触手データ
DA:(ARG:0):85 = 32
DA:(ARG:0):86 = 5
DA:(ARG:0):89 = 63

;通常沸きする敵の番号が5～95なのでそこをランダムに指定し敵データ呼び込み　データがなければ戻る
$REPOP_LOOP
LOCAL:2 = 5 + RAND:91
TRYCCALLFORM SET_ENEMY_DATA_{LOCAL:2}(FLAG:1)
CATCH
	GOTO REPOP_LOOP
ENDCATCH

IF LOCAL:1 >= 10
	LOCAL:2 = 4
;その系統の敵を出す・その系統の敵を弾く・一度会った敵でフィルターを掛けたものを弾く
ELSEIF FLAG:527 > 0 && (DA:(FLAG:1):85 & FLAG:527) == 0
	LOCAL:1 += 1
	GOTO REPOP_LOOP
ELSEIF FLAG:536 > 0 && (DA:(FLAG:1):85 & FLAG:536) && FLAG:536 != 63
	LOCAL:1 += 1
	GOTO REPOP_LOOP
ELSEIF IS_FILTERED_ENEMY(LOCAL:2)
	LOCAL:1 += 1
	;湧かなかった時用にフラグリセット
	GOTO REPOP_LOOP
ELSEIF DA:(ARG:0):86 == 7
	LOCAL:1 += 1
	;湧かなかった時用にフラグリセット
	GOTO REPOP_LOOP
ENDIF

SAVESTR:(ARG:0) = %ENEMY_NAME(LOCAL:2)%

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_17(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 30
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:12
			IF LOCAL:3 < 3
				LOCAL:2 = 667
			ELSEIF LOCAL:3 < 5
				LOCAL:2 = 668
			ELSEIF LOCAL:3 < 7
				LOCAL:2 = 669
			ELSEIF LOCAL:3 < 9
				LOCAL:2 = 670
			ELSEIF LOCAL:3 < 12
				LOCAL:2 = 671
			ELSEIF LOCAL:3 < 13
				LOCAL:2 = 993
			ELSEIF LOCAL:3 < 14
				LOCAL:2 = 994
			ELSEIF LOCAL:3 < 15
				LOCAL:2 = 984
			ELSE
				LOCAL:2 = 835
			ENDIF
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:14
		IF LOCAL:3 < 3
			LOCAL:2 = 135
		ELSEIF LOCAL:3 < 5
			LOCAL:2 = 136
		ELSEIF LOCAL:3 < 9
			LOCAL:2 = 235
		ELSEIF LOCAL:3 < 10
			LOCAL:2 = 367
		ELSEIF LOCAL:3 < 11
			LOCAL:2 = 368
		ELSEIF LOCAL:3 < 12
			LOCAL:2 = 369
		ELSEIF LOCAL:3 < 13
			LOCAL:2 = 370
		ELSE
			LOCAL:2 = 371
		ENDIF
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:14
	IF LOCAL:3 < 3
		LOCAL:2 = 135
	ELSEIF LOCAL:3 < 5
		LOCAL:2 = 136
	ELSEIF LOCAL:3 < 9
		LOCAL:2 = 235
	ELSEIF LOCAL:3 < 10
		LOCAL:2 = 367
	ELSEIF LOCAL:3 < 11
		LOCAL:2 = 368
	ELSEIF LOCAL:3 < 12
		LOCAL:2 = 369
	ELSEIF LOCAL:3 < 13
		LOCAL:2 = 370
	ELSE
		LOCAL:2 = 371
	ENDIF
ELSE
	;通常時
	;色々
	IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 40)
		LOCAL:3 = RAND:14
	ELSE
		IF BASE:(ARG:1):0 < MAXBASE:(ARG:1):0 / 2 || BASE:(ARG:1):2 < MAXBASE:(ARG:1):2 * 2 / 3
			LOCAL:3 = RAND:19
		ELSE
			LOCAL:3 = RAND:16
		ENDIF
	ENDIF
	IF LOCAL:3 < 3
		LOCAL:2 = 135
	ELSEIF LOCAL:3 < 5
		LOCAL:2 = 136
	ELSEIF LOCAL:3 < 9
		LOCAL:2 = 235
	ELSEIF LOCAL:3 < 10
		LOCAL:2 = 367
	ELSEIF LOCAL:3 < 11
		LOCAL:2 = 368
	ELSEIF LOCAL:3 < 12
		LOCAL:2 = 369
	ELSEIF LOCAL:3 < 13
		LOCAL:2 = 370
	ELSEIF LOCAL:3 < 14
		LOCAL:2 = 371
	ELSE
		LOCAL:2 = 535
	ENDIF
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


