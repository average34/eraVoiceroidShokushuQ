;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_104(ARG:0, ARG:1)
#DIM 拘束NF,100	;変数番号→拘束後にNFされたキャラID、格納数→NF進行度
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;前ターンでNFされ、今ターン開始時点でNFされた敵に拘束されたまま
	IF DA:(ARG:0):50 == 1207 && DA:(ARG:0):20 == LOCAL:1
		ARG:1 = LOCAL:1
		拘束NF:(ARG:0) = 2
	ELSE
		拘束NF:(ARG:0) = 0
	ENDIF
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 20
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			IF FLAG:520
				LOCAL:3 = RAND:18
			ELSE
				LOCAL:3 = RAND:12
			ENDIF
			IF LOCAL:3 < 3
				LOCAL:2 = 750
			ELSEIF LOCAL:3 < 6
				TRYCALL CALC_NIPPLE_FUCK(ARG:1, 3)
				IF RESULT:0 == 1
					LOCAL:2 = 1207
					;B寄生攻撃は拡張乳腺+以上が必要
					IF FLAG:516 > 0 && TALENT:(ARG:1):162 > 1
						SIF 拘束NF:(ARG:1) == 0
							拘束NF:(ARG:1) = 1
					ENDIF
				ELSE
					LOCAL:2 = 751
				ENDIF
			ELSEIF LOCAL:3 < 9
				LOCAL:2 = 752
			ELSEIF LOCAL:3 < 11
				LOCAL:2 = 868
			ELSEIF LOCAL:3 < 12
				LOCAL:2 = 869
			ELSEIF LOCAL:3 < 13
				LOCAL:2 = 1013
			ELSEIF LOCAL:3 < 14
				LOCAL:2 = 1014
			ELSEIF LOCAL:3 < 15
				LOCAL:2 = 1015
			ELSE
				LOCAL:2 = 753
			ENDIF
		ENDIF
		;B寄生攻撃フラグ
		IF 拘束NF:(ARG:0) == 2
			LOCAL:2 = 1208
			拘束NF:(ARG:0) = 0
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:19
		IF LOCAL:3 < 1
			LOCAL:2 = 173
		ELSEIF LOCAL:3 < 4
			LOCAL:2 = 130
		ELSEIF LOCAL:3 < 8
			LOCAL:2 = 229
		ELSEIF LOCAL:3 < 11
			LOCAL:2 = 263
		ELSEIF LOCAL:3 < 12
			LOCAL:2 = 355
		ELSEIF LOCAL:3 < 13
			LOCAL:2 = 356
		ELSEIF LOCAL:3 < 16
			LOCAL:2 = 421
		ELSE
			LOCAL:2 = 422
		ENDIF
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:19
	IF LOCAL:3 < 1
		LOCAL:2 = 173
	ELSEIF LOCAL:3 < 4
		LOCAL:2 = 130
	ELSEIF LOCAL:3 < 8
		LOCAL:2 = 229
	ELSEIF LOCAL:3 < 11
		LOCAL:2 = 263
	ELSEIF LOCAL:3 < 12
		LOCAL:2 = 355
	ELSEIF LOCAL:3 < 13
		LOCAL:2 = 356
	ELSEIF LOCAL:3 < 16
		LOCAL:2 = 421
	ELSE
		LOCAL:2 = 422
	ENDIF
ELSE
	;通常時
	;色々
	LOCAL:3 = RAND:24
	IF LOCAL:3 < 1
		LOCAL:2 = 173
	ELSEIF LOCAL:3 < 4
		LOCAL:2 = 130
	ELSEIF LOCAL:3 < 8
		LOCAL:2 = 229
	ELSEIF LOCAL:3 < 11
		LOCAL:2 = 263
	ELSEIF LOCAL:3 < 12
		LOCAL:2 = 355
	ELSEIF LOCAL:3 < 13
		LOCAL:2 = 356
	ELSEIF LOCAL:3 < 16
		LOCAL:2 = 421
	ELSEIF LOCAL:3 < 19
		LOCAL:2 = 422
	ELSE
		LOCAL:2 = 571
	ENDIF
ENDIF

