;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_52(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		;戦意喪失状態でも離してくれない　獣だし
		IF TALENT:(ARG:1):122
			LOCAL:3 = RAND:25
			SELECTCASE LOCAL:3
				CASE 0 TO 5
					LOCAL:2 = 697
				CASE 6 TO 10
					LOCAL:2 = 311
				CASE 11 TO 15
					LOCAL:2 = 317
				CASE 16 TO 20
					LOCAL:2 = 346
				CASEELSE
					LOCAL:2 = 398
			ENDSELECT
		ELSE
			LOCAL:3 = RAND:25
			SELECTCASE LOCAL:3
				CASE 0 TO 5
					LOCAL:2 = 697
				CASE 6 TO 10
					LOCAL:2 = 698
				CASE 11 TO 15
					LOCAL:2 = 699
				CASE 16 TO 20
					LOCAL:2 = 854
				CASEELSE
					LOCAL:2 = 1020
			ENDSELECT
		ENDIF

	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:11
		SELECTCASE LOCAL:3
			CASE 0 TO 3
				LOCAL:2 = 156
			CASEELSE
				LOCAL:2 = 157
		ENDSELECT
	ENDIF

ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外

	LOCAL:3 = RAND:11
	SELECTCASE LOCAL:3
		CASE 0 TO 3
			LOCAL:2 = 156
		CASEELSE
			LOCAL:2 = 157
	ENDSELECT
ELSE
	;通常時
	;色々
	;拘束はHPがある程度削れてから
	IF MAXBASE:(ARG:1):0 / (BASE:(ARG:1):0 + 1) > 5
		LOCAL:3 = RAND:8
	ELSE
		LOCAL:3 = RAND:8 + 8
	ENDIF
	SELECTCASE LOCAL:3
		CASE 0 TO 7
			LOCAL:2 = 553
		CASE 8 TO 10
			LOCAL:2 = 31
		CASE 11 TO 12
			LOCAL:2 = 156
		CASE 13
			LOCAL:2 = 2202
		CASEELSE
			LOCAL:2 = 157
	ENDSELECT
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


