DA:(ARG:0):89 = 63

IF RAND:2 == 0
	DA:(ARG:0):88 = 2
ENDIF

IF CHARANUM < 1
	LOCAL:2 = -1
ELSE
	VARSET LOCAL, 0, 1, MIN(CHARANUM, 11)
	LOCAL:11 = 0
	;11番目以降のキャラには化けない
	FOR LOCAL:0, 1, MIN(CHARANUM, 11)
		SIF LOCAL:0 == 1 || LOCAL:0 == FLAG:10 || LOCAL:0 == FLAG:11
			CONTINUE
		LOCAL:11 += 1
		;化けられる相手の番号をLOCAL:1～LOCAL:9に入れていく
		LOCAL:(LOCAL:11) = LOCAL:0
	NEXT
	
	IF LOCAL:11 < 1
		LOCAL:2 = -1
	ELSE
		;LOCAL:1～LOCAL:9に入った化けられる相手の番号をランダムに入れる
		LOCAL:2 = LOCAL:(1 + RAND:(LOCAL:11))
	ENDIF
ENDIF
IF LOCAL:2 <= 0
	;化けられるキャラが居ないなら主人公に化ける
	SAVESTR:(ARG:0) = %CALLNAME:1%
ELSE
	SAVESTR:(ARG:0) = %CALLNAME:(LOCAL:2)%
ENDIF
;生まれた直後に変化後のIDを入れると図鑑でもここを呼び出しおかしくなりうるのでAUTO_HEAL経由までいれない。見抜かれたらドジッペル


