;敵データ設定
;ARG:0	設定場所
;ARG:1	Reserved
@SET_ENEMY_DATA_151(ARG:0, ARG:1)

DA:(ARG:0):1 = 2500
DA:(ARG:0):2 = 2500
DA:(ARG:0):3 = 1
DA:(ARG:0):5 = 30
DA:(ARG:0):9 = 40

DA:(ARG:0):15 = 0
DA:(ARG:0):16 = 70
DA:(ARG:0):17 = 30
DA:(ARG:0):18 = 100
DA:(ARG:0):19 = 10

;図鑑用触手データ
DA:(ARG:0):85 = 1
DA:(ARG:0):86 = 2
DA:(ARG:0):89 = 8


SAVESTR:(ARG:0) = %ENEMY_NAME(151)%

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_151(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 40
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:12
			IF LOCAL:3 < 1
				LOCAL:2 = 1890
			ELSEIF LOCAL:3 < 2
				LOCAL:2 = 1892
			ELSEIF LOCAL:3 < 3
				LOCAL:2 = 1893
			ELSEIF LOCAL:3 < 9
				LOCAL:2 = 2629
			ELSEIF LOCAL:3 < 11
				LOCAL:2 = 2803
			ELSE
				LOCAL:2 = 731
			ENDIF
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:8
		IF LOCAL:3 < 1
			LOCAL:2 = 2953
		ELSEIF LOCAL:3 < 2
			LOCAL:2 = 2953
		ELSEIF LOCAL:3 < 3
			LOCAL:2 = 2953
		ELSEIF LOCAL:3 < 4
			LOCAL:2 = 2953
		ELSEIF LOCAL:3 < 5
			LOCAL:2 = 2953
		ELSEIF LOCAL:3 < 6
			LOCAL:2 = 2954
		ELSEIF LOCAL:3 < 7
			LOCAL:2 = 2954
		ELSE
			LOCAL:2 = 2954
		ENDIF
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:8
	IF LOCAL:3 < 1
		LOCAL:2 = 2953
	ELSEIF LOCAL:3 < 2
		LOCAL:2 = 2953
	ELSEIF LOCAL:3 < 3
		LOCAL:2 = 2953
	ELSEIF LOCAL:3 < 4
		LOCAL:2 = 2953
	ELSEIF LOCAL:3 < 5
		LOCAL:2 = 2953
	ELSEIF LOCAL:3 < 6
		LOCAL:2 = 2954
	ELSEIF LOCAL:3 < 7
		LOCAL:2 = 2954
	ELSE
		LOCAL:2 = 2954
	ENDIF
ELSE
	;通常時

	$ACT_LOOP


	;色々
	IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 70)
		LOCAL:3 = RAND:27
		;拘束メイン

	ELSE
		IF BASE:(ARG:1):0 < MAXBASE:(ARG:1):0 / 7 || BASE:(ARG:1):2 < MAXBASE:(ARG:1):2 * 1 / 3
			LOCAL:3 = RAND:38
			;体力がない、ＥＰがない時

		ELSE
			LOCAL:3 = RAND:33
		ENDIF
	ENDIF
	
	IF LOCAL:3 < 3
		LOCAL:2 = 2953
	ELSEIF LOCAL:3 < 7
		LOCAL:2 = 2953
	ELSEIF LOCAL:3 < 13
		LOCAL:2 = 2953
	ELSEIF LOCAL:3 < 16
		LOCAL:2 = 2953
	ELSEIF LOCAL:3 < 18
		LOCAL:2 = 2220
	ELSEIF LOCAL:3 < 20
		LOCAL:2 = 261
	ELSEIF LOCAL:3 < 24
		LOCAL:2 = 2105
	ELSEIF LOCAL:3 < 28
		LOCAL:2 = 2954
	ELSE
		LOCAL:2 = 540
	ENDIF


	;眠気がない
	IF TFLAG:14 == 3

	ELSEIF FLAG:7 < 3 && LOCAL:2 == 2953 && RAND:100 < 97
		GOTO ACT_LOOP

	ENDIF



ENDIF






;●相手が眠っている時

IF CFLAG:(ARG:1):25 > 0

	LOCAL:2 = 2952

ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0
