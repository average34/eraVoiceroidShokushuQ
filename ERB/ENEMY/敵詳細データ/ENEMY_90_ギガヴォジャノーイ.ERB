;ARG:0	設定場所
;ARG:1	Reserved
@SET_ENEMY_DATA_90(ARG:0, ARG:1)

DA:(ARG:0):1 = 22000
DA:(ARG:0):2 = 22000
DA:(ARG:0):3 = 1
DA:(ARG:0):5 = 130
DA:(ARG:0):9 = 15

DA:(ARG:0):15 = 10
DA:(ARG:0):16 = 80
DA:(ARG:0):17 = 10
DA:(ARG:0):18 = 75
DA:(ARG:0):19 = 70

DA:(ARG:0):14 = 0
DA:(ARG:0):43 = 120


;図鑑用触手データ
DA:(ARG:0):85 = 28
DA:(ARG:0):86 = 7
DA:(ARG:0):89 = 1

SAVESTR:(ARG:0) = %ENEMY_NAME(90)%

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_90(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

;ヴォジャノーイの命中上昇
DA:(ARG:0):18 += 4


IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	;拘束したキャラを攻撃させる
	IF ARG:1 > 0
		ARG:1 = LOCAL:1
	ENDIF
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		LOCAL:3 = RAND:15
		SELECTCASE LOCAL:3
		CASE 0 TO 1
			LOCAL:2 = 690
		CASE 2 TO 4
			LOCAL:2 = 691
		CASE 5 TO 8
			LOCAL:2 = 692
		CASE 9 TO 13
			LOCAL:2 = 1000
		CASEELSE
			LOCAL:2 = 953
		ENDSELECT
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:10
		SELECTCASE LOCAL:3
		CASE 0 TO 1
			LOCAL:2 = 551
		CASE 2 TO 4
			LOCAL:2 = 950
		CASE 5 TO 8
			LOCAL:2 = 951
		CASEELSE
			LOCAL:2 = 952
		ENDSELECT
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:6
	SELECTCASE LOCAL:3
		CASE 0 TO 1
			LOCAL:2 = 149
		CASE 2
			LOCAL:2 = 950
		CASE 3
			LOCAL:2 = 951
		CASEELSE
			LOCAL:2 = 952
	ENDSELECT
ELSE
	;通常時
	;色々
	LOCAL:3 = RAND:14
	SIF FLAG:(50 + FLAG:5) > 100
		LOCAL:3 += 9
	SELECTCASE LOCAL:3
		CASE 0 TO 1
			LOCAL:2 = 950
		CASE 2 TO 5
			LOCAL:2 = 951
		CASE 6 TO 8
			LOCAL:2 = 952
		CASE 9 TO 11
			LOCAL:2 = 149
		CASEELSE
			LOCAL:2 = 551
	ENDSELECT
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


