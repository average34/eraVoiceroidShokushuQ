@SET_ENEMY_DATA_63(ARG:0, ARG:1)

;1と2にはHPを入れておく、厳密には違うフラグだが同じ数値で問題ないはず
DA:(ARG:0):1 = 12000
DA:(ARG:0):2 = 12000
;3はランクアップに関係。1だとランクアップしなくなる
DA:(ARG:0):3 = 1
;5には戦闘素質、9には速度が入る
DA:(ARG:0):5 = 60
DA:(ARG:0):9 = 100

;15-17は移動率に関係
;15が突撃、16が慎重、17が待ち伏せ。百分率なので分かりやすい？
DA:(ARG:0):15 = 40
DA:(ARG:0):16 = 30
DA:(ARG:0):17 = 30

;基本命中率と自然回復のパーセンテージ。弄る頻度はどれほどか？
DA:(ARG:0):18 = 90
DA:(ARG:0):19 = 10

;属性攻撃で受けるダメージ量に関係
;40が攻撃、41が炎攻撃、42が消耗武器、43が炎消耗武器、44が非消耗武器
;省略したり0を入れたりすると等倍になるので注意
DA:(ARG:0):41 = 150
DA:(ARG:0):43 = 150

;図鑑用触手データ
;85は触手種別（1が女性、2が植物、4が動物、8が丸呑、16が海産、32がその他）
;複数持ちの場合、数値の合計が入る
DA:(ARG:0):85 = 10
;86には強さランク（1~7）が入る。7は自然発生しないので注意
DA:(ARG:0):86 = 5
;89には主な性攻撃の狙う部位
DA:(ARG:0):89 = 42

SAVESTR:(ARG:0) = %ENEMY_NAME(63)%

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_63(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF

;LOCAL:3 = RAND: を100や1000などのきりのいい数字にして、
;口上の分岐のようにSELECTCASE文を使うと比較的やりやすい

;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 20
