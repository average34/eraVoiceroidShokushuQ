;敵データ設定
;ARG:0	設定場所
;ARG:1	元キャラのID
@SET_ENEMY_DATA_21(ARG:0, ARG:1)


;簡易悪堕ちだった場合
IF ARG:1 > 0 && FLAG:2000 == 1
	DA:(ARG:0):1 = ABL:(ARG:1):98 * 100 + 10000
	DA:(ARG:0):2 = ABL:(ARG:1):98 * 100 + 10000
	DA:(ARG:0):3 = 1
	DA:(ARG:0):5 = 50 + ABL:(ARG:1):98 / 3
	DA:(ARG:0):9 = 100
	;●入れ替わりパッチ追加START
	DA:(ARG:0):49 = CFLAG:(ARG:1):104
	;●END
	;念のため元キャラのIDを残しておく
	DA:(ARG:0):46 = ARG:1
	;転生組である旨を記録
	DA:(FLAG:1):99=2
	;バタフライ+女の子の名前だといまいち可愛さが無いのでこうしてみる
	SAVESTR:(ARG:0) = パピヨン%CALLNAME:(ARG:1)%
	;元キャラがダミーデータの場合パス　バグ対策
	SIF ARG:1 == 0 || FLAG:997 == 81
		RETURN
;通常湧きの場合
ELSE
	DA:(ARG:0):1 = 5000
	DA:(ARG:0):2 = 5000
	DA:(ARG:0):3 = 1
	DA:(ARG:0):5 = 50
	DA:(ARG:0):9 = 100
	SAVESTR:(ARG:0) = %ENEMY_NAME(21)%
ENDIF


DA:(ARG:0):15 = 0
DA:(ARG:0):16 = 50
DA:(ARG:0):17 = 50
DA:(ARG:0):18 = 80
DA:(ARG:0):19 = 10

;図鑑用触手データ
DA:(ARG:0):85 = 5
DA:(ARG:0):86 = 2
DA:(ARG:0):89 = 44

IF RAND:2 == 0
	DA:(ARG:0):88 = 2
ENDIF


;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_21(ARG:0, ARG:1)
#DIM 拘束NF,100	;変数番号→拘束後にNFされたキャラID、格納数→NF進行度
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用
;4	NFフラグ

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;前ターンでNFされ、今ターン開始時点でNFされた敵に拘束されたまま
	IF DA:(ARG:0):50 == 1201 && DA:(ARG:0):20 == LOCAL:1
		ARG:1 = LOCAL:1
		拘束NF:(ARG:0) = 2
	ELSE
		拘束NF:(ARG:0) = 0
	ENDIF
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 20
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			TRYCALL CALC_NIPPLE_FUCK(ARG:1, 3)
			LOCAL:4 = RESULT:0
			$BRANCH
			LOCAL:3 = RAND:23
			IF LOCAL:3 < 3
				LOCAL:2 = 637
			ELSEIF LOCAL:3 < 7
				LOCAL:2 = 956
			ELSEIF LOCAL:3 < 8
				LOCAL:2 = 957
			ELSEIF LOCAL:3 < 10
				LOCAL:2 = 958
			ELSEIF LOCAL:3 < 12 || LOCAL:3 < 209
				LOCAL:2 = 959
			ELSEIF LOCAL:3 < 13
				LOCAL:2 = 960
			ELSEIF LOCAL:3 < 14
				LOCAL:2 = 1000
			ELSEIF LOCAL:3 < 15
				LOCAL:2 = 978
			ELSEIF LOCAL:3 < 16
				LOCAL:2 = 979
			ELSEIF LOCAL:3 < 17
				LOCAL:2 = 982
			ELSEIF LOCAL:3 < 18
				LOCAL:2 = 983
			ELSEIF LOCAL:3 < 19
				LOCAL:2 = 984
			ELSEIF LOCAL:3 < 20
				LOCAL:2 = 2303
			ELSEIF LOCAL:3 < 21
				;NF可でないなら再選択
				IF LOCAL:4 == 0
					GOTO BRANCH
				ENDIF
				LOCAL:2 = 1201
				;B寄生攻撃は拡張乳腺+以上が必要
				IF FLAG:516 > 0 && TALENT:(ARG:1):162 > 1
					SIF 拘束NF:(ARG:1) == 0
						拘束NF:(ARG:1) = 1
				ENDIF
			ELSE
				LOCAL:2 = 815
			ENDIF
		ENDIF
		;B寄生攻撃フラグ
		IF 拘束NF:(ARG:0) == 2
			LOCAL:2 = 1202
			拘束NF:(ARG:0) = 0
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		IF CFLAG:(ARG:1):27
			LOCAL:3 = 6 + RAND:3
		ELSE
			LOCAL:3 = RAND:10
		ENDIF
		IF LOCAL:3 < 6
			LOCAL:2 = 10
		ELSEIF LOCAL:3 < 8
			LOCAL:2 = 1876
		ELSE
			LOCAL:2 = 374
		ENDIF
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	IF CFLAG:(ARG:1):27
		LOCAL:3 = 6 + RAND:3
	ELSE
		LOCAL:3 = RAND:11
	ENDIF
	IF LOCAL:3 < 8
		LOCAL:2 = 10
	ELSEIF LOCAL:3 < 10
		LOCAL:2 = 1876
	ELSE
		LOCAL:2 = 1877
	ENDIF
ELSE
	;通常時
	;色々
	IF CFLAG:(ARG:1):27
		LOCAL:3 = 6 + RAND:9
	ELSE
		LOCAL:3 = RAND:13
	ENDIF
	IF LOCAL:3 < 6
		LOCAL:2 = 10
	ELSEIF LOCAL:3 < 7
		LOCAL:2 = 1876
	ELSEIF LOCAL:3 < 8
		LOCAL:2 = 1877
	ELSEIF LOCAL:3 < 10
		LOCAL:2 = 1875
	ELSE
		LOCAL:2 = 540
	ENDIF
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0



