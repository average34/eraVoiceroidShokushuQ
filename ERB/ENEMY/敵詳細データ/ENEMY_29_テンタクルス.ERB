;ARG:1	Reserved
@SET_ENEMY_DATA_29(ARG:0, ARG:1)


DA:(ARG:0):1 = 6000
DA:(ARG:0):2 = 6000
DA:(ARG:0):3 = 1
DA:(ARG:0):5 = 50
DA:(ARG:0):9 = 10

DA:(ARG:0):15 = 80
DA:(ARG:0):16 = 10
DA:(ARG:0):17 = 10
DA:(ARG:0):18 = 80
DA:(ARG:0):19 = 10


DA:(ARG:0):14 = 10

DA:(ARG:0):41 = 75
DA:(ARG:0):43 = 75

;図鑑用触手データ
DA:(ARG:0):85 = 16
DA:(ARG:0):86 = 2
DA:(ARG:0):89 = 6

SAVESTR:(ARG:0) = %ENEMY_NAME(29)%





;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_29(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用
;4	拘束フラグ２

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF
LOCAL:4 = 0
IF DA:(ARG:0):10 == 1
	;１人目拘束
	LOCAL:4 = 1
ELSEIF FLAG:10 && DA:(ARG:0):10 == FLAG:10
	;２人目拘束
	LOCAL:4 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):10 == FLAG:11
	;３人目拘束
	LOCAL:4 = FLAG:11
ELSEIF DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:4 = -1
ENDIF


IF LOCAL:1 > 0 || LOCAL:4 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には枠が無ければ拘束攻撃以外
	IF ARG:1 == LOCAL:1 || ARG:1 == LOCAL:4
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 40
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			IF DA:(ARG:0):35
				LOCAL:3 = RAND:7
				IF LOCAL:3 < 5
					LOCAL:2 = 634
				ELSEIF LOCAL:3 < 6
					LOCAL:2 = 1011
				ELSE
					LOCAL:2 = 635
				ENDIF
			ELSE
				LOCAL:3 = RAND:23
				IF LOCAL:3 < 9
					LOCAL:2 = 634
				ELSEIF LOCAL:3 < 15
					LOCAL:2 = 635
				ELSEIF LOCAL:3 < 16
					LOCAL:2 = 1011
				ELSEIF LOCAL:3 < 17
					LOCAL:2 = 1025
				ELSE
					LOCAL:2 = 819
				ENDIF
			ENDIF
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 70)
			LOCAL:3 = RAND:15
		ELSE
			LOCAL:3 = RAND:20
		ENDIF
		IF LOCAL:3 < 2
			LOCAL:2 = 103
		ELSEIF LOCAL:3 < 10
			LOCAL:2 = 334
		ELSE
			LOCAL:2 = 335
		ENDIF
	ENDIF
ELSE
	;通常時
	IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 70)
		LOCAL:3 = RAND:15
	ELSE
		IF BASE:(ARG:1):0 < MAXBASE:(ARG:1):0 / 2 || BASE:(ARG:1):2 < MAXBASE:(ARG:1):2 * 2 / 3
			LOCAL:3 = RAND:21
		ELSE
			LOCAL:3 = RAND:20
		ENDIF
	ENDIF
	IF LOCAL:3 < 11
		LOCAL:2 = 103
	ELSEIF LOCAL:3 < 15
		LOCAL:2 = 334
	ELSEIF LOCAL:3 < 19
		LOCAL:2 = 335
	ELSE
		LOCAL:2 = 538
	ENDIF
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


