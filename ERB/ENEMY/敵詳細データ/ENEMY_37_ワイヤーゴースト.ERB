;ARG:1	Reserved
@SET_ENEMY_DATA_37(ARG:0, ARG:1)

DA:(ARG:0):1 = 3000
DA:(ARG:0):2 = 3000
DA:(ARG:0):3 = 1
DA:(ARG:0):5 = 50
DA:(ARG:0):9 = 50

DA:(ARG:0):15 = 80
DA:(ARG:0):16 = 0
DA:(ARG:0):17 = 20
DA:(ARG:0):18 = 80
DA:(ARG:0):19 = 10

;実体攻撃に強め
DA:(ARG:0):42 = 80
DA:(ARG:0):44 = 80

;図鑑用触手データ
DA:(ARG:0):85 = 1
DA:(ARG:0):86 = 2
DA:(ARG:0):89 = 63

IF RAND:2 == 0
	DA:(ARG:0):88 = 1
ENDIF

SAVESTR:(ARG:0) = %ENEMY_NAME(37)%

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_37(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 40
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:22
			IF LOCAL:3 < 4
				LOCAL:2 = 1911
			ELSEIF LOCAL:3 < 10
				LOCAL:2 = 961
			ELSEIF LOCAL:3 < 15
				LOCAL:2 = 1051
			ELSEIF LOCAL:3 < 17
				LOCAL:2 = 1058
			ELSE
				LOCAL:2 = 964
			ENDIF
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:21
		IF LOCAL:3 < 8
			LOCAL:2 = 2101
		ELSEIF LOCAL:3 < 16
			LOCAL:2 = 2114
		ELSE
			LOCAL:2 = 2211
		ENDIF
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:21
	IF LOCAL:3 < 8
			LOCAL:2 = 2101
		ELSEIF LOCAL:3 < 16
			LOCAL:2 = 2114
		ELSE
			LOCAL:2 = 2211
		ENDIF
ELSE
	;通常時
	;色々
	IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 70)
		LOCAL:3 = RAND:29
	ELSE
		IF BASE:(ARG:1):0 < MAXBASE:(ARG:1):0 / 2 || BASE:(ARG:1):2 < MAXBASE:(ARG:1):2 * 2 / 3
			LOCAL:3 = RAND:28
		ELSE
			LOCAL:3 = RAND:26
		ENDIF
	ENDIF
	
	;●相手速度低下時
	IF CFLAG:(ARG:1):300 && LOCAL:3 < 7
		LOCAL:3 = 7 + RAND:22
	ENDIF
	
	IF LOCAL:3 < 7
		LOCAL:2 = 1900
	ELSEIF LOCAL:3 < 8
		LOCAL:2 = 359
	ELSEIF LOCAL:3 < 9
		LOCAL:2 = 373
	ELSEIF LOCAL:3 < 10
		LOCAL:2 = 374
	ELSEIF LOCAL:3 < 11
		LOCAL:2 = 375
	ELSEIF LOCAL:3 < 12
		LOCAL:2 = 377
	ELSEIF LOCAL:3 < 14
		LOCAL:2 = 2306
	ELSEIF LOCAL:3 < 16
		LOCAL:2 = 2101
	ELSEIF LOCAL:3 < 18
		LOCAL:2 = 2114
	ELSEIF LOCAL:3 < 20
		LOCAL:2 = 2211
	ELSEIF LOCAL:3 < 22
		LOCAL:2 = 962
	ELSEIF LOCAL:3 < 24
		LOCAL:2 = 1080
	ELSE
		LOCAL:2 = 963
	ENDIF
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


