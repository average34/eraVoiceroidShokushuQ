;敵データ設定
;ARG:0	設定場所
;ARG:1	元キャラのID
@SET_ENEMY_DATA_73(ARG:0, ARG:1)

;簡易悪堕ちだった場合
IF ARG:1 > 0 && FLAG:2000 == 1
	DA:(ARG:0):1 = ABL:(ARG:1):98 * 100 + 9000
	DA:(ARG:0):2 = ABL:(ARG:1):98 * 100 + 9000
	DA:(ARG:0):3 = 1
	DA:(ARG:0):5 = 90 + ABL:(ARG:1):98 / 3
	DA:(ARG:0):9 = 80 + ABL:(ARG:1):97 / 3
	;●入れ替わりパッチ追加START
	DA:(ARG:0):49 = CFLAG:(ARG:1):104
	;●END
	;念のため元キャラのIDを残しておく
	DA:(ARG:0):46 = ARG:1
	;転生組である旨を記録
	DA:(FLAG:1):99=2

	;「パツィ」とか「ルーイ」では意味不明になりそうなので苦肉の策
	SAVESTR:(ARG:0) = %CALLNAME:(ARG:1)%リップ

	;元キャラがダミーデータの場合パス　バグ対策
	SIF ARG:1 == 0 || FLAG:997 == 81
		RETURN
;出産または通常湧きの場合
ELSE
	DA:(ARG:0):1 = 9000
	DA:(ARG:0):2 = 9000
	DA:(ARG:0):3 = 1
	DA:(ARG:0):5 = 90
	DA:(ARG:0):9 = 80
	SAVESTR:(ARG:0) = %ENEMY_NAME(73)%
ENDIF

DA:(ARG:0):15 = 0
DA:(ARG:0):16 = 20
DA:(ARG:0):17 = 80
DA:(ARG:0):18 = 90
DA:(ARG:0):19 = 30


;図鑑用触手データ
DA:(ARG:0):85 = 1
DA:(ARG:0):86 = 5
DA:(ARG:0):89 = 32

DA:(ARG:0):88 = 1


;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_73(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		;既に戦意喪失している場合だろうと開放しないキス魔
		LOCAL:3 = RAND:15
		IF LOCAL:3 < 2
			LOCAL:2 = 978
		ELSEIF LOCAL:3 < 4
			LOCAL:2 = 979
		ELSEIF LOCAL:3 < 6
			LOCAL:2 = 980
		ELSEIF LOCAL:3 < 8
			LOCAL:2 = 981
		ELSEIF LOCAL:3 < 10
			LOCAL:2 = 767
		ELSEIF LOCAL:3 < 12
			LOCAL:2 = 768
		ELSE
			LOCAL:2 = 769
		ENDIF
		
		;フラートだと高火力攻撃
		IF DA:(ARG:0):35
			LOCAL:2 = 770
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:2 = 0
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合離す
	LOCAL:2 = 1
ELSE
	;通常時
	LOCAL:3 = RAND:15
	IF LOCAL:3 < 6
		LOCAL:2 = 540
	ELSE
		LOCAL:2 = 978
	ENDIF
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


