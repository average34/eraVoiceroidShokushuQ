;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_95(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 40
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:21
			SELECTCASE LOCAL:3
				CASE 0 TO 3
					LOCAL:2 = 1887
				CASE 4 TO 10
					LOCAL:2 = 1889
				CASE 11
					LOCAL:2 = 1003
				CASE 12
					LOCAL:2 = 979
				CASE 13
					LOCAL:2 = 981
				CASE 14
					LOCAL:2 = 1006
				CASE 15
					LOCAL:2 = 1007
				CASE 16
					LOCAL:2 = 1008
				CASE 17 TO 18
					LOCAL:2 = 1018
				CASE 19
					LOCAL:2 = 1019
				CASEELSE
					LOCAL:2 = 831
			ENDSELECT
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:27
		SELECTCASE LOCAL:3
			CASE 0 TO 5
				LOCAL:2 = 237
			CASE 6 TO 10
				LOCAL:2 = 1885
			CASE 11 TO 18
				LOCAL:2 = 1888
			CASEELSE
				LOCAL:2 = 147
		ENDSELECT
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:27
	SELECTCASE LOCAL:3
		CASE 0 TO 5
			LOCAL:2 = 237
		CASE 6 TO 10
			LOCAL:2 = 1885
		CASE 11 TO 18
			LOCAL:2 = 1888
		CASEELSE
			LOCAL:2 = 147
	ENDSELECT
ELSE
	;通常時
	;色々
	IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 70)
		LOCAL:3 = RAND:27
	ELSE
		IF BASE:(ARG:1):0 < MAXBASE:(ARG:1):0 / 2 || BASE:(ARG:1):2 < MAXBASE:(ARG:1):2 * 2 / 3
			LOCAL:3 = RAND:38
		ELSE
			LOCAL:3 = RAND:33
		ENDIF
	ENDIF
	SELECTCASE LOCAL:3
		CASE 0 TO 10
			LOCAL:2 = 147
		CASE 11 TO 17
			LOCAL:2 = 237
		CASE 18 TO 21
			LOCAL:2 = 1885
		CASE 22 TO 24
			LOCAL:2 = 1888
		CASE 25 TO 27
			LOCAL:2 = 1080
		CASEELSE
			LOCAL:2 = 549
	ENDSELECT
ENDIF




;ここまで来たら確定
