SAVESTR:(ARG:0) = %ENEMY_NAME(48)%

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_48(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 4
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:20
			SELECTCASE LOCAL:3
				CASE 0 TO 1
					LOCAL:2 = 638
				CASE 2 TO 3
					LOCAL:2 = 639
				CASE 4 TO 7
					LOCAL:2 = 640
				CASE 8 TO 9
					LOCAL:2 = 641
				CASE 10
					LOCAL:2 = 1000
				CASE 11
					LOCAL:2 = 985
				CASE 12
					LOCAL:2 = 1007
				CASE 13
					LOCAL:2 = 1008
				CASE 14
					LOCAL:2 = 1011
				CASE 15
					LOCAL:2 = 1024
				CASE 16
					LOCAL:2 = 1025
				CASE 17
					LOCAL:2 = 2959
				CASEELSE
					LOCAL:2 = 821
			ENDSELECT
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:15
		SELECTCASE LOCAL:3
		CASE 0 TO 1
			LOCAL:2 = 121
		CASE 2 TO 3
			LOCAL:2 = 122
		CASE 4 TO 5
			LOCAL:2 = 221
		CASE 6
			LOCAL:2 = 338
		CASE 7
			LOCAL:2 = 339
		CASE 8
			LOCAL:2 = 340
		CASE 9
			LOCAL:2 = 341
		CASE 10
			LOCAL:2 = 2116
		CASE 11
			LOCAL:2 = 2214
		CASE 12
			LOCAL:2 = 2311
		CASEELSE
			LOCAL:2 = 392
		ENDSELECT
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:14
	SELECTCASE LOCAL:3
		CASE 0 TO 1
			LOCAL:2 = 121
		CASE 2 TO 3
			LOCAL:2 = 122
		CASE 4 TO 5
			LOCAL:2 = 221
		CASE 6
			LOCAL:2 = 338
		CASE 7
			LOCAL:2 = 339
		CASE 8
			LOCAL:2 = 340
		CASE 9
			LOCAL:2 = 341
		CASE 10
			LOCAL:2 = 2116
		CASE 11
			LOCAL:2 = 2214
		CASE 12
			LOCAL:2 = 2311
		CASEELSE
			LOCAL:2 = 392
	ENDSELECT
ELSE
	;通常時
	;色々
	IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 70)
		LOCAL:3 = RAND:15
	ELSE
		IF BASE:(ARG:1):0 < MAXBASE:(ARG:1):0 / 2 || BASE:(ARG:1):2 < MAXBASE:(ARG:1):2 * 2 / 3
			LOCAL:3 = RAND:22
		ELSE
			LOCAL:3 = RAND:18
		ENDIF
	ENDIF
	SELECTCASE LOCAL:3
		CASE 0 TO 1
			LOCAL:2 = 121
		CASE 2 TO 4
			LOCAL:2 = 122
		CASE 5 TO 6
			LOCAL:2 = 221
		CASE 7
			LOCAL:2 = 338
		CASE 8
			LOCAL:2 = 339
		CASE 9
			LOCAL:2 = 340
		CASE 10
			LOCAL:2 = 341
		CASE 11
			LOCAL:2 = 392
		CASE 12
			LOCAL:2 = 2116
		CASE 13
			LOCAL:2 = 2214
		CASE 14
			LOCAL:2 = 2311
		CASEELSE
			LOCAL:2 = 521
	ENDSELECT
ENDIF


;ＡＩ補助

IF DA:(ARG:0):96 == 1
	SELECTCASE RAND:2
		CASE 0
			LOCAL:2 = 122
		CASE 1
			LOCAL:2 = 2116
	ENDSELECT
ELSEIF DA:(ARG:0):96 == 2
	LOCAL:2 = 2214
ELSEIF DA:(ARG:0):96 == 3
	;拘束判定
	IF LOCAL:1 > 0
		SELECTCASE RAND:3
			CASE 0
				LOCAL:2 = 638 + RAND:2
			CASE 1
				LOCAL:2 = 2959
			CASE 2
				LOCAL:2 = 2959
		ENDSELECT
	ELSE
		SELECTCASE RAND:3
			CASE 0
				LOCAL:2 = 392
			CASE 1
				LOCAL:2 = 338 + RAND:2
			CASE 2
				LOCAL:2 = 2311
		ENDSELECT
	ENDIF
ELSEIF DA:(ARG:0):96 == 4
	LOCAL:2 = 521
ELSEIF DA:(ARG:0):96 == 5
	LOCAL:2 = 821
ELSEIF DA:(ARG:0):96 == 6
	;LOCAL:2 = 11
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


