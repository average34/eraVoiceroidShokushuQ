DA:(ARG:0):2 = 15000
DA:(ARG:0):3 = 1
DA:(ARG:0):5 = 120
DA:(ARG:0):9 = 20

DA:(ARG:0):15 = 0
DA:(ARG:0):16 = 60
DA:(ARG:0):17 = 40
DA:(ARG:0):18 = 120
DA:(ARG:0):19 = 20

DA:(ARG:0):14 = 30
DA:(ARG:0):43 = 90

;図鑑用触手データ
DA:(ARG:0):85 = 17
DA:(ARG:0):86 = 6
DA:(ARG:0):89 = 39

IF RAND:2 == 0
	DA:(ARG:0):88 = 0
ELSE
	DA:(ARG:0):88 = 1
