;敵データ設定
;ARG:0	設定場所
;ARG:1	元キャラのID
@SET_ENEMY_DATA_85(ARG:0, ARG:1)

;簡易悪堕ちだった場合
IF ARG:1 > 0 && FLAG:2000 == 1
	DA:(ARG:0):1 = ABL:(ARG:1):98 * 100 + 10000
	DA:(ARG:0):2 = ABL:(ARG:1):98 * 100 + 10000
	DA:(ARG:0):3 = 1
	DA:(ARG:0):5 = 60 + ABL:(ARG:1):98 / 2
	DA:(ARG:0):9 = 80 + ABL:(ARG:1):97 / 3
	;●入れ替わりパッチ追加START
	DA:(ARG:0):49 = CFLAG:(ARG:1):104
	;●END
	;念のため元キャラのIDを残しておく
	DA:(ARG:0):46 = ARG:1
	;悪堕ち組(会話不能)である旨を記録
	DA:(FLAG:1):99=1

	SAVESTR:(ARG:0) = マミー%CALLNAME:(ARG:1)%
	;元キャラがダミーデータの場合パス　バグ対策
	SIF ARG:1 == 0 || FLAG:997 == 81
		RETURN
;出産または通常湧きの場合
ELSE
	DA:(ARG:0):1 = 10000
	DA:(ARG:0):2 = 10000
	DA:(ARG:0):3 = 1
	DA:(ARG:0):5 = 60
	DA:(ARG:0):9 = 80
	SAVESTR:(ARG:0) = %ENEMY_NAME(85)%
ENDIF


