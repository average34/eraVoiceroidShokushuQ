;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_74(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		;既に戦意喪失している場合でも開放しない
			LOCAL:3 = RAND:22
			IF LOCAL:3 < 4
				LOCAL:2 = 45
			ELSEIF LOCAL:3 < 8
				LOCAL:2 = 46
			ELSEIF LOCAL:3 < 10
				LOCAL:2 = 182
			ELSEIF LOCAL:3 < 13
				LOCAL:2 = 756
			ELSEIF LOCAL:3 < 16
				LOCAL:2 = 757
			ELSEIF LOCAL:3 < 18
				LOCAL:2 = 1057
			ELSE
				LOCAL:2 = 863
			ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:20
		IF LOCAL:3 < 4
			LOCAL:2 = 45
		ELSEIF LOCAL:3 < 8
			LOCAL:2 = 46
		ELSEIF LOCAL:3 < 10
			LOCAL:2 = 182
		ELSEIF LOCAL:3 < 13
			LOCAL:2 = 756
		ELSEIF LOCAL:3 < 16
			LOCAL:2 = 757
		ELSE
			LOCAL:2 = 955
		ENDIF
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:20
	IF LOCAL:3 < 4
		LOCAL:2 = 45
	ELSEIF LOCAL:3 < 8
		LOCAL:2 = 46
	ELSEIF LOCAL:3 < 10
		LOCAL:2 = 182
	ELSEIF LOCAL:3 < 13
		LOCAL:2 = 756
	ELSEIF LOCAL:3 < 16
		LOCAL:2 = 757
	ELSE
		LOCAL:2 = 955
	ENDIF
ELSE
	;通常時
	;色々
	LOCAL:3 = RAND:24
	IF LOCAL:3 < 4
		LOCAL:2 = 45
	ELSEIF LOCAL:3 < 8
		LOCAL:2 = 46
	ELSEIF LOCAL:3 < 10
		LOCAL:2 = 182
	ELSEIF LOCAL:3 < 13
		LOCAL:2 = 572
	ELSEIF LOCAL:3 < 16
		LOCAL:2 = 756
	ELSEIF LOCAL:3 < 20
		LOCAL:2 = 757
	ELSE
		LOCAL:2 = 955
	ENDIF
ENDIF

