;敵データ設定
;ARG:0	設定場所
;ARG:1	元キャラのID
@SET_ENEMY_DATA_102(ARG:0, ARG:1)

;戦闘力は通常の悪堕ちより弱化する場合あり、代わりに耐久力超強化
DA:(ARG:0):3 = 1
DA:(ARG:0):5 = ABL:(ARG:1):98 + 100
DA:(ARG:0):9 = ABL:(ARG:1):97 / 3 + 10
DA:(ARG:0):1 = DA:(ARG:0):5 * 200 + 5000
DA:(ARG:0):2 = DA:(ARG:0):5 * 200 + 5000
;念のため元キャラのIDを残しておく
DA:(ARG:0):46 = ARG:1

;図鑑用触手データ
DA:(ARG:0):85 = 1
DA:(ARG:0):86 = 7
DA:(ARG:0):89 = 15

DA:(ARG:0):88 = 1

;●入れ替わりパッチ追加START
DA:(ARG:0):49 = CFLAG:(ARG:1):104
;●END

DA:(ARG:0):15 = 30
DA:(ARG:0):16 = 40
DA:(ARG:0):17 = 30
DA:(ARG:0):18 = 100
DA:(ARG:0):19 = 30

	;正直言って入れ替わりパッチがよく分からぬ
	SAVESTR:(ARG:0) = 触手姫%CALLNAME:(ARG:1)%



;元キャラがダミーデータの場合パス　バグ対策
SIF ARG:1 == 0 || FLAG:997 == 81
	RETURN


DA:(ARG:0):1 = DA:(ARG:0):2

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_102(ARG:0, ARG:1)
#DIM 拘束NF,100	;変数番号→拘束後にNFされたキャラID、格納数→NF進行度
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用
;4	拘束フラグ２

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF
LOCAL:4 = 0
IF DA:(ARG:0):10 == 1
	;１人目拘束
	LOCAL:4 = 1
ELSEIF FLAG:10 && DA:(ARG:0):10 == FLAG:10
	;２人目拘束
	LOCAL:4 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):10 == FLAG:11
	;３人目拘束
	LOCAL:4 = FLAG:11
ELSEIF DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:4 = -1
ENDIF


IF LOCAL:1 > 0 || LOCAL:4 > 0
	;前ターンでNFされ、今ターン開始時点でNFされた敵に拘束されたまま
	IF DA:(ARG:0):50 == 1201 && DA:(ARG:0):20 == LOCAL:1
		ARG:1 = LOCAL:1
		拘束NF:(ARG:0) = 2
	ELSEIF DA:(ARG:0):50 == 1201 && DA:(ARG:0):20 == LOCAL:4
		ARG:1 = LOCAL:4
		拘束NF:(ARG:0) = 2
	ELSE
		拘束NF:(ARG:0) = 0
	ENDIF
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には枠が無ければ拘束攻撃以外
	IF ARG:1 == LOCAL:1 || ARG:1 == LOCAL:4
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 40
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:30
			IF LOCAL:3 < 2
				LOCAL:2 = 746
			ELSEIF LOCAL:3 < 4
				TRYCALL CALC_NIPPLE_FUCK(ARG:1, 3)
				IF RESULT:0 == 1
					LOCAL:2 = 1201
					;B寄生攻撃は拡張乳腺+以上が必要
					IF FLAG:516 > 0 && TALENT:(ARG:1):162 > 1
						SIF 拘束NF:(ARG:1) == 0
							拘束NF:(ARG:1) = 1
					ENDIF
				ELSE
					LOCAL:2 = 747
				ENDIF
			ELSEIF LOCAL:3 < 6
				LOCAL:2 = 609
			ELSEIF LOCAL:3 < 8
				LOCAL:2 = 748
			ELSEIF LOCAL:3 < 9
				LOCAL:2 = 749
			ELSEIF LOCAL:3 < 11
				LOCAL:2 = 1013
			ELSEIF LOCAL:3 < 13
				LOCAL:2 = 1014
			ELSEIF LOCAL:3 < 15
				LOCAL:2 = 1015
			ELSEIF LOCAL:3 < 17
				;悪堕ち前の素質で技変化
				IF TALENT:(DA:(ARG:0):46):215
					LOCAL:2 = 1021
				ELSEIF TALENT:(DA:(ARG:0):46):114
					LOCAL:2 = 1022
				ELSE
					LOCAL:2 = 1016
				ENDIF
			ELSE
				LOCAL:2 = 865
			ENDIF
		ENDIF
		;B寄生攻撃フラグ
		IF 拘束NF:(ARG:0) == 2
			LOCAL:2 = 1202
			拘束NF:(ARG:0) = 0
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 70)
			LOCAL:3 = RAND:12
		ELSE
			LOCAL:3 = RAND:15
		ENDIF
		IF LOCAL:3 < 2
			LOCAL:2 = 174
		ELSEIF LOCAL:3 < 4
			LOCAL:2 = 175
		ELSEIF LOCAL:3 < 6
			LOCAL:2 = 261
		ELSEIF LOCAL:3 < 8
			LOCAL:2 = 262
		ELSEIF LOCAL:3 < 9
			LOCAL:2 = 307
		ELSEIF LOCAL:3 < 10
			LOCAL:2 = 308
		ELSEIF LOCAL:3 < 11
			LOCAL:2 = 309
		ELSEIF LOCAL:3 < 12
			LOCAL:2 = 310
		ELSEIF LOCAL:3 < 14
			LOCAL:2 = 504
		ELSE
			LOCAL:2 = 569
		ENDIF
	ENDIF
ELSE
	;通常時
	IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 70)
		LOCAL:3 = RAND:12
	ELSE
		IF BASE:(ARG:1):0 < MAXBASE:(ARG:1):0 / 2 || BASE:(ARG:1):2 < MAXBASE:(ARG:1):2 * 2 / 3
			LOCAL:3 = RAND:16
		ELSE
			LOCAL:3 = RAND:15
		ENDIF
	ENDIF
		IF LOCAL:3 < 2
			LOCAL:2 = 174
		ELSEIF LOCAL:3 < 4
			LOCAL:2 = 175
		ELSEIF LOCAL:3 < 6
			LOCAL:2 = 261
		ELSEIF LOCAL:3 < 8
			LOCAL:2 = 262
		ELSEIF LOCAL:3 < 9
			LOCAL:2 = 307
		ELSEIF LOCAL:3 < 10
			LOCAL:2 = 308
		ELSEIF LOCAL:3 < 11
			LOCAL:2 = 309
		ELSEIF LOCAL:3 < 12
			LOCAL:2 = 310
		ELSEIF LOCAL:3 < 13
			LOCAL:2 = 504
		ELSE
			LOCAL:2 = 569
		ENDIF
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


