DA:(ARG:0):89 = 3

SAVESTR:(ARG:0) = %ENEMY_NAME(27)%

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_27(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 20
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:15
			IF LOCAL:3 < 3
				LOCAL:2 = 651
			ELSEIF LOCAL:3 < 6
				LOCAL:2 = 652
			ELSEIF LOCAL:3 < 9
				LOCAL:2 = 653
			ELSEIF LOCAL:3 < 11
				LOCAL:2 = 827
			ELSEIF LOCAL:3 < 12
				LOCAL:2 = 1011
			ELSEIF LOCAL:3 < 13
				LOCAL:2 = 1026
			ELSE
				LOCAL:2 = 828
			ENDIF
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:19
		IF LOCAL:3 < 2
			LOCAL:2 = 127
		ELSEIF LOCAL:3 < 4
			LOCAL:2 = 128
		ELSEIF LOCAL:3 < 8
			LOCAL:2 = 227
		ELSEIF LOCAL:3 < 11
			LOCAL:2 = 228
		ELSEIF LOCAL:3 < 13
			LOCAL:2 = 351
		ELSEIF LOCAL:3 < 15
			LOCAL:2 = 352
		ELSEIF LOCAL:3 < 17
			LOCAL:2 = 353
		ELSE
			LOCAL:2 = 354
		ENDIF
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:20
	IF LOCAL:3 < 2
		LOCAL:2 = 127
	ELSEIF LOCAL:3 < 4
		LOCAL:2 = 128
	ELSEIF LOCAL:3 < 8
		LOCAL:2 = 227
	ELSEIF LOCAL:3 < 11
		LOCAL:2 = 228
	ELSEIF LOCAL:3 < 13
		LOCAL:2 = 351
	ELSEIF LOCAL:3 < 15
		LOCAL:2 = 352
	ELSEIF LOCAL:3 < 17
		LOCAL:2 = 353
	ELSEIF LOCAL:3 < 18
		LOCAL:2 = 354
	ELSE
		LOCAL:2 = 990
	ENDIF
ELSE
	;通常時
	;色々
	LOCAL:3 = RAND:23
	IF LOCAL:3 < 2
		LOCAL:2 = 127
	ELSEIF LOCAL:3 < 4
		LOCAL:2 = 128
	ELSEIF LOCAL:3 < 8
		LOCAL:2 = 227
	ELSEIF LOCAL:3 < 11
		LOCAL:2 = 228
	ELSEIF LOCAL:3 < 13
		LOCAL:2 = 351
	ELSEIF LOCAL:3 < 15
		LOCAL:2 = 352
	ELSEIF LOCAL:3 < 17
		LOCAL:2 = 353
	ELSEIF LOCAL:3 < 19
		LOCAL:2 = 354
	ELSEIF LOCAL:3 < 20
		LOCAL:2 = 990
	ELSE
		LOCAL:2 = 527
	ENDIF
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


