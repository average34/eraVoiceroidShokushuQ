;敵データ設定
;ARG:0	設定場所
;ARG:1	元キャラのID
@SET_ENEMY_DATA_26(ARG:0, ARG:1)

;簡易悪堕ちだった場合
IF ARG:1 > 0 && FLAG:2000 == 1
	DA:(ARG:0):1 = ABL:(ARG:1):98 * 100 + 8000
	DA:(ARG:0):2 = ABL:(ARG:1):98 * 100 + 8000
	DA:(ARG:0):3 = 1
	DA:(ARG:0):5 = 50 + ABL:(ARG:1):98 / 3
	DA:(ARG:0):9 = 100 + ABL:(ARG:1):97 / 3
	;●入れ替わりパッチ追加START
	DA:(ARG:0):49 = CFLAG:(ARG:1):104
	;●END
	;念のため元キャラのIDを残しておく
	DA:(ARG:0):46 = ARG:1
	;悪堕ち組(会話不能)である旨を記録
	DA:(FLAG:1):99=1
	SAVESTR:(ARG:0) = ドール%CALLNAME:(ARG:1)%
	;元キャラがダミーデータの場合パス　バグ対策
	SIF ARG:1 == 0 || FLAG:997 == 81
		RETURN
;出産または通常湧きの場合
ELSE
	DA:(ARG:0):1 = 8000
	DA:(ARG:0):2 = 8000
	DA:(ARG:0):3 = 1
	DA:(ARG:0):5 = 50
	DA:(ARG:0):9 = 100
	SAVESTR:(ARG:0) = %ENEMY_NAME(26)%
ENDIF



DA:(ARG:0):15 = 80
DA:(ARG:0):16 = 10
DA:(ARG:0):17 = 10
DA:(ARG:0):18 = 80
DA:(ARG:0):19 = 10

;図鑑用触手データ
DA:(ARG:0):85 = 32
DA:(ARG:0):86 = 4
DA:(ARG:0):89 = 43



;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_26(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 30
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:15
			IF LOCAL:3 < 2
				LOCAL:2 = 611
			ELSEIF LOCAL:3 < 4
				LOCAL:2 = 634
			ELSEIF LOCAL:3 < 6
				LOCAL:2 = 660
			ELSEIF LOCAL:3 < 8
				LOCAL:2 = 664
			ELSEIF LOCAL:3 < 10
				LOCAL:2 = 674
			ELSEIF LOCAL:3 < 12
				LOCAL:2 = 1884
			ELSEIF LOCAL:3 < 13
				LOCAL:2 = 979
			ELSE
				LOCAL:2 = 815
			ENDIF
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:14
		;●
		IF DA:(ARG:0):35 > 0
			LOCAL:3 = RAND:4 + 10
		ENDIF

		IF LOCAL:3 < 5
			LOCAL:2 = 21
		ELSEIF LOCAL:3 < 10
			LOCAL:2 = 359
		ELSEIF LOCAL:3 < 11
			LOCAL:2 = 374
		ELSEIF LOCAL:3 < 12
			LOCAL:2 = 375
		ELSEIF LOCAL:3 < 13
			LOCAL:2 = 359
		ELSE
			LOCAL:2 = 373
		ENDIF
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外


	LOCAL:3 = RAND:14
	;●
	IF DA:(ARG:0):35 > 0
		LOCAL:3 = RAND:4 + 10
	ENDIF

	IF LOCAL:3 < 5
		LOCAL:2 = 21
	ELSEIF LOCAL:3 < 10
		LOCAL:2 = 359
	ELSEIF LOCAL:3 < 11
		LOCAL:2 = 374
	ELSEIF LOCAL:3 < 12
		LOCAL:2 = 375
	ELSE
		LOCAL:2 = 373
	ENDIF
ELSE
	;通常時
	;色々
	IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 40)
		LOCAL:3 = RAND:16
	ELSE
		IF BASE:(ARG:1):0 < MAXBASE:(ARG:1):0 / 2 || BASE:(ARG:1):2 < MAXBASE:(ARG:1):2 * 2 / 3
			LOCAL:3 = RAND:21
		ELSE
			LOCAL:3 = RAND:18
		ENDIF
	ENDIF
	;●
	IF DA:(ARG:0):35 > 0
		LOCAL:3 = RAND:8 + 10
	ENDIF


	IF LOCAL:3 < 5
		LOCAL:2 = 21
	ELSEIF LOCAL:3 < 10
		LOCAL:2 = 359
	ELSEIF LOCAL:3 < 11
		LOCAL:2 = 374
	ELSEIF LOCAL:3 < 12
		LOCAL:2 = 375
	ELSEIF LOCAL:3 < 14
		LOCAL:2 = 373
	ELSEIF LOCAL:3 < 16
		LOCAL:2 = 1080
	ELSE
		LOCAL:2 = 540
	ENDIF
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
