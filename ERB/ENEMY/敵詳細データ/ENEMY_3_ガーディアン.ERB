;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_3(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用
;4	拘束フラグ２

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF
LOCAL:4 = 0
IF DA:(ARG:0):10 == 1
	;１人目拘束
	LOCAL:4 = 1
ELSEIF FLAG:10 && DA:(ARG:0):10 == FLAG:10
	;２人目拘束
	LOCAL:4 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):10 == FLAG:11
	;３人目拘束
	LOCAL:4 = FLAG:11
ELSEIF DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:4 = -1
ENDIF


IF LOCAL:1 > 0 || LOCAL:4 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には枠が無ければ拘束攻撃以外
	IF ARG:1 == LOCAL:1 || ARG:1 == LOCAL:4
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 40
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:28
			IF LOCAL:3 < 3
				LOCAL:2 = 611
			ELSEIF LOCAL:3 < 6
				LOCAL:2 = 612
			ELSEIF LOCAL:3 < 9
				LOCAL:2 = 613
			ELSEIF LOCAL:3 < 12
				LOCAL:2 = 614
			ELSEIF LOCAL:3 < 15
				LOCAL:2 = 615
			ELSEIF LOCAL:3 < 17
				LOCAL:2 = 806
			ELSEIF LOCAL:3 < 19
				LOCAL:2 = 807
			ELSEIF LOCAL:3 < 21
				LOCAL:2 = 986
			ELSEIF LOCAL:3 < 23
				LOCAL:2 = 987
			ELSEIF LOCAL:3 < 25
				LOCAL:2 = 1023
			ELSE
				LOCAL:2 = 16
			ENDIF
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 70)
			LOCAL:3 = RAND:18
		ELSE
			LOCAL:3 = RAND:24
		ENDIF
		IF LOCAL:3 < 2
			LOCAL:2 = 106
		ELSEIF LOCAL:3 < 4
			LOCAL:2 = 107
		ELSEIF LOCAL:3 < 6
			LOCAL:2 = 108
		ELSEIF LOCAL:3 < 9
			LOCAL:2 = 206
		ELSEIF LOCAL:3 < 11
			LOCAL:2 = 207
		ELSEIF LOCAL:3 < 12
			LOCAL:2 = 311
		ELSEIF LOCAL:3 < 13
			LOCAL:2 = 312
		ELSEIF LOCAL:3 < 14
			LOCAL:2 = 313
		ELSEIF LOCAL:3 < 15
			LOCAL:2 = 314
		ELSEIF LOCAL:3 < 16
			LOCAL:2 = 315
		ELSEIF LOCAL:3 < 18
			LOCAL:2 = 316
		ELSEIF LOCAL:3 < 20
			LOCAL:2 = 506
		ELSEIF LOCAL:3 < 22
			LOCAL:2 = 507
		ELSE
			LOCAL:2 = 508
		ENDIF
	ENDIF
ELSE
	;通常時
	IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 70)
		LOCAL:3 = RAND:18
	ELSE
		IF BASE:(ARG:1):0 < MAXBASE:(ARG:1):0 / 2 || BASE:(ARG:1):2 < MAXBASE:(ARG:1):2 * 2 / 3
			LOCAL:3 = RAND:27
		ELSE
			LOCAL:3 = RAND:25
		ENDIF
	ENDIF
	IF LOCAL:3 < 2
		LOCAL:2 = 106
	ELSEIF LOCAL:3 < 4
		LOCAL:2 = 107
	ELSEIF LOCAL:3 < 6
		LOCAL:2 = 108
	ELSEIF LOCAL:3 < 9
		LOCAL:2 = 206
	ELSEIF LOCAL:3 < 11
		LOCAL:2 = 207
	ELSEIF LOCAL:3 < 12
		LOCAL:2 = 311
	ELSEIF LOCAL:3 < 13
		LOCAL:2 = 312
	ELSEIF LOCAL:3 < 14
		LOCAL:2 = 313
	ELSEIF LOCAL:3 < 15
		LOCAL:2 = 314
	ELSEIF LOCAL:3 < 16
		LOCAL:2 = 315
	ELSEIF LOCAL:3 < 18
		LOCAL:2 = 316
	ELSEIF LOCAL:3 < 20
		LOCAL:2 = 506
	ELSEIF LOCAL:3 < 23
		LOCAL:2 = 507
	ELSE
		LOCAL:2 = 508
	ENDIF
ENDIF

