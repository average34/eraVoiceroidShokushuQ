;敵データ設定
;ARG:0	設定場所
;ARG:1	捕食キャラID
@SET_ENEMY_DATA_4(ARG:0, ARG:1)

DA:(ARG:0):1 = 30000
DA:(ARG:0):2 = 30000
DA:(ARG:0):3 = 1
DA:(ARG:0):5 = 110
DA:(ARG:0):9 = 20

DA:(ARG:0):15 = 0
DA:(ARG:0):16 = 0
DA:(ARG:0):17 = 100
DA:(ARG:0):18 = 100
DA:(ARG:0):19 = 1

;図鑑用触手データ
DA:(ARG:0):85 = 40
DA:(ARG:0):86 = 7

DA:(ARG:0):88 = 1
DA:(ARG:0):89 = 15

IF ARG:1
	SAVESTR:(ARG:0) = %CALLNAME:(ARG:1)%の%ENEMY_NAME(4)%
	;中身ありフラグ
	DA:(ARG:0):87 = ARG:1
ELSE
	SAVESTR:(ARG:0) = %ENEMY_NAME(4)%
ENDIF

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_4(ARG:0, ARG:1)
#DIM 拘束NF,100	;変数番号→拘束後にNFされたキャラID、格納数→NF進行度
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;前ターンでNFされ、今ターン開始時点でNFされた敵に拘束されたまま
	IF DA:(ARG:0):50 == 1201 && DA:(ARG:0):20 == LOCAL:1
		ARG:1 = LOCAL:1
		拘束NF:(ARG:0) = 2
	ELSE
		拘束NF:(ARG:0) = 0
	ENDIF
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 20
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:19
			IF LOCAL:3 < 2
				LOCAL:2 = 617
			ELSEIF LOCAL:3 < 4
				TRYCALL CALC_NIPPLE_FUCK(ARG:1, 3)
				IF RESULT:0 == 1
					LOCAL:2 = 1201
					;B寄生攻撃は拡張乳腺+以上が必要
					IF FLAG:516 > 0 && TALENT:(ARG:1):162 > 1
						SIF 拘束NF:(ARG:1) == 0
							拘束NF:(ARG:1) = 1
					ENDIF
				ELSE
					LOCAL:2 = 618
				ENDIF
			ELSEIF LOCAL:3 < 6
				LOCAL:2 = 619
			ELSEIF LOCAL:3 < 8
				LOCAL:2 = 620
			ELSEIF LOCAL:3 < 11
				LOCAL:2 = 809
			ELSEIF LOCAL:3 < 13
				LOCAL:2 = 1023
			ELSEIF LOCAL:3 < 14
				LOCAL:2 = 1057
			ELSE
				LOCAL:2 = 999
			ENDIF
		ENDIF
		;B寄生攻撃フラグ
		IF 拘束NF:(ARG:0) == 2
			LOCAL:2 = 1202
			拘束NF:(ARG:0) = 0
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:13
		IF LOCAL:3 < 3
			LOCAL:2 = 109
		ELSEIF LOCAL:3 < 5
			LOCAL:2 = 110
		ELSEIF LOCAL:3 < 9
			LOCAL:2 = 209
		ELSEIF LOCAL:3 < 10
			LOCAL:2 = 317
		ELSEIF LOCAL:3 < 11
			LOCAL:2 = 318
		ELSEIF LOCAL:3 < 12
			LOCAL:2 = 319
		ELSE
			LOCAL:2 = 320
		ENDIF
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:13
	IF LOCAL:3 < 3
		LOCAL:2 = 109
	ELSEIF LOCAL:3 < 5
		LOCAL:2 = 110
	ELSEIF LOCAL:3 < 9
		LOCAL:2 = 209
	ELSEIF LOCAL:3 < 10
		LOCAL:2 = 317
	ELSEIF LOCAL:3 < 11
		LOCAL:2 = 318
	ELSEIF LOCAL:3 < 12
		LOCAL:2 = 319
	ELSE
		LOCAL:2 = 320
	ENDIF
ELSE
	;通常時
	;色々
	LOCAL:3 = RAND:16
	IF LOCAL:3 < 3
		LOCAL:2 = 109
	ELSEIF LOCAL:3 < 5
		LOCAL:2 = 110
	ELSEIF LOCAL:3 < 9
		LOCAL:2 = 209
	ELSEIF LOCAL:3 < 10
		LOCAL:2 = 317
	ELSEIF LOCAL:3 < 11
		LOCAL:2 = 318
	ELSEIF LOCAL:3 < 12
		LOCAL:2 = 319
	ELSEIF LOCAL:3 < 13
		LOCAL:2 = 320
	ELSE
		LOCAL:2 = 509
	ENDIF
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


