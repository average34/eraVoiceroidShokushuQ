;敵データ設定
;ARG:0	設定場所
;ARG:1	Reserved
;男傀儡
;結構な確率で拘束してきて、いちど拘束すると高威力のＶやＡ技をガンガン狙ってくる面倒くさい敵
;でも足が遅い
@SET_ENEMY_DATA_53(ARG:0, ARG:1)

DA:(ARG:0):1 = 8000
DA:(ARG:0):2 = 8000
DA:(ARG:0):3 = 1
DA:(ARG:0):5 = 80
DA:(ARG:0):9 = 30

DA:(ARG:0):15 = 80
DA:(ARG:0):16 = 20
DA:(ARG:0):17 = 0
DA:(ARG:0):18 = 65
DA:(ARG:0):19 = 50


DA:(ARG:0):40 = 100
DA:(ARG:0):41 = 100
DA:(ARG:0):43 = 100
DA:(ARG:0):44 = 60

;図鑑用触手データ
DA:(ARG:0):85 = 128
DA:(ARG:0):86 = 4
DA:(ARG:0):89 = 15

SAVESTR:(ARG:0) = %ENEMY_NAME(53)%



;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_53(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		;戦意喪失時は10%で解放
		;ごくごく稀に三段射精
		IF !CFLAG:(ARG:1):29
			LOCAL:3 = RAND:105
			;素質があればNFも含む
			IF TALENT:(ARG:1):162 >= 3 && GET_BUST(ARG:1) >= 1
				LOCAL:3 = RAND:115
			ENDIF
			SELECTCASE LOCAL:3
				CASE 0 TO 19
					LOCAL:2 = 700
				CASE 20 TO 39
					LOCAL:2 = 703
				CASE 40 TO 49
					LOCAL:2 = 701
				CASE 50 TO 59
					LOCAL:2 = 702
				CASE 60 TO 69
					LOCAL:2 = 704
				CASE 70 TO 79
					LOCAL:2 = 705
				CASE 80 TO 94
					LOCAL:2 = 855
				CASE 95 TO 99
					LOCAL:2 = 856
				CASE 100 TO 104
					LOCAL:2 = 1020
				CASEELSE
					LOCAL:2 = 1209
				ENDSELECT
		ELSE
			LOCAL:3 = RAND:110
			SELECTCASE LOCAL:3
				CASE 0 TO 14
					LOCAL:2 = 700
				CASE 15 TO 29
					LOCAL:2 = 703
				CASE 30 TO 39
					LOCAL:2 = 701
				CASE 40 TO 49
					LOCAL:2 = 702
				CASE 50 TO 59
					LOCAL:2 = 704
				CASE 60 TO 69
					LOCAL:2 = 705
				CASE 70 TO 84
					LOCAL:2 = 855
				CASE 85 TO 89
					LOCAL:2 = 856
				CASE 90 TO 95
					LOCAL:2 = 1020
				CASEELSE
					LOCAL:2 = 1
				ENDSELECT
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		;女は好きだがパコパコの邪魔は許さない
		;邪魔者を排除しようとするため、通常時より殴る頻度が高い
		;40%で使用してくる159番は死ねる威力
		LOCAL:3 = RAND:100
		SELECTCASE LOCAL:3
			CASE 0 TO 39
				LOCAL:2 = 158
			CASE 40 TO 79
				LOCAL:2 = 159
			;CVAB
			CASE 80 TO 89
				LOCAL:2 = 399
			CASE 90 TO 99
				LOCAL:2 = 400
		ENDSELECT
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	;40%で使用してくる159番は死ねる威力
		LOCAL:3 = RAND:100
		SELECTCASE LOCAL:3
			CASE 0 TO 39
				LOCAL:2 = 158
			CASE 40 TO 79
				LOCAL:2 = 159
			;CVAB
			CASE 80 TO 89
				LOCAL:2 = 399
			CASE 90 TO 99
				LOCAL:2 = 400
		ENDSELECT
ELSE
	;通常時
	;基本的にパコパコしたがり
	;拘束を最優先に動き、VやAへの性攻撃、BCは少なめ
		LOCAL:3 = RAND:100
		SELECTCASE LOCAL:3
			CASE 0 TO 14
				LOCAL:2 = 398
			CASE 15 TO 29
				LOCAL:2 = 401
			CASE 30 TO 37
				LOCAL:2 = 399
			CASE 38 TO 45
				LOCAL:2 = 400
			CASE 46 TO 75
				LOCAL:2 = 554
			CASE 76 TO 85
				LOCAL:2 = 245
			CASE 85 TO 95
				LOCAL:2 = 158
			CASEELSE
				LOCAL:2 = 159
		ENDSELECT
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


