@SET_ENEMY_DATA_68(ARG:0, ARG:1)

DA:(ARG:0):1 = 6500
DA:(ARG:0):2 = 6500
DA:(ARG:0):3 = 1
DA:(ARG:0):5 = 30
DA:(ARG:0):9 = 80

DA:(ARG:0):15 = 90
DA:(ARG:0):16 = 0
DA:(ARG:0):17 = 10
DA:(ARG:0):18 = 60
DA:(ARG:0):19 = 20

;図鑑用触手データ
DA:(ARG:0):85 = 4
DA:(ARG:0):86 = 3

DA:(ARG:0):89 = 63


SAVESTR:(ARG:0) = %ENEMY_NAME(68)%

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_68(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;拘束している相手を攻撃
	ARG:1 = LOCAL:1
	LOCAL:3 = RAND:18
	IF LOCAL:3 < 4
		LOCAL:2 = 1037
	ELSE
		LOCAL:2 = 1051
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合開放
	LOCAL:2 = 1
ELSE
	;通常時
	;色々
	LOCAL:2 = 577
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


