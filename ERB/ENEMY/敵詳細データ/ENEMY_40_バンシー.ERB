;敵データ設定
;ARG:0	設定場所
;ARG:1	Reserved
@SET_ENEMY_DATA_40(ARG:0, ARG:1)

DA:(ARG:0):1 = 1600
DA:(ARG:0):2 = 1600
DA:(ARG:0):3 = 1
DA:(ARG:0):5 = 60
DA:(ARG:0):9 = 20

DA:(ARG:0):15 = 10
DA:(ARG:0):16 = 0
DA:(ARG:0):17 = 90
DA:(ARG:0):18 = 60
DA:(ARG:0):19 = 20



;図鑑用触手データ
DA:(ARG:0):85 = 1
DA:(ARG:0):86 = 1
DA:(ARG:0):89 = 25

IF RAND:2 == 0
	DA:(ARG:0):88 = 2
ENDIF

SAVESTR:(ARG:0) = %ENEMY_NAME(40)%

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_40(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 15
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:18
			IF LOCAL:3 < 2
				LOCAL:2 = 605
			ELSEIF LOCAL:3 < 5
				LOCAL:2 = 313
			ELSEIF LOCAL:3 < 6
				LOCAL:2 = 990
			ELSEIF LOCAL:3 < 7
				LOCAL:2 = 991
			ELSEIF LOCAL:3 < 8
				LOCAL:2 = 993
			ELSEIF LOCAL:3 < 9
				LOCAL:2 = 994
			ELSEIF LOCAL:3 < 10
				LOCAL:2 = 995
			ELSEIF LOCAL:3 < 11
				LOCAL:2 = 998
			ELSEIF LOCAL:3 < 12
				LOCAL:2 = 1005
			ELSEIF LOCAL:3 < 13
				LOCAL:2 = 1006
			ELSEIF LOCAL:3 < 14
				LOCAL:2 = 1007
			ELSEIF LOCAL:3 < 15
				LOCAL:2 = 1008
			ELSEIF LOCAL:3 < 16
				LOCAL:2 = 1009
			ELSE
				LOCAL:2 = 609
			ENDIF
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:10
		IF LOCAL:3 < 3
			LOCAL:2 = 310
		ELSEIF LOCAL:3 < 5
			LOCAL:2 = 313
		ELSEIF LOCAL:3 < 7
			LOCAL:2 = 2215
		ELSEIF LOCAL:3 < 9
			LOCAL:2 = 2117
		ELSE
			LOCAL:2 = 1914
		ENDIF
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:17
	IF LOCAL:3 < 3
		LOCAL:2 = 310
	ELSEIF LOCAL:3 < 7
		LOCAL:2 = 313
	ELSEIF LOCAL:3 < 13
		LOCAL:2 = 223
	ELSEIF LOCAL:3 < 14
		LOCAL:2 = 2215
	ELSEIF LOCAL:3 < 15
		LOCAL:2 = 2117
	ELSE
		LOCAL:2 = 100
	ENDIF
ELSE
	;通常時
	;色々
	LOCAL:3 = RAND:22

	IF LOCAL:3 < 3
		LOCAL:2 = 310
	ELSEIF LOCAL:3 < 5
		LOCAL:2 = 313
	ELSEIF LOCAL:3 < 7
		LOCAL:2 = 223
	ELSEIF LOCAL:3 < 9
		LOCAL:2 = 100
	ELSEIF LOCAL:3 < 11
		LOCAL:2 = 521
	ELSEIF LOCAL:3 < 13
		LOCAL:2 = 2215
	ELSEIF LOCAL:3 < 15
		LOCAL:2 = 2108
	ELSEIF LOCAL:3 < 17
		LOCAL:2 = 2117
	ELSEIF LOCAL:3 < 19
		LOCAL:2 = 2310
	ELSE
		LOCAL:2 = 1914
	ENDIF
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


