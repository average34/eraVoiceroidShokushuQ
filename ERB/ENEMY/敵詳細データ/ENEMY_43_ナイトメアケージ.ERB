;敵データ設定
;ARG:0	設定場所
;ARG:1	Reserved
@SET_ENEMY_DATA_43(ARG:0, ARG:1)

DA:(ARG:0):1 = 55000
DA:(ARG:0):2 = 55000
DA:(ARG:0):3 = 1
DA:(ARG:0):5 = 135
DA:(ARG:0):9 = 25

DA:(ARG:0):15 = 0
DA:(ARG:0):16 = 0
DA:(ARG:0):17 = 100
DA:(ARG:0):18 = 100
DA:(ARG:0):19 = 2


;図鑑用触手データ
DA:(ARG:0):85 = 32
DA:(ARG:0):86 = 7
DA:(ARG:0):89 = 15


SAVESTR:(ARG:0) = %ENEMY_NAME(43)%

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_43(ARG:0, ARG:1)
#DIM 拘束NF,100	;変数番号→拘束後にNFされたキャラID、格納数→NF進行度
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;前ターンでNFされ、今ターン開始時点でNFされた敵に拘束されたまま
	IF DA:(ARG:0):50 == 1201 && DA:(ARG:0):20 == LOCAL:1
		ARG:1 = LOCAL:1
		拘束NF:(ARG:0) = 2
	ELSE
		拘束NF:(ARG:0) = 0
	ENDIF
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 20
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:13
			SELECTCASE LOCAL:3
				CASE 0 TO 1
					LOCAL:2 = 617
				CASE 2 TO 3
					TRYCALL CALC_NIPPLE_FUCK(ARG:1, 3)
					IF RESULT:0 == 1
						LOCAL:2 = 1201
						;B寄生攻撃は拡張乳腺+以上が必要
						IF FLAG:516 > 0 && TALENT:(ARG:1):162 > 1
							SIF 拘束NF:(ARG:1) == 0
								拘束NF:(ARG:1) = 1
						ENDIF
					ELSE
						LOCAL:2 = 618
					ENDIF
				CASE 4 TO 5
					LOCAL:2 = 619
				CASE 6 TO 7
					LOCAL:2 = 620
				CASE 8
					LOCAL:2 = 1023
				CASEELSE
					LOCAL:2 = 809
			ENDSELECT
		ENDIF
		;B寄生攻撃フラグ
		IF 拘束NF:(ARG:0) == 2
			LOCAL:2 = 1202
			拘束NF:(ARG:0) = 0
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:13
		SELECTCASE LOCAL:3
		CASE 0 TO 2
			LOCAL:2 = 109
		CASE 3 TO 4
			LOCAL:2 = 110
		CASE 5 TO 8
			LOCAL:2 = 209
		CASE 9
			LOCAL:2 = 317
		CASE 10
			LOCAL:2 = 318
		CASE 11
			LOCAL:2 = 319
		CASEELSE
			LOCAL:2 = 320
		ENDSELECT
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:13
	SELECTCASE LOCAL:3
		CASE 0 TO 2
			LOCAL:2 = 109
		CASE 3 TO 4
			LOCAL:2 = 110
		CASE 5 TO 8
			LOCAL:2 = 209
		CASE 9
			LOCAL:2 = 317
		CASE 10
			LOCAL:2 = 318
		CASE 11
			LOCAL:2 = 319
		CASEELSE
			LOCAL:2 = 320
	ENDSELECT
ELSEIF BASE:(ARG:1):0 < 50
	;対象の体力がない場合拘束
	LOCAL:2 = 509
ELSE
	;通常時
	;色々
	LOCAL:3 = RAND:16
	SELECTCASE LOCAL:3
		CASE 0 TO 2
			LOCAL:2 = 109
		CASE 3 TO 4
			LOCAL:2 = 110
		CASE 5 TO 8
			LOCAL:2 = 209
		CASE 9
			LOCAL:2 = 317
		CASE 10
			LOCAL:2 = 318
		CASE 11
			LOCAL:2 = 319
		CASE 12
			LOCAL:2 = 320
		CASEELSE
			LOCAL:2 = 509
	ENDSELECT
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


