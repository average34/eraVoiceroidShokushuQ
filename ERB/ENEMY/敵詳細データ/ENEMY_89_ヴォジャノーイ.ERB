;敵データ設定
;ARG:0	設定場所
;ARG:1	Reserved
@SET_ENEMY_DATA_89(ARG:0, ARG:1)

DA:(ARG:0):1 = 3000
DA:(ARG:0):2 = 3000
DA:(ARG:0):3 = 0
DA:(ARG:0):5 = 70
DA:(ARG:0):9 = 5

DA:(ARG:0):15 = 10
DA:(ARG:0):16 = 80
DA:(ARG:0):17 = 10
DA:(ARG:0):18 = 50
DA:(ARG:0):19 = 70

DA:(ARG:0):14 = 0
DA:(ARG:0):43 = 120

;図鑑用触手データ
DA:(ARG:0):85 = 28
DA:(ARG:0):86 = 1
DA:(ARG:0):89 = 1

SAVESTR:(ARG:0) = %ENEMY_NAME(89)%

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_89(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

;ヴォジャノーイの命中上昇
DA:(ARG:0):18 += 4


IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	;拘束したキャラを攻撃させる
	IF ARG:1 > 0
		ARG:1 = LOCAL:1
	ENDIF
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 4
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:13
			IF LOCAL:3 < 2
				LOCAL:2 = 690
			ELSEIF LOCAL:3 < 4
				LOCAL:2 = 691
			ELSEIF LOCAL:3 < 7
				LOCAL:2 = 692
			ELSEIF LOCAL:3 < 9
				LOCAL:2 = 1000
			ELSE
				LOCAL:2 = 953
			ENDIF
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:12
		IF LOCAL:3 < 2
			LOCAL:2 = 149
		ELSEIF LOCAL:3 < 5
			LOCAL:2 = 950 + RAND:3
		ELSEIF LOCAL:3 < 7
			LOCAL:2 = 2307
		ELSEIF LOCAL:3 < 10
			LOCAL:2 = 2213
		ELSE
			LOCAL:2 = 2107
		ENDIF
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:12
	IF LOCAL:3 < 2
		LOCAL:2 = 149
	ELSEIF LOCAL:3 < 5
		LOCAL:2 = 950 + RAND:3
	ELSEIF LOCAL:3 < 7
		LOCAL:2 = 2307
	ELSEIF LOCAL:3 < 10
		LOCAL:2 = 2213
	ELSE
		LOCAL:2 = 2107
	ENDIF
ELSE
	;通常時
	;色々
	LOCAL:3 = RAND:15
	IF LOCAL:3 < 2
		LOCAL:2 = 149
	ELSEIF LOCAL:3 < 5
		LOCAL:2 = 950 + RAND:3
	ELSEIF LOCAL:3 < 7
		LOCAL:2 = 2307
	ELSEIF LOCAL:3 < 10
		LOCAL:2 = 2213
	ELSEIF LOCAL:3 < 12
		LOCAL:2 = 2107
	ELSE
		LOCAL:2 = 551
	ENDIF
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


