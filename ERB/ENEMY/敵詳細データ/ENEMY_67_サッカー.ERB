;敵データ設定
;ARG:0	設定場所
;ARG:1	Reserved
@SET_ENEMY_DATA_67(ARG:0, ARG:1)

DA:(ARG:0):1 = 12500
DA:(ARG:0):2 = 12500
DA:(ARG:0):3 = 1
DA:(ARG:0):5 = 60
DA:(ARG:0):9 = 80

DA:(ARG:0):15 = 90
DA:(ARG:0):16 = 0
DA:(ARG:0):17 = 10
DA:(ARG:0):18 = 70
DA:(ARG:0):19 = 20

;図鑑用触手データ
DA:(ARG:0):85 = 4
IF FLAG:507 > 0
	DA:(ARG:0):86 = 5
ELSE
	DA:(ARG:0):86 = 7
ENDIF
DA:(ARG:0):89 = 40


SAVESTR:(ARG:0) = %ENEMY_NAME(67)%

;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_67(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 20
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:18
			IF LOCAL:3 < 4
				LOCAL:2 = 187
			ELSEIF LOCAL:3 < 6
				LOCAL:2 = 1038
			ELSEIF LOCAL:3 < 10
				LOCAL:2 = 1039
			ELSEIF LOCAL:3 < 14
				LOCAL:2 = 1040
			ELSE
				LOCAL:2 = 1041
			ENDIF
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:10
		IF LOCAL:3 < 3
			LOCAL:2 = 186
		ELSEIF LOCAL:3 < 6
			LOCAL:2 = 952
		ELSE
			LOCAL:2 = 1037
		ENDIF
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:10
	IF LOCAL:3 < 3
		LOCAL:2 = 186
	ELSEIF LOCAL:3 < 6
		LOCAL:2 = 952
	ELSE
		LOCAL:2 = 1037
	ENDIF
ELSE
	;通常時
	;色々
	LOCAL:3 = RAND:13
	IF LOCAL:3 < 3
		LOCAL:2 = 186
	ELSEIF LOCAL:3 < 6
		LOCAL:2 = 554
	ELSEIF LOCAL:3 < 8
		LOCAL:2 = 952
	ELSE
		LOCAL:2 = 1037
	ENDIF
ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0


