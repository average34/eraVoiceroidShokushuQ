	DA:(ARG:0):1 = ABL:(ARG:1):98 * 100 + 5000
	DA:(ARG:0):2 = ABL:(ARG:1):98 * 100 + 5000
	DA:(ARG:0):3 = 1
	DA:(ARG:0):5 = 50 + ABL:(ARG:1):98 / 3
	DA:(ARG:0):9 = 90 + ABL:(ARG:1):97 / 3
	;●入れ替わりパッチ追加START
	DA:(ARG:0):49 = CFLAG:(ARG:1):104
	;●END
