;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_56(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF
LOCAL:4 = 0
IF DA:(ARG:0):10 == 1
	;１人目拘束
	LOCAL:4 = 1
ELSEIF FLAG:10 && DA:(ARG:0):10 == FLAG:10
	;２人目拘束
	LOCAL:4 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):10 == FLAG:11
	;３人目拘束
	LOCAL:4 = FLAG:11
ELSEIF DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:4 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1 || ARG:1 == LOCAL:4
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 15
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:100
			SELECTCASE LOCAL:3
				CASE 0 TO 39
					LOCAL:2 = 708
				CASE 40 TO 79
					LOCAL:2 = 709
				CASE 80 TO 89
					LOCAL:2 = 710
				CASEELSE
					LOCAL:2 = 858
			ENDSELECT
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:100
		SELECTCASE LOCAL:3
		CASE 0 TO 40
			LOCAL:2 = 161
		CASE 41 TO 60
			LOCAL:2 = 162
		CASE 60 TO 70
			LOCAL:2 = 245
		CASE 70 TO 85
			LOCAL:2 = 404
		CASEELSE
			LOCAL:2 = 405
		ENDSELECT
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
		LOCAL:3 = RAND:100
		SELECTCASE LOCAL:3
		CASE 0 TO 40
			LOCAL:2 = 161
		CASE 41 TO 60
			LOCAL:2 = 162
		CASE 60 TO 70
			LOCAL:2 = 245
		CASE 70 TO 85
			LOCAL:2 = 404
		CASEELSE
			LOCAL:2 = 405
		ENDSELECT
ELSE
	;通常時
	;色々
	LOCAL:3 = RAND:100
	SELECTCASE LOCAL:3
		CASE 0 TO 40
			LOCAL:2 = 161
		CASE 40 TO 60
			LOCAL:2 = 162
		CASE 60 TO 70
			LOCAL:2 = 404
		CASE 70 TO 80
			LOCAL:2 = 405
		CASEELSE
			LOCAL:2 = 556
	ENDSELECT
ENDIF

