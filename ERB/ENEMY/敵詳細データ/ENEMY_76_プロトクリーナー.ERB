;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_76(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用
;4	拘束フラグ２

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF
LOCAL:4 = 0
IF DA:(ARG:0):10 == 1
	;１人目拘束
	LOCAL:4 = 1
ELSEIF FLAG:10 && DA:(ARG:0):10 == FLAG:10
	;２人目拘束
	LOCAL:4 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):10 == FLAG:11
	;３人目拘束
	LOCAL:4 = FLAG:11
ELSEIF DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:4 = -1
ENDIF


IF LOCAL:1 > 0 || LOCAL:4 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には枠が無ければ拘束攻撃以外
	IF ARG:1 == LOCAL:1 || ARG:1 == LOCAL:4
		;拘束している相手を攻撃●２人拘束している場合の処理を追加。２人まとめて解放してしまうので。
		IF CFLAG:(ARG:1):29 && RAND:100 < 75 && (DA:(ARG:0):10 < 1 || DA:(ARG:0):20 < 1)
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			IF DA:(ARG:0):35
				LOCAL:3 = RAND:6
				IF LOCAL:3 < 3
					LOCAL:2 = 1870
				ELSE
					LOCAL:2 = 1872
				ENDIF
			ELSE
				LOCAL:3 = RAND:21
				IF LOCAL:3 < 3
					LOCAL:2 = 1870
				ELSEIF LOCAL:3 < 6
					LOCAL:2 = 1870
				ELSEIF LOCAL:3 < 9
					LOCAL:2 = 1870
				ELSEIF LOCAL:3 < 12
					LOCAL:2 = 1870
				ELSEIF LOCAL:3 < 15
					LOCAL:2 = 1872
				ELSEIF LOCAL:3 < 17
					LOCAL:2 = 1872
				ELSEIF LOCAL:3 < 19
					LOCAL:2 = 1872
				ELSE
					LOCAL:2 = 1872
				ENDIF
			ENDIF
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 70)
			LOCAL:3 = RAND:15
		ELSE
			LOCAL:3 = RAND:16
		ENDIF
		IF LOCAL:3 < 2
			LOCAL:2 = 1867
		ELSEIF LOCAL:3 < 4
			LOCAL:2 = 1868
		ELSEIF LOCAL:3 < 6
			LOCAL:2 = 1869
		ELSEIF LOCAL:3 < 9
			LOCAL:2 = 1868
		ELSEIF LOCAL:3 < 11
			LOCAL:2 = 1869
		ELSEIF LOCAL:3 < 12
			LOCAL:2 = 1868
		ELSEIF LOCAL:3 < 13
			LOCAL:2 = 1919
		ELSEIF LOCAL:3 < 14
			LOCAL:2 = 1919
		ELSE
			LOCAL:2 = 1919
		ENDIF
	ENDIF
ELSE
	;通常時
	IF CFLAG:(ARG:1):10 || CFLAG:(ARG:1):20 || (DA:(ARG:0):10 && DA:(ARG:0):20) || (CFLAG:(ARG:1):29 && RAND:100 < 70)
		LOCAL:3 = RAND:15
	ELSE
		IF BASE:(ARG:1):0 < MAXBASE:(ARG:1):0 / 2 || BASE:(ARG:1):2 < MAXBASE:(ARG:1):2 * 2 / 3
			LOCAL:3 = RAND:21
		ELSE
			LOCAL:3 = RAND:20
		ENDIF
	ENDIF
	IF LOCAL:3 < 2
		LOCAL:2 = 1867
	ELSEIF LOCAL:3 < 4
		LOCAL:2 = 1868
	ELSEIF LOCAL:3 < 6
		LOCAL:2 = 1869
	ELSEIF LOCAL:3 < 9
		LOCAL:2 = 1868
	ELSEIF LOCAL:3 < 11
		LOCAL:2 = 1869
	ELSEIF LOCAL:3 < 12
		LOCAL:2 = 1868
	ELSEIF LOCAL:3 < 13
		LOCAL:2 = 1919
	ELSEIF LOCAL:3 < 14
		LOCAL:2 = 1919
	ELSEIF LOCAL:3 < 15
		LOCAL:2 = 1919
	ELSEIF LOCAL:3 < 16
		LOCAL:2 = 1871
	ELSEIF LOCAL:3 < 18
		LOCAL:2 = 1871
	ELSE
		LOCAL:2 = 1871
	ENDIF
ENDIF





