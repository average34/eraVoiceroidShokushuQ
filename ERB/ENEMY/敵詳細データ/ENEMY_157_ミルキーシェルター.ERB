DA:(ARG:0):5 = 60
DA:(ARG:0):9 = 5

DA:(ARG:0):15 = 0
DA:(ARG:0):16 = 10
DA:(ARG:0):17 = 90
DA:(ARG:0):18 = 90
DA:(ARG:0):19 = 10

;耐性
DA:(ARG:0):40 = 130
DA:(ARG:0):41 = 75
DA:(ARG:0):42 = 25
DA:(ARG:0):43 = 75
DA:(ARG:0):44 = 75

;図鑑用触手データ
DA:(ARG:0):85 = 16
DA:(ARG:0):86 = 5
DA:(ARG:0):89 = 4


SAVESTR:(ARG:0) = %ENEMY_NAME(157)%


;戦闘中の行動決定
;ARG:0	設定場所
;ARG:1	対象キャラ
@SELECT_ENEMY_ACTION_157(ARG:0, ARG:1)
;LOCAL
;0	LOOP
;1	拘束フラグ
;2	選択コマンド
;3	確率計算用

LOCAL:2 = 0

;誰かを拘束しているかチェック
LOCAL:1 = 0
IF DA:(ARG:0):20 == 1
	;１人目拘束
	LOCAL:1 = 1
ELSEIF FLAG:10 && DA:(ARG:0):20 == FLAG:10
	;２人目拘束
	LOCAL:1 = FLAG:10
ELSEIF FLAG:11 && DA:(ARG:0):20 == FLAG:11
	;３人目拘束
	LOCAL:1 = FLAG:11
ELSEIF DA:(ARG:0):20 > 0 || DA:(ARG:0):10 > 0
	;PT外メンバー拘束
	LOCAL:1 = -1
ENDIF


;賢い敵なら相手の状態に合わせてコマンド選んだりさせたい
;頭が悪そうな敵も多いので、基本はランダムで良いと思うけど

IF LOCAL:1 > 0
	;PTメンバーを拘束している場合
	;拘束相手には強性攻撃・寄生攻撃・戦意喪失済みなら解放　が選択肢
	;それ以外の相手には拘束攻撃以外
	IF ARG:1 == LOCAL:1
		;拘束している相手を攻撃
		IF CFLAG:(ARG:1):29 && RAND:100 < 20
			;既に戦意喪失している場合、一定確率で解放する
			LOCAL:2 = 1
		ELSE
			LOCAL:3 = RAND:8
			IF LOCAL:3 < 1
				LOCAL:2 = 2602
			ELSEIF LOCAL:3 < 2
				LOCAL:2 = 2602
			ELSEIF LOCAL:3 < 3
				LOCAL:2 = 2602
			ELSEIF LOCAL:3 < 4
				LOCAL:2 = 2602
			ELSEIF LOCAL:3 < 5
				LOCAL:2 = 2603
			ELSEIF LOCAL:3 < 6
				LOCAL:2 = 2603
			ELSEIF LOCAL:3 < 7
				LOCAL:2 = 2603
			ELSE
				LOCAL:2 = 2603
			ENDIF

			;服が多いとき用
			IF BASE:(ARG:1):3 > 250 && RAND:2 == 0
				LOCAL:2 = 2628
			ENDIF
		ENDIF
	ELSE
		;キャラを拘束中だが、別のキャラを攻撃
		LOCAL:3 = RAND:8
		IF LOCAL:3 < 1
			LOCAL:2 = 2204
		ELSEIF LOCAL:3 < 2
			LOCAL:2 = 2204
		ELSEIF LOCAL:3 < 3
			LOCAL:2 = 2204
		ELSEIF LOCAL:3 < 4
			LOCAL:2 = 2951
		ELSEIF LOCAL:3 < 5
			LOCAL:2 = 2951
		ELSEIF LOCAL:3 < 6
			LOCAL:2 = 2951
		ELSEIF LOCAL:3 < 7
			LOCAL:2 = 2951
		ELSE
			LOCAL:2 = 2951
		ENDIF
	ENDIF
ELSEIF LOCAL:1 < 0
	;PT外メンバーを拘束している場合
	;PTには拘束攻撃以外
	LOCAL:3 = RAND:8
	IF LOCAL:3 < 1
		LOCAL:2 = 2204
	ELSEIF LOCAL:3 < 2
		LOCAL:2 = 2204
	ELSEIF LOCAL:3 < 3
		LOCAL:2 = 2204
	ELSEIF LOCAL:3 < 4
		LOCAL:2 = 2204
	ELSEIF LOCAL:3 < 5
		LOCAL:2 = 2951
	ELSEIF LOCAL:3 < 6
		LOCAL:2 = 2951
	ELSEIF LOCAL:3 < 7
		LOCAL:2 = 2951
	ELSE
		LOCAL:2 = 2951
	ENDIF
ELSE
	;通常時
	;色々
	LOCAL:3 = RAND:8
	IF LOCAL:3 < 1
		LOCAL:2 = 2951
	ELSEIF LOCAL:3 < 2
		LOCAL:2 = 2951
	ELSEIF LOCAL:3 < 3
		LOCAL:2 = 2951
	ELSEIF LOCAL:3 < 4
		LOCAL:2 = 2204
	ELSEIF LOCAL:3 < 5
		LOCAL:2 = 2204
	ELSEIF LOCAL:3 < 6
		LOCAL:2 = 2503
	ELSEIF LOCAL:3 < 7
		LOCAL:2 = 2503
	ELSE
		LOCAL:2 = 2503
	ENDIF

	;服がないと拘束攻撃率が増加
	IF BASE:(ARG:1):3 < 100 && RAND:8 == 0
		LOCAL:2 = 2503
	ENDIF

	;回避低下相手には拘束攻撃率が増加
	IF CFLAG:(ARG:1):302 > 0 && (LOCAL:2 == 2951 || RAND:8 == 0)
		LOCAL:2 = 2503
	ENDIF

	;格上相手には拘束攻撃率が増加
	IF ABL:(ARG:1):98 > 74 && RAND:8 == 0
		LOCAL:2 = 2503
	ENDIF


ENDIF

;ここまで来たら確定
DA:(ARG:0):50 = LOCAL:2
DA:(ARG:0):51 = ARG:1
DA:(ARG:0):52 = 0
